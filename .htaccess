# =====================================================
# MEDEDUL - CONFIGURACION .htaccess
# Mesas de Dulces CDMX
# URLs limpias sin extension .html
# =====================================================

# Activar RewriteEngine
RewriteEngine On

# =====================================================
# ELIMINAR EXTENSION .HTML DE LAS URLs
# =====================================================

# 1. Redirigir URLs con .html a versiones sin extension (301)
# Excluir archivos especiales que deben mantener .html
RewriteCond %{THE_REQUEST} \s/+(.+?)\.html[\s?] [NC]
RewriteCond %{REQUEST_URI} !^/404\.html$ [NC]
RewriteCond %{REQUEST_URI} !^/google68f59ec7686036d5\.html$ [NC]
RewriteRule ^ /%1 [R=301,L,NE]

# 2. Servir archivo .html cuando se solicita URL sin extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.+?)/?$ $1.html [L]

# =====================================================
# ELIMINAR BARRAS MULTIPLES EN LA URL
# =====================================================
# Redirige URLs con // o /// o //// a la URL correcta con una sola /

# Metodo 1: Captura barras multiples al inicio
RewriteCond %{THE_REQUEST} \s/{2,}
RewriteCond %{REQUEST_URI} ^/{2,}(.*)$
RewriteRule . /%1 [R=301,L,NE]

# Metodo 2: Normaliza barras multiples en cualquier parte de la URL
RewriteCond %{REQUEST_URI} ^(.*)//(.*)$
RewriteRule . %1/%2 [R=301,L,NE]

# Metodo 3: Redirigir la raiz con multiples barras
RewriteCond %{THE_REQUEST} \s/+\s
RewriteRule ^ / [R=301,L]

# =====================================================
# PAGINA DE ERROR 404 PERSONALIZADA
# =====================================================
ErrorDocument 404 /404.html

# =====================================================
# FORZAR HTTPS
# =====================================================
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

