# =====================================================
# MEDEDUL - CONFIGURACION .htaccess
# Mesas de Dulces CDMX
# =====================================================

# Activar RewriteEngine
RewriteEngine On

# =====================================================
# PAGINA DE ERROR 404 PERSONALIZADA
# =====================================================
ErrorDocument 404 /404.html

# =====================================================
# FORZAR HTTPS (descomentar en produccion)
# =====================================================
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# =====================================================
# REDIRECCIONES 301 - PRODUCTOS ELIMINADOS
# =====================================================

# Productos eliminados -> Pagina principal de servicios
Redirect 301 /producto/candy-bar-bodas-de-oro-con-postres-finos-para-primavera/ /candy-bar-eventos/
Redirect 301 /producto/candy-bar-para-eventos-de-negocios-concepto-visual-en-cdmx/ /candy-bar-eventos/
Redirect 301 /producto/mesa-de-dulces-para-boda-elegante/ /candy-bar-eventos/mesa-dulces-boda.html
Redirect 301 /producto/candy-bar-para-xv-anos/ /candy-bar-eventos/mesa-dulces-xv-anos.html
Redirect 301 /producto/mesa-de-dulces-baby-shower/ /candy-bar-eventos/mesa-dulces-baby-shower.html

# Redireccion generica para todos los productos eliminados
RedirectMatch 301 ^/producto/(.*)$ /candy-bar-eventos/

# =====================================================
# REDIRECCIONES 301 - ETIQUETAS DE PRODUCTO
# =====================================================

Redirect 301 /etiqueta-producto/mesas-de-dulces-modernas/ /tipos-de-mesas-de-dulces.html
Redirect 301 /etiqueta-producto/mesas-de-dulces-para-inauguraciones/ /candy-bar-eventos/mesa-dulces-corporativos.html
Redirect 301 /etiqueta-producto/mesas-de-postres-y-salados/ /tipos-de-mesas-de-dulces/mesa-de-postres.html
Redirect 301 /etiqueta-producto/candy-bar-bodas/ /candy-bar-eventos/mesa-dulces-boda.html
Redirect 301 /etiqueta-producto/mesas-dulces-xv-anos/ /candy-bar-eventos/mesa-dulces-xv-anos.html

# Redireccion generica para todas las etiquetas de producto
RedirectMatch 301 ^/etiqueta-producto/(.*)$ /tipos-de-mesas-de-dulces.html

# =====================================================
# REDIRECCIONES 301 - CATEGORIAS ANTIGUAS
# =====================================================

Redirect 301 /categoria/bodas/ /candy-bar-eventos/mesa-dulces-boda.html
Redirect 301 /categoria/xv-anos/ /candy-bar-eventos/mesa-dulces-xv-anos.html
Redirect 301 /categoria/baby-shower/ /candy-bar-eventos/mesa-dulces-baby-shower.html
Redirect 301 /categoria/corporativos/ /candy-bar-eventos/mesa-dulces-corporativos.html
Redirect 301 /categoria/infantiles/ /candy-bar-eventos/mesa-dulces-cumpleanos-infantil.html

# Redireccion generica para categorias
RedirectMatch 301 ^/categoria/(.*)$ /candy-bar-eventos/

# =====================================================
# REDIRECCIONES 301 - PAGINAS ANTIGUAS
# =====================================================

Redirect 301 /nosotros/ /nosotros.html
Redirect 301 /contacto/ /contacto.html
Redirect 301 /servicios/ /servicios.html
Redirect 301 /galeria/ /
Redirect 301 /portafolio/ /
Redirect 301 /about/ /nosotros.html
Redirect 301 /contact/ /contacto.html

# =====================================================
# REDIRECCIONES - INDEX.HTML A RAIZ
# =====================================================

RewriteCond %{THE_REQUEST} /index\.html [NC]
RewriteRule ^(.*)index\.html$ /$1 [R=301,L]

# =====================================================
# TRAILING SLASH - Agregar / al final de directorios
# =====================================================

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !(.*)/$
RewriteCond %{REQUEST_URI} !\.[a-zA-Z0-9]{1,5}$
RewriteRule ^(.*)$ $1/ [R=301,L]

# =====================================================
# COMPRESION GZIP
# =====================================================

<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# =====================================================
# CACHE DEL NAVEGADOR
# =====================================================

<IfModule mod_expires.c>
    ExpiresActive On

    # Imagenes - 1 ano
    ExpiresByType image/avif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"

    # Fuentes - 1 ano
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"

    # CSS y JS - 1 mes
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"

    # HTML - 1 dia
    ExpiresByType text/html "access plus 1 day"

    # Default
    ExpiresDefault "access plus 1 week"
</IfModule>

# =====================================================
# HEADERS DE SEGURIDAD
# =====================================================

<IfModule mod_headers.c>
    # Prevenir clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"

    # Prevenir MIME type sniffing
    Header always set X-Content-Type-Options "nosniff"

    # XSS Protection
    Header always set X-XSS-Protection "1; mode=block"

    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"

    # Cache para imagenes AVIF
    <FilesMatch "\.(avif)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
</IfModule>

# =====================================================
# TIPOS MIME
# =====================================================

<IfModule mod_mime.c>
    AddType image/avif .avif
    AddType image/webp .webp
    AddType font/woff .woff
    AddType font/woff2 .woff2
    AddType application/json .json
    AddType application/ld+json .jsonld
</IfModule>

# =====================================================
# PROTEGER ARCHIVOS SENSIBLES
# =====================================================

<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

<FilesMatch "\.(env|log|ini|config)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# =====================================================
# FIN DE CONFIGURACION
# =====================================================
