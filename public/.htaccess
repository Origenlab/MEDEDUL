# =====================================================
# MEDEDUL - CONFIGURACION .htaccess PARA ASTRO
# Mesas de Dulces CDMX
# =====================================================

# Activar RewriteEngine
RewriteEngine On

# =====================================================
# FORZAR HTTPS
# =====================================================
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# =====================================================
# REDIRECT .HTML A CLEAN URLs
# /blog/slug.html -> /blog/slug/
# =====================================================
RewriteCond %{THE_REQUEST} \s/+(.+?)\.html[\s?] [NC]
RewriteCond %{REQUEST_URI} !^/404\.html$ [NC]
RewriteRule ^ /%1/ [R=301,L,NE]

# =====================================================
# TRAILING SLASH - Agregar / al final si no existe
# /blog/slug -> /blog/slug/
# =====================================================
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !/$
RewriteCond %{REQUEST_URI} !\.
RewriteRule ^(.*)$ /$1/ [R=301,L]

# =====================================================
# SERVIR index.html DESDE DIRECTORIOS
# /blog/slug/ -> /blog/slug/index.html
# =====================================================
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} /$
RewriteCond %{DOCUMENT_ROOT}%{REQUEST_URI}index.html -f
RewriteRule ^(.*)$ $1index.html [L]

# =====================================================
# REDIRECT /blog/articulos/ -> /blog/
# (Estructura antigua a nueva)
# =====================================================
RewriteRule ^blog/articulos/(.*)$ /blog/$1 [R=301,L]

# =====================================================
# PAGINA DE ERROR 404 PERSONALIZADA
# =====================================================
ErrorDocument 404 /404.html

# =====================================================
# ELIMINAR BARRAS MULTIPLES
# =====================================================
RewriteCond %{REQUEST_URI} ^(.*)//(.*)$
RewriteRule . %1/%2 [R=301,L,NE]

# =====================================================
# REDIRECCIONES 301 - ESTRUCTURA ANTIGUA
# =====================================================

# Paginas principales (con o sin trailing slash)
Redirect 301 /nosotros.html /nosotros/
Redirect 301 /contacto.html /contacto/
Redirect 301 /servicios.html /servicios/
Redirect 301 /galeria/ /
Redirect 301 /portafolio/ /
Redirect 301 /about/ /nosotros/
Redirect 301 /contact/ /contacto/

# Productos eliminados -> Servicios
RedirectMatch 301 ^/producto/(.*)$ /servicios/

# Etiquetas de producto
RedirectMatch 301 ^/etiqueta-producto/(.*)$ /servicios/

# Categorias antiguas
Redirect 301 /categoria/bodas/ /blog/categoria/bodas/
Redirect 301 /categoria/xv-anos/ /blog/categoria/xv-anos/
Redirect 301 /categoria/baby-shower/ /blog/categoria/baby-shower/
Redirect 301 /categoria/corporativos/ /blog/categoria/corporativos/
Redirect 301 /categoria/infantiles/ /blog/categoria/fiestas-infantiles/
RedirectMatch 301 ^/categoria/(.*)$ /blog/

# Tags antiguos
RedirectMatch 301 ^/tag/(.*)$ /blog/

# =====================================================
# COMPRESION GZIP
# =====================================================

<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# =====================================================
# CACHE DEL NAVEGADOR
# =====================================================

<IfModule mod_expires.c>
    ExpiresActive On

    # Imagenes - 1 ano
    ExpiresByType image/avif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"

    # Fuentes - 1 ano
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"

    # CSS y JS - 1 ano (Astro genera hashes unicos)
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"

    # HTML - 1 dia
    ExpiresByType text/html "access plus 1 day"

    # Default
    ExpiresDefault "access plus 1 week"
</IfModule>

# =====================================================
# HEADERS DE SEGURIDAD
# =====================================================

<IfModule mod_headers.c>
    # Prevenir clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"

    # Prevenir MIME type sniffing
    Header always set X-Content-Type-Options "nosniff"

    # XSS Protection
    Header always set X-XSS-Protection "1; mode=block"

    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"

    # Cache para assets con hash (inmutables)
    <FilesMatch "\.[a-f0-9]{8}\.(js|css)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>

    # Cache para imagenes
    <FilesMatch "\.(avif|webp|jpg|jpeg|png|gif|ico)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
</IfModule>

# =====================================================
# TIPOS MIME
# =====================================================

<IfModule mod_mime.c>
    AddType image/avif .avif
    AddType image/webp .webp
    AddType font/woff .woff
    AddType font/woff2 .woff2
    AddType application/json .json
    AddType application/ld+json .jsonld
</IfModule>

# =====================================================
# PROTEGER ARCHIVOS SENSIBLES
# =====================================================

<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

<FilesMatch "\.(env|log|ini|config|md|mdx)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# =====================================================
# PRECONNECT CDN (via Link header)
# =====================================================

<IfModule mod_headers.c>
    Header add Link "<https://e2pex68gctc.exactdn.com>; rel=preconnect"
    Header add Link "<https://fonts.googleapis.com>; rel=preconnect"
    Header add Link "<https://fonts.gstatic.com>; rel=preconnect; crossorigin"
</IfModule>

# =====================================================
# FIN DE CONFIGURACION
# =====================================================
