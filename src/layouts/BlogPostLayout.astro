  }

  .cta-secondary {
    background: #fff;
    color: #1a1a1a;
    border: 1px solid #ddd;
  }

  .cta-note {
    font-size: 0.85rem;
    color: #888;
    margin: 0;
  }

  /* ========================================
     SIDEBAR - Enhanced Design
     ======================================== */
  .article-sidebar {
    position: relative;
  }

  .sidebar-inner {
    position: sticky;
    top: 140px;
    display: flex;
    flex-direction: column;
    gap: 18px;
  }

  .sidebar-card {
    background: #fff;
    border-radius: 14px;
    padding: 22px;
    box-shadow: 0 2px 12px rgba(0,0,0,0.06);
    border: 1px solid #f0f0f0;
  }

  .sidebar-title {
    font-size: 0.95rem;
    font-weight: 700;
    color: #1a1a1a;
    margin: 0 0 14px;
    padding-bottom: 10px;
    border-bottom: 2px solid #f0f0f0;
  }

  .sidebar-subtitle {
    font-size: 0.8rem;
    color: #888;
    margin: -8px 0 12px;
  }

  .sidebar-section-title {
    font-size: 0.9rem;
    font-weight: 700;
    color: #1a1a1a;
    margin: 0 0 14px;
    padding-bottom: 8px;
    border-bottom: 2px solid #f0f0f0;
  }

  /* Service Cards */
  .sidebar-services-cards {
    display: flex;
    flex-direction: column;
    gap: 14px;
  }

  .service-card {
    display: block;
    background: #fff;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 12px rgba(0,0,0,0.06);
    border: 1px solid #f0f0f0;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .service-card:hover {
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    border-color: #D1007A;
  }

  .service-card-image {
    position: relative;
    height: 120px;
    overflow: hidden;
  }

  .service-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .service-card:hover .service-card-image img {
    transform: scale(1.05);
  }

  .service-card-badge {
    position: absolute;
    top: 10px;
    left: 10px;
    background: linear-gradient(135deg, #D1007A 0%, #A0005F 100%);
    color: #fff;
    padding: 4px 10px;
    border-radius: 20px;
    font-size: 0.65rem;
