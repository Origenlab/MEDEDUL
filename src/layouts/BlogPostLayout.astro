  }

  .faq-item.active .faq-answer {
    max-height: 500px;
  }

  .faq-answer p {
    padding: 28px 32px;
    color: #555;
    line-height: 1.85;
    margin: 0;
    font-size: 1.02rem;
    text-align: left;
    max-width: 90%;
    margin-left: auto;
    margin-right: auto;
  }

  /* ========================================
     ARTICLE CTA BOX - Dise√±o Limpio
     ======================================== */
  .article-cta-box {
    margin-top: 60px;
    padding: 45px 40px;
    background: #f8f9fa;
    border-radius: 16px;
    text-align: center;
    border: 1px solid #e9ecef;
  }

  .article-cta-box h3 {
    font-size: 1.5rem;
    margin: 0 0 12px;
