    color: #1a1a1a;
    text-align: left;
  }

  .faq-question .icon {
    font-size: 1.4rem;
    color: #D1007A;
    transition: transform 0.3s ease;
  }

  .faq-item.active .faq-question .icon {
    transform: rotate(45deg);
  }

  .faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
