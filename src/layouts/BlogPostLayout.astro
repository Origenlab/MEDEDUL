              ))}
            </div>

            <!-- Mesas para Eventos -->
            <div class="sidebar-card">
              <h4 class="sidebar-title">Mesas para Eventos</h4>
              <div class="eventos-list">
                {serviciosEventos.map(s => (
                  <a href={s.url} class="evento-link" style={`--evento-color: ${s.color}`}>
