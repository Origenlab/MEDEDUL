---
// Servicios Page
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/seo/Breadcrumbs.astro';
import JsonLd from '@/components/seo/JsonLd.astro';
import { getCdnUrl } from '@/lib/cdn';

const breadcrumbItems = [
  { name: 'Servicios', url: '/servicios' }
];

const services = [
  {
    title: 'Mesa de Dulces para Bodas',
    description: 'Elegancia y sofisticación para el día más importante. Diseños personalizados que complementan tu temática.',
    image: '/img/galeria/candy-bar-boda-rosa-dorado-elegante-peonias.avif',
    features: ['Diseño personalizado', 'Dulces premium', 'Montaje y desmontaje', 'Coordinación con venue'],
    link: '/blog/categoria/bodas'
  },
  {
    title: 'Mesa de Dulces para XV Años',
    description: 'Celebra la transición a la juventud con una mesa de dulces digna de una princesa.',
    image: '/img/galeria/candy-bar-tema-princesa-castillo-rosa.avif',
    features: ['Temáticas creativas', 'Colores personalizados', 'Estaciones interactivas', 'Dulces para todas las edades'],
    link: '/blog/categoria/xv-anos'
  },
  {
    title: 'Mesa de Dulces para Baby Shower',
    description: 'Dulzura y ternura para dar la bienvenida al nuevo integrante de la familia.',
    image: '/img/galeria/candy-bar-baby-shower-rosa-osos.avif',
    features: ['Decoración tierna', 'Dulces temáticos', 'Recuerdos personalizados', 'Opciones para reveal'],
    link: '/blog/categoria/baby-shower'
  },
  {
    title: 'Mesa de Dulces Corporativos',
    description: 'Impresiona a tus clientes y colaboradores con experiencias dulces profesionales.',
    image: '/img/galeria/candy-bar-empresarial-moderno-minimalista.avif',
    features: ['Branding personalizado', 'Logo en dulces', 'Facturación fiscal', 'Servicio express'],
    link: '/blog/categoria/corporativos'
  },
  {
    title: 'Mesa de Dulces Infantiles',
    description: 'Diversión y color para los más pequeños. Mesas seguras y llenas de magia.',
    image: '/img/eventos/cumpleanos/infantiles/candy-bar-infantil-colorido.avif',
    features: ['Dulces seguros por edad', 'Temas de personajes', 'Colores vibrantes', 'Opciones sin alérgenos'],
    link: '/blog/categoria/fiestas-infantiles'
  },
  {
    title: 'Fuente de Chocolate',
    description: 'El complemento perfecto para cualquier evento. Chocolate premium con frutas y más.',
    image: '/img/galeria/fuente-chocolate-frutas-eventos.avif',
    features: ['Chocolate belga', 'Frutas frescas', 'Malvaviscos y más', 'Operador incluido'],
    link: '/blog'
  }
];

const packages = [
  {
    name: 'Esencial',
    price: 'Desde $4,500',
    guests: '30-50 personas',
    features: [
      '6-8 variedades de dulces',
      'Montaje básico',
      'Mantelería incluida',
      '2 horas de servicio',
      'Contenedores de cristal'
    ],
    popular: false
  },
  {
    name: 'Premium',
    price: 'Desde $7,500',
    guests: '50-100 personas',
    features: [
      '10-12 variedades de dulces',
      'Diseño personalizado',
      'Backdrop decorativo',
      '4 horas de servicio',
      'Dulces artesanales',
      'Coordinación con venue'
    ],
    popular: true
  },
  {
    name: 'Luxury',
    price: 'Desde $12,000',
    guests: '100+ personas',
    features: [
      '15+ variedades de dulces',
      'Diseño exclusivo',
      'Estación interactiva',
      'Servicio completo',
      'Dulces premium importados',
      'Fotografía de la mesa',
      'Operador dedicado'
    ],
    popular: false
  }
];
---

<BaseLayout
  title="Servicios de Mesas de Dulces para Eventos | Mededul CDMX"
  description="Servicios profesionales de mesas de dulces para bodas, XV años, baby shower, eventos corporativos y fiestas infantiles en Ciudad de México. Cotiza gratis."
>
  <JsonLd type="Service" />

  <div class="header-spacer"></div>

  <Breadcrumbs items={breadcrumbItems} />

  <!-- Hero Section -->
  <section class="services-hero">
    <div class="container">
      <h1>Nuestros Servicios</h1>
      <p class="hero-subtitle">
        Mesas de dulces profesionales para todo tipo de eventos.
        Diseño, montaje y servicio de principio a fin.
      </p>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="services-section">
    <div class="container">
      <div class="services-grid">
        {services.map(service => (
          <article class="service-card">
            <div class="service-image">
              <img
                src={getCdnUrl(service.image)}
                alt={service.title}
                width="400"
                height="300"
                loading="lazy"
              />
            </div>
            <div class="service-content">
              <h3>{service.title}</h3>
              <p>{service.description}</p>
              <ul class="service-features">
                {service.features.map(feature => (
                  <li>
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="20 6 9 17 4 12"/>
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
              <a href={service.link} class="service-link">Ver más</a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Packages Section -->
  <section class="packages-section">
    <div class="container">
      <span class="section-tag">Paquetes</span>
      <h2>Elige tu Paquete Ideal</h2>
      <p class="packages-intro">
        Todos nuestros paquetes incluyen diseño personalizado, dulces de alta calidad
        y servicio profesional. Los precios son referenciales y pueden variar según
        ubicación y requerimientos específicos.
      </p>

      <div class="packages-grid">
        {packages.map(pkg => (
          <div class={`package-card ${pkg.popular ? 'popular' : ''}`}>
            {pkg.popular && <span class="popular-badge">Más Popular</span>}
            <h3>{pkg.name}</h3>
            <div class="package-price">{pkg.price}</div>
            <div class="package-guests">{pkg.guests}</div>
            <ul class="package-features">
              {pkg.features.map(feature => (
                <li>
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20 6 9 17 4 12"/>
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
            <a href="/contacto" class="package-cta">Cotizar</a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="process-section">
    <div class="container">
      <span class="section-tag">Proceso</span>
      <h2>¿Cómo Trabajamos?</h2>

      <div class="process-grid">
        <div class="process-step">
          <div class="step-number">1</div>
          <h4>Consulta Inicial</h4>
          <p>Cuéntanos sobre tu evento, fecha, número de invitados y visión. Es gratis y sin compromiso.</p>
        </div>
        <div class="process-step">
          <div class="step-number">2</div>
          <h4>Propuesta Personalizada</h4>
          <p>Diseñamos una propuesta única con opciones de dulces, decoración y presupuesto detallado.</p>
        </div>
        <div class="process-step">
          <div class="step-number">3</div>
          <h4>Confirmación</h4>
          <p>Aprobamos los detalles finales, firmamos contrato y agendamos tu evento.</p>
        </div>
        <div class="process-step">
          <div class="step-number">4</div>
          <h4>Montaje y Evento</h4>
          <p>Llegamos antes de tu evento, montamos la mesa y nos aseguramos de que todo sea perfecto.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="services-cta">
    <div class="container">
      <h2>¿Listo para endulzar tu evento?</h2>
      <p>Cotiza gratis y sin compromiso. Te respondemos en menos de 24 horas.</p>
      <div class="cta-buttons">
        <a href="/contacto" class="btn btn-primary">Cotizar Ahora</a>
        <a href="https://wa.me/525525226442" target="_blank" rel="noopener noreferrer" class="btn btn-whatsapp">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z"/>
          </svg>
          WhatsApp Directo
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .services-hero {
    background: linear-gradient(135deg, var(--rosa-principal) 0%, #c4177a 50%, #a01365 100%);
    padding: 80px 0;
    text-align: center;
    color: #ffffff;
  }

  .services-hero h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: 800;
    margin-bottom: 20px;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    opacity: 0.95;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.7;
  }

  .section-tag {
    display: inline-block;
    background: linear-gradient(135deg, rgba(233, 30, 140, 0.1) 0%, rgba(255, 107, 179, 0.1) 100%);
    color: var(--rosa-principal);
    padding: 8px 20px;
    border-radius: 50px;
    font-size: 0.85rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 15px;
  }

  .services-section {
    padding: 80px 0;
    background: var(--gris-claro);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }

  .service-card {
    background: #ffffff;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.06);
    transition: all 0.3s ease;
  }

  .service-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 40px rgba(233, 30, 140, 0.15);
  }

  .service-image {
    height: 200px;
    overflow: hidden;
  }

  .service-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .service-card:hover .service-image img {
    transform: scale(1.1);
  }

  .service-content {
    padding: 25px;
  }

  .service-content h3 {
    font-size: 1.3rem;
    color: var(--texto-oscuro);
    margin-bottom: 10px;
  }

  .service-content > p {
    color: var(--texto-light);
    line-height: 1.6;
    margin-bottom: 20px;
  }

  .service-features {
    list-style: none;
    padding: 0;
    margin: 0 0 20px 0;
  }

  .service-features li {
    display: flex;
    align-items: center;
    gap: 10px;
    color: var(--texto-light);
    font-size: 0.9rem;
    margin-bottom: 8px;
  }

  .service-features svg {
    color: var(--rosa-principal);
    flex-shrink: 0;
  }

  .service-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: var(--rosa-principal);
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .service-link:hover {
    color: var(--rosa-hover);
    transform: translateX(5px);
  }

  .packages-section {
    padding: 80px 0;
    background: #ffffff;
    text-align: center;
  }

  .packages-section h2 {
    font-size: 2.2rem;
    color: var(--texto-oscuro);
    margin-bottom: 15px;
  }

  .packages-intro {
    color: var(--texto-light);
    max-width: 700px;
    margin: 0 auto 50px;
    line-height: 1.7;
  }

  .packages-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    max-width: 1100px;
    margin: 0 auto;
  }

  .package-card {
    background: var(--gris-claro);
    border-radius: 20px;
    padding: 40px 30px;
    position: relative;
    transition: all 0.3s ease;
  }

  .package-card.popular {
    background: linear-gradient(135deg, var(--rosa-principal) 0%, #a01365 100%);
    color: #ffffff;
    transform: scale(1.05);
    z-index: 1;
  }

  .popular-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: #FFD700;
    color: #000;
    padding: 6px 20px;
    border-radius: 50px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
  }

  .package-card h3 {
    font-size: 1.5rem;
    margin-bottom: 10px;
  }

  .package-price {
    font-size: 1.8rem;
    font-weight: 800;
    margin-bottom: 5px;
  }

  .package-guests {
    font-size: 0.9rem;
    opacity: 0.8;
    margin-bottom: 25px;
  }

  .package-features {
    list-style: none;
    padding: 0;
    margin: 0 0 30px 0;
    text-align: left;
  }

  .package-features li {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 12px;
    font-size: 0.95rem;
  }

  .package-features svg {
    flex-shrink: 0;
  }

  .package-card:not(.popular) .package-features li {
    color: var(--texto-light);
  }

  .package-card:not(.popular) .package-features svg {
    color: var(--rosa-principal);
  }

  .package-cta {
    display: block;
    width: 100%;
    padding: 16px;
    border-radius: 50px;
    font-weight: 600;
    text-decoration: none;
    text-align: center;
    transition: all 0.3s ease;
  }

  .package-card:not(.popular) .package-cta {
    background: var(--rosa-principal);
    color: #ffffff;
  }

  .package-card.popular .package-cta {
    background: #ffffff;
    color: var(--rosa-principal);
  }

  .package-cta:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.2);
  }

  .process-section {
    padding: 80px 0;
    background: var(--gris-claro);
    text-align: center;
  }

  .process-section h2 {
    font-size: 2.2rem;
    color: var(--texto-oscuro);
    margin-bottom: 50px;
  }

  .process-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 30px;
    max-width: 1100px;
    margin: 0 auto;
  }

  .process-step {
    text-align: center;
  }

  .step-number {
    width: 60px;
    height: 60px;
    background: var(--rosa-principal);
    color: #ffffff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 800;
    margin: 0 auto 20px;
  }

  .process-step h4 {
    font-size: 1.1rem;
    color: var(--texto-oscuro);
    margin-bottom: 10px;
  }

  .process-step p {
    color: var(--texto-light);
    line-height: 1.6;
    font-size: 0.95rem;
  }

  .services-cta {
    padding: 80px 0;
    background: linear-gradient(135deg, #1a1a2e 0%, #2d2d44 100%);
    text-align: center;
    color: #ffffff;
  }

  .services-cta h2 {
    font-size: 2rem;
    margin-bottom: 15px;
  }

  .services-cta p {
    font-size: 1.1rem;
    opacity: 0.9;
    margin-bottom: 30px;
  }

  .cta-buttons {
    display: flex;
    justify-content: center;
    gap: 20px;
    flex-wrap: wrap;
  }

  .cta-buttons .btn {
    padding: 16px 35px;
    border-radius: 50px;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 10px;
    transition: all 0.3s ease;
  }

  .btn-primary {
    background: var(--rosa-principal);
    color: #ffffff;
    box-shadow: 0 4px 20px rgba(233, 30, 140, 0.4);
  }

  .btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(233, 30, 140, 0.5);
  }

  .btn-whatsapp {
    background: #25D366;
    color: #ffffff;
  }

  .btn-whatsapp:hover {
    background: #128C7E;
    transform: translateY(-3px);
  }

  @media (max-width: 1024px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .packages-grid {
      grid-template-columns: 1fr;
      max-width: 400px;
    }

    .package-card.popular {
      transform: none;
    }

    .process-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .services-hero {
      padding: 60px 0;
    }

    .services-grid {
      grid-template-columns: 1fr;
    }

    .process-grid {
      grid-template-columns: 1fr;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
