---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/seo/Breadcrumbs.astro';
import Hero from '@/components/global/Hero.astro';
import JsonLd from '@/components/seo/JsonLd.astro';
import WhyChooseUs from '@/components/global/WhyChooseUs.astro';
import ProcessSteps from '@/components/global/ProcessSteps.astro';
import EventsGrid from '@/components/global/EventsGrid.astro';
import CTAServices from '@/components/global/CTAServices.astro';
import SectionHeader from '@/components/global/SectionHeader.astro';
import FAQ from '@/components/global/FAQ.astro';

const breadcrumbItems = [
  { name: 'Nosotros', url: '/nosotros' }
];

const whyStats = [
  { number: '500+', label: 'Eventos' },
  { number: '7+', label: 'Anos de experiencia' },
  { number: '100%', label: 'Enfoque personalizado' },
  { number: '24h', label: 'Respuesta comercial' }
];

const whyFeatures = [
  { num: 1, title: 'Estrategia de Servicio', desc: 'Convertimos la necesidad del cliente en una propuesta clara y ejecutable.', img: '/img/galeria/mesa-dulces-evento-corporativo-profesional.avif' },
  { num: 2, title: 'Direccion Creativa', desc: 'Disenamos montajes coherentes con el estilo de cada evento.', img: '/img/galeria/candy-bar-tematico-eventos.avif' },
  { num: 3, title: 'Operacion Profesional', desc: 'Montaje, servicio y cierre con procesos definidos y control de calidad.', img: '/img/galeria/candy-bar-profesional-eventos.avif' },
  { num: 4, title: 'Cobertura CDMX', desc: 'Atendemos eventos sociales y corporativos en CDMX y area metropolitana.', img: '/img/galeria/mesa-dulces-elegante-clasica-cristaleria.avif' }
];

const processSteps = [
  { num: 1, title: 'Escuchamos tu Objetivo', desc: 'Levantamos contexto, tipo de evento, aforo y expectativas reales.' },
  { num: 2, title: 'Disenamos la Propuesta', desc: 'Estructuramos formato, estilo y alcance operativo para tu celebracion.' },
  { num: 3, title: 'Coordinamos Produccion', desc: 'Alineamos logistica, tiempos y montaje para ejecucion sin fricciones.' },
  { num: 4, title: 'Entregamos Experiencia', desc: 'Implementamos el servicio con estandar premium de inicio a fin.' }
];

const eventCards = [
  { title: 'Mesa de Dulces', excerpt: 'Servicio base personalizado para diferentes tipos de celebracion.', img: '/img/tipos-de-mesas/dulces-personalizadas/mesa-dulces-personalizada-elegante.avif', href: '/tipos-de-mesas-de-dulces/mesa-de-dulces', cta: 'Ver Mesa de Dulces' },
  { title: 'Candy Bar por Evento', excerpt: 'Soluciones especializadas para bodas, XV anos, corporativos y mas.', img: '/img/eventos/bodas/mesa-de-dulces-para-bodas.avif', href: '/candy-bar-eventos', cta: 'Ver Eventos' },
  { title: 'Estaciones Interactivas', excerpt: 'Experiencias de alto impacto para elevar participacion de invitados.', img: '/img/estaciones-interactivas/fuente-chocolate/fuente-de-chocolate-para-eventos.avif', href: '/estaciones-interactivas', cta: 'Ver Estaciones' },
  { title: 'Por que Mededul', excerpt: 'Conoce nuestros diferenciales de calidad, diseno y operacion.', img: '/img/porque-elegirnos/servicio-completo-mesas.avif', href: '/porque-mededul', cta: 'Ver Diferenciales' }
];

const faqs = [
  {
    question: 'Que diferencia a Mededul de otras opciones?',
    answer: 'Integramos estrategia comercial, diseno personalizado y operacion profesional en un solo flujo de trabajo.'
  },
  {
    question: 'Atienden eventos sociales y corporativos?',
    answer: 'Si. Trabajamos bodas, XV anos, baby shower, celebraciones familiares y eventos empresariales en CDMX.'
  },
  {
    question: 'Como mantienen la calidad del servicio?',
    answer: 'Operamos con procesos definidos de planeacion, montaje, control visual y cierre operativo en cada evento.'
  },
  {
    question: 'Pueden personalizar por tematica o marca?',
    answer: 'Si. Adaptamos concepto visual, surtido y nivel de servicio segun el objetivo especifico de cada cliente.'
  },
  {
    question: 'En que zonas trabajan?',
    answer: 'Cubrimos toda la CDMX y area metropolitana, con operacion en zonas residenciales y venues corporativos.'
  },
  {
    question: 'Cuanto tardan en responder una cotizacion?',
    answer: 'Normalmente respondemos dentro de 24 horas con una propuesta clara y accionable.'
  }
];
---

<BaseLayout
  title="Nosotros | Mededul Mesas de Dulces en CDMX"
  description="Conoce a Mededul: equipo profesional especializado en mesas de dulces, candy bar y estaciones interactivas para eventos en CDMX."
  canonical="/nosotros"
  includeCategoryStyles={true}
>
  <JsonLd type="Organization" />

  <Breadcrumbs items={breadcrumbItems} />

  <Hero
    title="Nosotros: Experiencia y Ejecucion Profesional"
    highlight="Nosotros"
    subtitle="Somos un equipo especializado en transformar eventos en experiencias memorables con diseno, calidad y operacion impecable"
    secondaryContent={`<p><strong>Mededul</strong> nace de una conviccion simple: un buen montaje no solo se ve bien, tambien resuelve experiencia, servicio y flujo durante un evento real. Por eso combinamos creatividad, metodologia y ejecucion para entregar resultados consistentes en cada proyecto.</p><p><strong>Equipo</strong> profesional, enfoque consultivo y conocimiento del mercado en CDMX nos permiten construir propuestas alineadas al objetivo de cada cliente. Acompanamos desde la cotizacion hasta el cierre para que todo suceda con control y calidad.</p>`}
    showCTA={false}
  />

  <WhyChooseUs
    id="ventajas"
    badge="Nuestra Propuesta"
    title="Por que confiar en"
    titleHighlight="Mededul"
    descriptions={[
      'No solo montamos mesas: disenamos experiencias con intencion comercial y visual.',
      'Cada evento se ejecuta con criterios claros de calidad, operacion y consistencia.'
    ]}
    stats={whyStats}
    features={whyFeatures}
  />

  <ProcessSteps
    id="proceso"
    badge="Nuestra Metodologia"
    title="Como"
    titleHighlight="Trabajamos"
    subtitle="Cuatro pasos para transformar tu idea en una ejecucion profesional"
    steps={processSteps}
  />

  <EventsGrid
    id="rutas"
    badge="Explora Mededul"
    title="Conoce Nuestras"
    titleHighlight="Categorias"
    subtitle="Estas rutas concentran nuestros servicios principales para ayudarte a elegir mejor."
    events={eventCards}
  />

  <section class="section-faq section-padding" id="faq">
    <div class="container">
      <SectionHeader
        title="Preguntas Frecuentes sobre Mededul"
        titleHighlight="Frecuentes"
        subtitle="Respuestas clave sobre nuestra forma de trabajo"
      />
      <FAQ items={faqs} id="faq-nosotros" />
    </div>
  </section>

  <CTAServices
    href="/contacto"
    badge="Asesoria Sin Costo"
    title="Hablemos de Tu"
    titleHighlight="Evento"
    text="Comparte tu objetivo y te ayudamos a construir una propuesta profesional a la medida."
    buttonText="Solicitar Asesoria"
  />
</BaseLayout>
