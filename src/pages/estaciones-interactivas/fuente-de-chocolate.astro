const serviceSchema = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: 'Fuente de Chocolate para Eventos en CDMX',
  description: 'Servicio de fuente de chocolate para eventos sociales y corporativos en Ciudad de Mexico.',
  provider: {
    '@type': 'LocalBusiness',
    name: 'Mededul',
    telephone: '+525525226442',
