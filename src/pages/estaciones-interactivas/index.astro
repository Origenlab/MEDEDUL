    incluye: 'Fuente profesional, chamoy artesanal, mango, jicama, pepino, gomitas, tamarindos, chile Tajin, brochetas, servilletas y operador durante el evento.',
    caracteristicas: ['Chamoy artesanal premium', 'Sabor mexicano autentico', 'Frutas y gomitas incluidas', 'Ideal para fiestas mexicanas'],
    images: [
      { src: '/img/estaciones-interactivas/fuente-chamoy/renta-de-fuente-de-chamoy.avif', alt: 'Renta de fuente de chamoy en CDMX' },
      { src: '/img/estaciones-interactivas/fuente-chamoy/fuente-de-chamoy-para-fiestas.avif', alt: 'Fuente de chamoy para fiestas' },
      { src: '/img/estaciones-interactivas/fuente-chamoy/fuente-chamoy-eventos-mexicanos.avif', alt: 'Fuente de chamoy para eventos mexicanos' }
