];

const itemListSchema = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "Estaciones Interactivas para Fiestas y Eventos",
  "description": "Catalogo de estaciones interactivas para eventos en Ciudad de Mexico: fuentes, paredes de dulces y stands decorativos",
  "numberOfItems": 4,
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "item": {
        "@type": "Service",
        "name": "Fuente de Chocolate para Eventos",
        "description": "Renta de cascada de chocolate belga para fiestas y eventos en CDMX",
        "provider": {"@type": "LocalBusiness", "name": "Mededul"}
