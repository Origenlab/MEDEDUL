      { src: '/img/estaciones-interactivas/stand-pastel/stand-pastel-decorado-eventos.avif', alt: 'Stand para pastel decorado para eventos' },
      { src: '/img/estaciones-interactivas/stand-pastel/decoracion-stand-pastel-elegante.avif', alt: 'Decoracion elegante para stand de pastel' },
