---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/seo/Breadcrumbs.astro';
import Hero from '@/components/global/Hero.astro';
import JsonLd from '@/components/seo/JsonLd.astro';
import SectionHeader from '@/components/global/SectionHeader.astro';
import ServiceCard from '@/components/global/ServiceCard.astro';
import CTAServices from '@/components/global/CTAServices.astro';
import FAQ from '@/components/global/FAQ.astro';
import ContactSection from '@/components/global/ContactSection.astro';
import { getCdnUrl } from '@/lib/cdn';

const breadcrumbItems = [
  { name: 'Servicios', url: '/servicios' },
  { name: 'Estaciones Interactivas', url: '/estaciones-interactivas' }
];

const faqItems = [
  {
    question: 'Que incluye una estacion interactiva para eventos?',
    answer: 'Incluye planeacion, montaje, equipo profesional, insumos definidos por tipo de estacion, coordinacion operativa y desmontaje al finalizar el evento.'
  },
  {
    question: 'Puedo contratar una sola estacion o combinar varias?',
    answer: 'Puedes contratar una estacion especifica o combinar varias en una misma propuesta. Te ayudamos a elegir la mezcla correcta segun tipo de evento e invitados.'
  },
  {
    question: 'Con cuanta anticipacion debo reservar?',
    answer: 'Recomendamos reservar entre 2 y 4 semanas antes para asegurar disponibilidad, produccion y logistica de montaje en tu sede.'
  },
  {
    question: 'Atienden eventos sociales y corporativos?',
    answer: 'Si. Operamos estaciones interactivas para bodas, XV anos, cumpleanos, baby shower, activaciones de marca y eventos corporativos en CDMX.'
  },
  {
    question: 'Las estaciones se personalizan por tematica?',
    answer: 'Si. Adaptamos estilo visual, paleta, presentacion y seleccion de acompanamientos para que la experiencia sea coherente con tu evento.'
  },
  {
    question: 'Que zonas cubren?',
    answer: 'Atendemos toda la CDMX y area metropolitana, incluyendo Polanco, Santa Fe, Lomas, Interlomas, Coyoacan, Roma, Condesa y Satelite.'
  }
];

const packages = [
  {
    name: 'Basico',
    icon: 'ðŸ«',
    priceAmount: '$4,500',
    priceNote: 'MXN',
    guests: '30-50 personas',
    description: 'Ideal para una estacion principal',
    features: [
      '1 estacion interactiva',
      'Montaje profesional',
      'Insumos para servicio inicial',
      'Presentacion cuidada',
      'Desmontaje al finalizar'
    ],
    popular: false
  },
  {
    name: 'Signature',
    icon: 'â­',
    priceAmount: '$7,900',
    priceNote: 'MXN',
    guests: '50-100 personas',
    description: 'La combinacion mas solicitada',
    features: [
      '2 estaciones combinadas',
      'Diseno personalizado por evento',
      'Mayor volumen de insumos',
      'Montaje y coordinacion en sitio',
      'Asesoria previa del evento',
      'Mejor equilibrio costo-beneficio'
    ],
    popular: true
  },
  {
    name: 'Premium',
    icon: 'ðŸ’Ž',
    priceAmount: '$12,900',
    priceNote: 'MXN',
    guests: '100+ personas',
    description: 'Experiencia integral de alto impacto',
    features: [
      '2-3 estaciones interactivas',
      'Curaduria premium de experiencia',
      'Direccion estetica completa',
      'Operacion en sitio extendida',
      'Configuracion para eventos grandes',
      'Acompanamiento operativo total'
    ],
    popular: false
  }
];

const processSteps = [
  {
    number: 1,
    title: 'Diagnostico del Evento',
    description: 'Definimos tipo de celebracion, aforo y objetivo para recomendar las estaciones interactivas correctas.'
  },
  {
    number: 2,
    title: 'Propuesta y Curaduria',
    description: 'Seleccionamos estaciones, insumos y lineamiento visual para una experiencia coherente y funcional.'
  },
  {
    number: 3,
    title: 'Planeacion Operativa',
    description: 'Alineamos horarios, accesos, montaje y dinamica de servicio con el venue para evitar contratiempos.'
  },
  {
    number: 4,
    title: 'Montaje y Ejecucion',
    description: 'Instalamos y operamos cada estacion cuidando presentacion, flujo y experiencia de los invitados.'
  }
];

const itemListSchema = {
  '@context': 'https://schema.org',
  '@type': 'ItemList',
  name: 'Estaciones Interactivas para Eventos en CDMX',
  description: 'Catalogo de estaciones interactivas: fuente de chocolate, fuente de chamoy, pared de dulces y stand para pastel',
  numberOfItems: 4,
  itemListElement: [
    { '@type': 'ListItem', position: 1, item: { '@type': 'Service', name: 'Fuente de Chocolate para Eventos' } },
    { '@type': 'ListItem', position: 2, item: { '@type': 'Service', name: 'Fuente de Chamoy para Fiestas' } },
    { '@type': 'ListItem', position: 3, item: { '@type': 'Service', name: 'Pared de Dulces Candy Wall' } },
    { '@type': 'ListItem', position: 4, item: { '@type': 'Service', name: 'Stand para Pastel Decorado' } }
  ]
};

const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: faqItems.map((faq) => ({
    '@type': 'Question',
    name: faq.question,
    acceptedAnswer: {
      '@type': 'Answer',
      text: faq.answer
    }
  }))
};
---

<BaseLayout
  title="Estaciones Interactivas para Eventos en CDMX | Mededul"
  description="Renta de estaciones interactivas en CDMX: fuente de chocolate, fuente de chamoy, pared de dulces y stand para pastel. Montaje profesional incluido."
  canonical="/estaciones-interactivas"
  ogImage="/img/estaciones-interactivas/fuente-chocolate/fuente-de-chocolate-para-eventos.avif"
  includeCategoryStyles={true}
>
  <JsonLd type="Service" />
  <script type="application/ld+json" is:inline set:html={JSON.stringify(itemListSchema)} slot="head" />
  <script type="application/ld+json" is:inline set:html={JSON.stringify(faqSchema)} slot="head" />

  <Breadcrumbs items={breadcrumbItems} />

  <Hero
    id="estaciones-interactivas"
    title="Estaciones Interactivas para Eventos en CDMX"
    highlight="Interactivas"
    subtitle="Experiencias premium para elevar participacion, recordacion y valor percibido en tu celebracion"
    secondaryContent={`<p><strong>Estaciones interactivas</strong> bien planificadas convierten tu evento en una experiencia dinamica donde los invitados participan activamente y recuerdan cada detalle. En Mededul estructuramos cada montaje con enfoque profesional para combinar impacto visual, operacion eficiente y servicio consistente.</p><p><strong>Experiencias</strong> como fuente de chocolate, fuente de chamoy, pared de dulces y stand para pastel aportan un diferencial real en bodas, eventos sociales y corporativos. Nuestro equipo integra diseno, logistica y ejecucion para que cada estacion funcione impecablemente de principio a fin.</p>`}
    showCTA={true}
    ctaHref="/contacto"
    ctaBadge="Asesoria Especializada"
    ctaTitle="Define Tu Estacion Ideal"
    ctaTitleHighlight="Ideal"
    ctaText="Comparte tipo de evento, invitados y objetivo para recomendarte la combinacion de estaciones con mejor resultado."
    ctaButtonText="Solicitar Asesoria"
  />

  <section class="section-paquetes" id="paquetes">
    <div class="paquetes-bg">
      <div class="paquetes-glow paquetes-glow--1"></div>
      <div class="paquetes-glow paquetes-glow--2"></div>
    </div>

    <div class="container paquetes-container">
      <div class="paquetes-header">
        <span class="paquetes-badge">Paquetes Referenciales</span>
        <h2 class="paquetes-title">
          Escoge el <span>Formato Correcto</span>
        </h2>
        <p class="paquetes-subtitle">
          Ajustamos cada propuesta al tipo de estacion, invitados y nivel de personalizacion que necesitas.
        </p>
      </div>

      <div class="packages-grid">
        {packages.map((pkg) => (
          <div class:list={['package-card', { 'package-card--popular': pkg.popular }]}> 
            {pkg.popular && (
              <div class="package-ribbon">
                <span>Mas Solicitado</span>
              </div>
            )}

            <div class="package-top">
              <div class="package-icon-wrapper">
                <span class="package-icon">{pkg.icon}</span>
              </div>
              <h3 class="package-name">{pkg.name}</h3>
              <p class="package-tagline">{pkg.description}</p>
            </div>

            <div class="package-pricing">
              <div class="package-price-wrapper">
                <span class="package-price-label">Desde</span>
                <span class="package-price-amount">{pkg.priceAmount}</span>
                <span class="package-price-currency">{pkg.priceNote}</span>
              </div>
              <div class="package-guests">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                  <circle cx="9" cy="7" r="4"/>
                  <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                  <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                </svg>
                <span>{pkg.guests}</span>
              </div>
            </div>

            <div class="package-separator">
              <span class="package-separator-text">Incluye</span>
            </div>

            <ul class="package-features">
              {pkg.features.map(feature => (
                <li>
                  <span class="feature-check">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                      <polyline points="20 6 9 17 4 12"/>
                    </svg>
                  </span>
                  <span class="feature-text">{feature}</span>
                </li>
              ))}
            </ul>

            <a href="/contacto" class="package-cta">
              <span>Solicitar Cotizacion</span>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        ))}
      </div>

      <p class="paquetes-note">
        <strong>Necesitas una configuracion distinta?</strong> Disenamos una propuesta personalizada con base en tu evento.
      </p>
    </div>
  </section>

  <section class="section-servicios section-padding" id="estaciones-grid">
    <div class="container">
      <SectionHeader
        title="Estaciones Interactivas Disponibles"
        titleHighlight="Interactivas"
        subtitle="Selecciona la experiencia ideal para tu celebracion"
        content={`<p>Cada estacion cumple una funcion distinta dentro del evento: entretenimiento, experiencia sensorial y valor visual para tus invitados.</p><p>Te ayudamos a elegir la mejor combinacion segun tipo de celebracion, flujo de consumo y presupuesto.</p>`}
      />

      <div class="service-grid service-grid--4">
        <ServiceCard
          href="/estaciones-interactivas/fuente-de-chocolate"
          image={getCdnUrl('/img/estaciones-interactivas/fuente-chocolate/fuente-de-chocolate-para-eventos.avif')}
          alt="Fuente de chocolate para eventos en CDMX"
          title="Fuente de Chocolate"
          excerpt="Cascada de chocolate premium con montaje profesional para elevar la experiencia de invitados."
          cta="Ver Fuente de Chocolate"
          badge="Popular"
        />
        <ServiceCard
          href="/estaciones-interactivas/fuente-de-chamoy"
          image={getCdnUrl('/img/estaciones-interactivas/fuente-chamoy/renta-de-fuente-de-chamoy.avif')}
          alt="Fuente de chamoy para fiestas en CDMX"
          title="Fuente de Chamoy"
          excerpt="Estacion con identidad mexicana para eventos sociales y corporativos con alta participacion."
          cta="Ver Fuente de Chamoy"
        />
        <ServiceCard
          href="/estaciones-interactivas/pared-de-dulces"
          image={getCdnUrl('/img/estaciones-interactivas/pared-dulces/pared-de-dulces-candy-wall.avif')}
          alt="Pared de dulces candy wall para eventos"
          title="Pared de Dulces"
          excerpt="Candy wall escenografico y funcional para reforzar decoracion y experiencia de consumo."
          cta="Ver Pared de Dulces"
        />
        <ServiceCard
          href="/estaciones-interactivas/stand-para-pastel"
          image={getCdnUrl('/img/estaciones-interactivas/stand-pastel/stand-pastel-decorado-eventos.avif')}
          alt="Stand para pastel decorado"
          title="Stand para Pastel"
          excerpt="Estacion premium para destacar el momento del pastel con composicion elegante y fotografiable."
          cta="Ver Stand para Pastel"
        />
      </div>
    </div>
  </section>

  <section class="section-estaciones section-padding" id="complementos">
    <div class="container">
      <SectionHeader
        title="Complementa con Tipos de Mesas"
        titleHighlight="Mesas"
        subtitle="Construye una experiencia integral para tu evento"
        content={`<p>Las estaciones interactivas alcanzan mejor resultado cuando se combinan con mesas estrategicas de dulces, postres o frutas.</p><p>Integramos estas soluciones para crear una propuesta completa en diseno, operacion y experiencia del invitado.</p>`}
      />

      <div class="service-grid service-grid--4">
        <ServiceCard
          href="/tipos-de-mesas-de-dulces/mesa-de-dulces"
          image={getCdnUrl('/img/tipos-de-mesas/dulces-personalizadas/mesas-de-dulces-infantiles.avif')}
          alt="Mesa de dulces personalizada"
          title="Mesa de Dulces"
          excerpt="Complemento ideal para reforzar variedad y flujo de consumo durante todo el evento."
          cta="Ver Mesa de Dulces"
        />
        <ServiceCard
          href="/tipos-de-mesas-de-dulces/mesa-de-postres"
          image={getCdnUrl('/img/tipos-de-mesas/postres/mesas-de-postres-cdmx.avif')}
          alt="Mesa de postres gourmet"
          title="Mesa de Postres"
          excerpt="Propuesta premium de reposteria para complementar estaciones y elevar valor percibido."
          cta="Ver Mesa de Postres"
        />
        <ServiceCard
          href="/tipos-de-mesas-de-dulces/mesa-de-frutas"
          image={getCdnUrl('/img/tipos-de-mesas/frutas/mesas-de-frutas-para-eventos.avif')}
          alt="Mesa de frutas para eventos"
          title="Mesa de Frutas"
          excerpt="Alternativa fresca y balanceada para combinar con estaciones dulces e interactivas."
          cta="Ver Mesa de Frutas"
        />
        <ServiceCard
          href="/tipos-de-mesas-de-dulces/mesa-de-snacks"
          image={getCdnUrl('/img/tipos-de-mesas/snacks/barra-de-snacks-para-eventos.avif')}
          alt="Mesa de snacks para fiestas"
          title="Mesa de Snacks"
          excerpt="Formato practico para mantener servicio continuo en celebraciones de larga duracion."
          cta="Ver Mesa de Snacks"
        />
      </div>
    </div>
  </section>

  <CTAServices
    href="/contacto"
    badge="Asesoria sin Costo"
    title="No Sabes Que Estacion Contratar?"
    titleHighlight="Contratar"
    text="Te recomendamos la configuracion ideal segun tipo de evento, invitados, espacio y objetivo de experiencia."
    buttonText="Solicitar Asesoria"
  />

  <section class="section-proceso section-padding" id="proceso">
    <div class="container">
      <div class="proceso-header">
        <span class="proceso-badge">Nuestro Proceso</span>
        <h2 class="proceso-title">Asi Disenamos Tu <span>Mejor Combinacion</span></h2>
        <p class="proceso-subtitle">Un metodo claro para elegir, planear y ejecutar sin errores.</p>
      </div>

      <div class="process-grid">
        {processSteps.map((step) => (
          <div class="process-card">
            <div class="process-step-badge">Paso {step.number}</div>
            <div class="process-content">
              <h4 class="process-title">{step.title}</h4>
              <p class="process-description">{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section-porque section-padding" id="porque">
    <div class="container">
      <SectionHeader
        title="Por que Elegir Mededul para Estaciones"
        titleHighlight="Mededul"
        subtitle="Diseno, operacion y calidad en una sola solucion"
        content={`<p>Nuestro enfoque integra creatividad y ejecucion para que cada estacion interactiva aporte valor real a tu celebracion.</p><p>Trabajamos con estandares profesionales para garantizar presentacion, flujo de servicio y experiencia premium.</p>`}
      />

      <div class="service-grid service-grid--4">
        <ServiceCard
          href="/porque-mededul/diseno-personalizado"
          image={getCdnUrl('/img/porque-elegirnos/diseno-personalizado-mesas-dulces.avif')}
          alt="Diseno personalizado para eventos"
          title="Diseno Personalizado"
          excerpt="Cada propuesta se adapta al concepto real del evento, no a plantillas genericas."
          cta="Ver Diseno"
        />
        <ServiceCard
          href="/porque-mededul/calidad-premium"
          image={getCdnUrl('/img/porque-elegirnos/calidad-premium-dulces.avif')}
          alt="Calidad premium en insumos"
          title="Calidad Premium"
          excerpt="Seleccion de producto e insumos de alto nivel para resultados consistentes."
          cta="Ver Calidad"
        />
        <ServiceCard
          href="/porque-mededul/servicio-completo"
          image={getCdnUrl('/img/porque-elegirnos/servicio-completo-mesas.avif')}
          alt="Servicio completo para eventos"
          title="Servicio Completo"
          excerpt="Planeacion, montaje y desmontaje con coordinacion profesional en cada fase."
          cta="Ver Servicio"
        />
        <ServiceCard
          href="/porque-mededul/cero-estres"
          image={getCdnUrl('/img/porque-elegirnos/cero-estres-eventos.avif')}
          alt="Servicio sin estres"
          title="Cero Estres"
          excerpt="Gestion ordenada para que disfrutes el evento mientras nosotros operamos."
          cta="Ver Metodologia"
        />
      </div>
    </div>
  </section>

  <section class="section-faq section-padding" id="faq">
    <div class="container">
      <SectionHeader
        title="Preguntas Frecuentes sobre Estaciones"
        titleHighlight="Frecuentes"
        subtitle="Resolvemos las dudas clave antes de cotizar"
        content={`<p>Estas respuestas te ayudaran a elegir la opcion correcta con criterios claros de servicio y ejecucion.</p>`}
      />

      <FAQ items={faqItems} id="faq-estaciones" />
    </div>
  </section>

  <ContactSection />
</BaseLayout>
