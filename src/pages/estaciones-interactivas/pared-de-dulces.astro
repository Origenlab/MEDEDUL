const serviceSchema = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: 'Pared de Dulces para Eventos en CDMX',
  description: 'Servicio de candy wall o pared de dulces para eventos sociales y corporativos en Ciudad de Mexico.',
  provider: {
    '@type': 'LocalBusiness',
    name: 'Mededul',
    telephone: '+525525226442',
    aggregateRating: {
      '@type': 'AggregateRating',
      ratingValue: '4.9',
      reviewCount: '127',
      bestRating: '5'
    }
  },
  areaServed: { '@type': 'City', name: 'Ciudad de Mexico' },
