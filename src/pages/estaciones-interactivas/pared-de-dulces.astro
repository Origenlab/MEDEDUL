---
// Pared de Dulces Page
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/seo/Breadcrumbs.astro';
import Hero from '@/components/global/Hero.astro';
import { getCdnUrl } from '@/lib/cdn';

const breadcrumbItems = [
  { name: 'Estaciones Interactivas', url: '/estaciones-interactivas' },
  { name: 'Pared de Dulces', url: '/estaciones-interactivas/pared-de-dulces' }
];

const faqs = [
  {
    question: "Que es una pared de dulces o candy wall?",
    answer: "Una candy wall es un muro decorativo con dispensadores de acrilico transparente llenos de golosinas coloridas. Los invitados pueden servirse directamente de los dispensadores y llevarse bolsitas con su mezcla favorita de dulces."
  },
  {
    question: "Pueden personalizar los colores de los dulces?",
    answer: "Absolutamente. Coordinamos los colores de los dulces con la tematica de tu evento. Si tu boda es en tonos dorado y blanco, elegimos gomitas, chocolates y dulces en esos colores. Tenemos acceso a dulces en practicamente cualquier color."
  },
  {
    question: "Cuantos dispensadores incluye la candy wall?",
    answer: "El paquete basico incluye 8-10 dispensadores, el premium 12-15 dispensadores y el deluxe hasta 20 dispensadores. Cada dispensador contiene un tipo diferente de dulce para ofrecer variedad a tus invitados."
  },
  {
    question: "Incluyen bolsas para que los invitados se lleven dulces?",
    answer: "Si, todos nuestros paquetes incluyen bolsitas de celofan o kraft para que los invitados se lleven su seleccion de dulces. Tambien ofrecemos bolsas personalizadas con tu nombre o el del evento como opcion adicional."
  },
  {
    question: "Que tamano tiene la pared de dulces?",
    answer: "Nuestra candy wall estandar mide aproximadamente 1.80m de alto x 1.20m de ancho. Ofrecemos tambien versiones mas grandes para eventos con muchos invitados. El tamano se puede adaptar al espacio disponible en tu venue."
  },
  {
    question: "Es ideal para bodas?",
    answer: "La candy wall es muy popular en bodas por su elegancia visual. Se convierte en un elemento decorativo y funcional. Los invitados pueden servirse dulces durante la recepcion y llevarse bolsitas como recuerdo del evento."
  }
];

const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Pared de Dulces Candy Wall",
  "description": "Servicio de renta de pared de dulces candy wall para eventos en CDMX. Incluye estructura modular, dispensadores de acrilico, variedad de golosinas en colores coordinados, bolsas para llevar y montaje profesional.",
  "provider": {
    "@type": "LocalBusiness",
    "name": "Mededul",
    "image": getCdnUrl('/img/branding/logo-mededul-mesas-de-dulces.avif'),
    "telephone": "+525525226442",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Ciudad de Mexico",
      "addressCountry": "MX"
    }
  },
  "areaServed": {
    "@type": "City",
    "name": "Ciudad de Mexico"
  },
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Paquetes Pared de Dulces",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": { "@type": "Service", "name": "Candy Wall Basica", "description": "Para 30-50 invitados" }
      },
      {
        "@type": "Offer",
        "itemOffered": { "@type": "Service", "name": "Candy Wall Premium", "description": "Para 50-100 invitados" }
      },
      {
        "@type": "Offer",
        "itemOffered": { "@type": "Service", "name": "Candy Wall Deluxe", "description": "Para 100-200 invitados" }
      }
    ]
  }
};

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": { "@type": "Answer", "text": faq.answer }
  }))
};

const otrasEstaciones = [
  {
    title: 'Fuente de Chocolate',
    slug: 'fuente-de-chocolate',
    image: '/img/estaciones-interactivas/fuente-chocolate/fuente-de-chocolate-para-eventos.avif',
    alt: 'Renta de Fuente de Chocolate para Eventos en CDMX',
    badge: 'Clasico Favorito',
    badgeColor: 'linear-gradient(135deg, #8B4513 0%, #D2691E 100%)',
    description: 'La experiencia clasica que nunca falla. Cascada de chocolate belga premium con frutas frescas y malvaviscos.',
    features: ['Chocolate belga premium', '3 horas de servicio', 'Operador incluido']
  },
  {
    title: 'Fuente de Chamoy',
    slug: 'fuente-de-chamoy',
    image: '/img/estaciones-interactivas/fuente-chamoy/renta-de-fuente-de-chamoy.avif',
    alt: 'Renta de Fuente de Chamoy para Eventos en CDMX',
    badge: 'Sabor Mexicano',
    badgeColor: 'linear-gradient(135deg, #FF6B35 0%, #F7931E 100%)',
    description: 'Sorprende con el autentico sabor mexicano. Nuestra fuente de chamoy artesanal es perfecta para fiestas tematicas.',
    features: ['Chamoy artesanal premium', 'Operador durante todo el evento', 'Ideal para +50 invitados']
  },
  {
    title: 'Stand para Pastel',
    slug: 'stand-para-pastel',
    image: '/img/estaciones-interactivas/stand-pastel/stand-pastel-decorado-eventos.avif',
    alt: 'Renta de Stand para Pastel con Arco de Globos CDMX',
    badge: 'Fotos Increibles',
    badgeColor: 'linear-gradient(135deg, #D1007A 0%, #A0005F 100%)',
    description: 'El momento del pastel merece un escenario espectacular. Nuestro stand con arco de globos crea el backdrop perfecto.',
    features: ['Arco de globos organico incluido', 'Colores personalizables', 'Montaje y desmontaje incluido']
  }
];
---

<BaseLayout
  title="Pared de Dulces Candy Wall CDMX | Renta Muro de Golosinas | Mededul"
  description="Pared de dulces candy wall en CDMX. Muro decorativo con dispensadores de golosinas y colores personalizados. Cotiza gratis."
  canonical="https://mesas-de-dulces.com/estaciones-interactivas/pared-de-dulces"
  ogImage={getCdnUrl('/img/estaciones-interactivas/pared-dulces/pared-de-dulces-candy-wall.avif')}
>
  <script type="application/ld+json" is:inline set:html={JSON.stringify(serviceSchema)} slot="head" />
  <script type="application/ld+json" is:inline set:html={JSON.stringify(faqSchema)} slot="head" />

  <Breadcrumbs items={breadcrumbItems} />

  <Hero
    title="Pared de <span>Dulces</span> Candy Wall"
    description="Un <strong>muro de golosinas espectacular</strong> que se convierte en el centro de atencion de tu evento. Tus invitados podran servirse sus dulces favoritos directamente de los dispensadores elegantes."
    subtitle="Nuestra candy wall es 100% personalizable: coordinamos los colores de los dulces con la tematica de tu evento para crear una experiencia visual impactante."
  />

  <!-- Caracteristicas Section -->
  <section class="caracteristicas-section">
    <div class="container">
      <div class="caracteristicas-layout">
        <div class="caracteristicas-left">
          <span class="header-badge">Tendencia 2026</span>
          <h2>Por que elegir nuestra <span>Candy Wall</span>?</h2>
          <p class="header-description">La pared de dulces es la <strong>tendencia que arrasa</strong> en bodas, XV anos y eventos corporativos. Es una instalacion espectacular que combina decoracion y experiencia interactiva.</p>
          <p class="header-description">Coordinamos los <strong>colores de los dulces</strong> con tu evento para crear un elemento visual impactante que todos querran fotografiar.</p>
          <div class="header-stats">
            <div class="stat-item"><span class="stat-number">400+</span><span class="stat-label">Eventos</span></div>
            <div class="stat-item"><span class="stat-number">20+</span><span class="stat-label">Variedades</span></div>
            <div class="stat-item"><span class="stat-number">100%</span><span class="stat-label">Personalizable</span></div>
            <div class="stat-item"><span class="stat-number">1.8m</span><span class="stat-label">Altura</span></div>
          </div>
        </div>
        <div class="caracteristicas-right">
          <div class="caracteristica-card">
            <div class="card-image">
              <span class="card-number">1</span>
              <img decoding="async" src={getCdnUrl('/img/estaciones-interactivas/pared-dulces/pared-de-dulces-candy-wall.avif')} alt="Muro decorativo modular" loading="lazy" width="400" height="200" />
            </div>
            <div class="card-content"><h3>Muro Modular</h3><p>Estructura elegante adaptable a cualquier espacio.</p></div>
          </div>
          <div class="caracteristica-card">
            <div class="card-image">
              <span class="card-number">2</span>
              <img decoding="async" src={getCdnUrl('/img/estaciones-interactivas/pared-dulces/candy-wall-pared-dulces-eventos.avif')} alt="Dispensadores elegantes" loading="lazy" width="400" height="200" />
            </div>
            <div class="card-content"><h3>Dispensadores Premium</h3><p>Acrilico transparente de alta calidad para exhibir dulces.</p></div>
          </div>
          <div class="caracteristica-card">
            <div class="card-image">
              <span class="card-number">3</span>
              <img decoding="async" src={getCdnUrl('/img/estaciones-interactivas/pared-dulces/candy-wall-servicio-cdmx.avif')} alt="Variedad de golosinas" loading="lazy" width="400" height="200" />
            </div>
            <div class="card-content"><h3>Variedad de Dulces</h3><p>Gomitas, chocolates, dulces de colores coordinados.</p></div>
          </div>
          <div class="caracteristica-card">
            <div class="card-image">
              <span class="card-number">4</span>
              <img decoding="async" src={getCdnUrl('/img/estaciones-interactivas/pared-dulces/pared-de-dulces-candy-wall.avif')} alt="Colores personalizables" loading="lazy" width="400" height="200" />
            </div>
            <div class="card-content"><h3>Colores a tu Medida</h3><p>Coordinamos los dulces con la tematica de tu evento.</p></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Galeria Section -->
  <section class="galeria-section" id="galeria">
    <div class="container">
      <div class="section-header-center">
        <h2>Nuestra <span class="titulo-decorativo">Candy Wall</span> en Accion</h2>
        <p class="subtitulo">Instalaciones espectaculares en eventos reales</p>
      </div>
      <div class="galeria-bento">
        <div class="galeria-item"><img decoding="async" src={getCdnUrl('/img/estaciones-interactivas/pared-dulces/pared-de-dulces-candy-wall.avif')} alt="Pared de dulces candy wall para eventos" loading="lazy" width="800" height="400" /></div>
        <div class="galeria-item"><img decoding="async" src={getCdnUrl('/img/estaciones-interactivas/pared-dulces/candy-wall-pared-dulces-eventos.avif')} alt="Candy wall pared de dulces para eventos" loading="lazy" width="400" height="300" /></div>
        <div class="galeria-item"><img decoding="async" src={getCdnUrl('/img/estaciones-interactivas/pared-dulces/candy-wall-servicio-cdmx.avif')} alt="Servicio candy wall CDMX" loading="lazy" width="400" height="300" /></div>
      </div>
    </div>
  </section>

  <!-- Que Incluye Section -->
  <section class="incluye-section">
    <div class="container">
      <div class="incluye-header">
        <span class="badge">Todo Incluido</span>
        <h2>Que incluye nuestra <span>Pared de Dulces</span>?</h2>
        <p>Una experiencia visual y gustativa completa</p>
      </div>
      <div class="incluye-grid">
        <div class="incluye-card"><span class="card-number">01</span><h4>Estructura Modular</h4><p>Muro decorativo de madera con acabado elegante, adaptable a diferentes espacios y tematicas.</p></div>
        <div class="incluye-card"><span class="card-number">02</span><h4>Dispensadores de Acrilico</h4><p>8-20 dispensadores transparentes de alta calidad que exhiben los dulces de manera atractiva.</p></div>
        <div class="incluye-card"><span class="card-number">03</span><h4>Variedad de Golosinas</h4><p>Gomitas, chocolates, dulces de colores, malvaviscos y mas. Todo coordinado con tu paleta de colores.</p></div>
        <div class="incluye-card"><span class="card-number">04</span><h4>Bolsas para Llevar</h4><p>Bolsitas de celofan o kraft para que tus invitados se lleven su seleccion favorita de dulces.</p></div>
        <div class="incluye-card"><span class="card-number">05</span><h4>Montaje Profesional</h4><p>Nuestro equipo se encarga de la instalacion completa y del desmontaje al finalizar el evento.</p></div>
        <div class="incluye-card"><span class="card-number">06</span><h4>Personalizacion Total</h4><p>Letrero con nombre del evento, decoracion complementaria y coordinacion con tu tematica.</p></div>
      </div>
    </div>
  </section>

  <!-- Proceso Section -->
  <section class="proceso-section">
    <div class="container">
      <div class="section-header-center">
        <h2>Como <span class="titulo-decorativo">Funciona</span>?</h2>
        <p class="subtitulo">4 simples pasos para tener tu candy wall perfecta</p>
      </div>
      <div class="proceso-timeline">
        <div class="proceso-step"><div class="number">1</div><h4>Contactanos</h4><p>Escribenos con la fecha, lugar y tematica de tu evento.</p></div>
        <div class="proceso-step"><div class="number">2</div><h4>Personalizamos</h4><p>Elegimos juntos los colores y tipos de dulces ideales.</p></div>
        <div class="proceso-step"><div class="number">3</div><h4>Montamos</h4><p>Instalamos la candy wall 2 horas antes del evento.</p></div>
        <div class="proceso-step"><div class="number">4</div><h4>Disfrutas</h4><p>Tus invitados se sirven dulces durante toda la fiesta.</p></div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="faq-section section-padding" id="preguntas-frecuentes">
    <div class="container">
      <div class="section-header-center">
        <h2>Preguntas <span class="titulo-decorativo">Frecuentes</span></h2>
        <p class="subtitulo">Todo lo que necesitas saber sobre nuestra pared de dulces</p>
      </div>
      <div class="faq-container">
        {faqs.map((faq, index) => (
          <div class="faq-item">
            <button class="faq-question" aria-expanded="false" aria-controls={`faq-answer-${index}`}>
              <span>{faq.question}</span><span class="icon">+</span>
            </button>
            <div class="faq-answer" id={`faq-answer-${index}`}><p>{faq.answer}</p></div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Otras Estaciones Section -->
  <section class="otras-estaciones section-padding">
    <div class="container">
      <div class="section-header-center">
        <span class="badge">Complementa Tu Evento</span>
        <h2>Otras <span class="titulo-decorativo">Estaciones Interactivas</span></h2>
        <p class="subtitulo">Crea una experiencia completa combinando varias estaciones</p>
      </div>
      <div class="otras-grid">
        {otrasEstaciones.map(estacion => (
          <div class="otra-card">
            <div class="otra-image">
              <img decoding="async" src={getCdnUrl(estacion.image)} alt={estacion.alt} loading="lazy" width="400" height="250" />
              <div class="otra-badge" style={`background: ${estacion.badgeColor}`}>{estacion.badge}</div>
            </div>
            <div class="otra-content">
              <h3>{estacion.title}</h3>
              <p>{estacion.description}</p>
              <ul>{estacion.features.map(feature => (<li><svg width="16" height="16" fill="#D1007A" viewBox="0 0 20 20"><path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/></svg>{feature}</li>))}</ul>
              <a href={`/estaciones-interactivas/${estacion.slug}`} class="btn btn-primary">{estacion.title}<svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/></svg></a>
            </div>
          </div>
        ))}
      </div>
      <div class="otras-cta">
        <p>Quieres combinar varias estaciones? <strong>Pregunta por nuestros paquetes especiales</strong></p>
        <a href="/estaciones-interactivas" class="btn btn-primary-large">Ver Todas las Estaciones Disponibles</a>
      </div>
    </div>
  </section>

  <!-- CTA Final -->
  <section class="cta-final">
    <div class="container">
      <h2>Listo para una candy wall espectacular?</h2>
      <p>Cotiza tu pared de dulces sin compromiso. Te respondemos en menos de 2 horas.</p>
      <a href="https://wa.me/525525226442?text=Hola! Me interesa cotizar una Pared de Dulces para mi evento" class="btn-white" target="_blank" rel="noopener">Cotizar por WhatsApp</a>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="contacto-section section-padding" id="contacto">
    <div class="container">
      <div class="contacto-grid">
        <div class="contacto-info">
          <h2>Cotiza tu Pared de Dulces</h2>
          <p class="contacto-intro">Estamos listos para crear la candy wall perfecta para tu evento. Contactanos y recibe una cotizacion personalizada sin compromiso.</p>
          <div class="info-items-grid">
            <div class="info-item info-sucursal"><h3>Sucursal Condesa</h3><p>Torre A, Av. Baja California 255, Col. Condesa, Cuauhtemoc, 06170 CDMX</p><a href="https://www.google.com/maps/place/MESAS+DE+DULCES/@19.4061421,-99.1726122,17z" target="_blank" rel="noopener" class="maps-link">Ver Condesa en Google Maps</a></div>
            <div class="info-item info-sucursal"><h3>Sucursal Anzures</h3><p>Av. Ejercito Nacional Mexicano 216, Anzures, Miguel Hidalgo, 11590 CDMX</p><a href="https://www.google.com/maps/place/Mesa+de+dulces+para+fiestas+y+eventos+sociales/@19.4358273,-99.1795263,17z" target="_blank" rel="noopener" class="maps-link">Ver Anzures en Google Maps</a></div>
            <div class="info-item info-contacto"><h3>WhatsApp</h3><p><a href="tel:+525525226442">55 2522 6442</a></p></div>
            <div class="info-item info-contacto"><h3>Email</h3><p><a href="mailto:info@mesas-de-dulces.com">info@mesas-de-dulces.com</a></p></div>
            <div class="info-item info-horario"><h3>Horario de Atencion</h3><p>Lun - Vie: 9:00 AM - 7:00 PM<br />Sabados: 10:00 AM - 3:00 PM</p></div>
          </div>
        </div>
        <div class="contacto-form-wrapper">
          <h3>Reserva tu Pared de Dulces</h3>
          <p>Completa el formulario y te contactaremos por WhatsApp</p>
          <form id="reserva-form" class="contacto-form">
            <div class="form-group"><label for="nombre">Nombre completo *</label><input type="text" id="nombre" name="nombre" required placeholder="Tu nombre" /></div>
            <div class="form-group"><label for="telefono">Telefono / WhatsApp *</label><input type="tel" id="telefono" name="telefono" required placeholder="55 1234 5678" /></div>
            <div class="form-row">
              <div class="form-group"><label for="colores">Colores de tu evento</label><input type="text" id="colores" name="colores" placeholder="Ej: Rosa y dorado" /></div>
              <div class="form-group"><label for="fecha">Fecha del evento *</label><input type="date" id="fecha" name="fecha" required /></div>
            </div>
            <div class="form-group"><label for="invitados">Numero de invitados aproximado</label><input type="number" id="invitados" name="invitados" placeholder="100" /></div>
            <div class="form-group"><label for="mensaje">Cuentanos sobre tu evento</label><textarea id="mensaje" name="mensaje" rows="4" placeholder="Tipo de evento, ubicacion, tematica, preferencias de dulces..."></textarea></div>
            <button type="submit" class="btn-submit">Enviar por WhatsApp</button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <script slot="scripts" is:inline>
    document.addEventListener('DOMContentLoaded', function() {
      document.querySelectorAll('.faq-question').forEach(button => {
        button.addEventListener('click', function() {
          const faqItem = this.parentElement;
          const isActive = faqItem.classList.contains('active');
          document.querySelectorAll('.faq-item').forEach(item => { item.classList.remove('active'); item.querySelector('.faq-question')?.setAttribute('aria-expanded', 'false'); });
          if (!isActive) { faqItem.classList.add('active'); this.setAttribute('aria-expanded', 'true'); }
        });
      });

      document.getElementById('reserva-form')?.addEventListener('submit', function(e) {
        e.preventDefault();
        const getValue = (id) => {
          const el = document.getElementById(id);
          return el instanceof HTMLInputElement || el instanceof HTMLSelectElement || el instanceof HTMLTextAreaElement
            ? el.value
            : '';
        };

        const nombre = getValue('nombre');
        const telefono = getValue('telefono');
        const colores = getValue('colores');
        const fecha = getValue('fecha');
        const invitados = getValue('invitados');
        const mensaje = getValue('mensaje');

        let whatsappMsg = `Hola! Me interesa cotizar una Pared de Dulces para mi evento.%0A%0A`;
        whatsappMsg += `*Nombre:* ${nombre}%0A*Telefono:* ${telefono}%0A`;
        if (colores) whatsappMsg += `*Colores:* ${colores}%0A`;
        whatsappMsg += `*Fecha:* ${fecha}%0A`;
        if (invitados) whatsappMsg += `*Invitados:* ${invitados}%0A`;
        if (mensaje) whatsappMsg += `%0A*Detalles:* ${mensaje}`;
        window.open(`https://wa.me/525525226442?text=${whatsappMsg}`, '_blank');
      });
    });
  </script>
</BaseLayout>

<style>
  .caracteristicas-section { padding: 100px 0; background: linear-gradient(180deg, #fff 0%, #fdf2f8 100%); }
  .caracteristicas-layout { display: grid; grid-template-columns: 1fr 1fr; gap: 60px; align-items: center; }
  .caracteristicas-left { padding-right: 20px; }
  .header-badge { display: inline-block; background: linear-gradient(135deg, #D1007A 0%, #A0005F 100%); color: #fff; padding: 8px 20px; border-radius: 50px; font-size: 0.85rem; font-weight: 600; text-transform: uppercase; letter-spacing: 1px; margin-bottom: 20px; }
  .caracteristicas-left h2 { font-size: 2.4rem; color: #1a1a1a; line-height: 1.3; margin-bottom: 20px; font-weight: 700; }
  .caracteristicas-left h2 span { color: #D1007A; }
  .header-description { font-size: 1.05rem; color: #555; line-height: 1.8; margin-bottom: 15px; }
  .header-description:last-of-type { margin-bottom: 30px; }
  .header-description strong { color: #D1007A; }
