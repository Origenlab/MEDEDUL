---
// Category Archive Page
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/seo/Breadcrumbs.astro';
import { getCollection } from 'astro:content';
import { categoryMeta } from '@/content/config';
import { getCdnUrl } from '@/lib/cdn';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => !data.draft);
  const categories = [...new Set(posts.map(post => post.data.category))];

  return categories.map(category => ({
    params: { category },
    props: {
      posts: posts.filter(post => post.data.category === category)
        .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()),
      category
    }
  }));
}

const { posts, category } = Astro.props;
const meta = categoryMeta[category as keyof typeof categoryMeta];
const categoryName = meta?.name || category;
const categoryIcon = meta?.icon || '';

// Breadcrumb items
const breadcrumbItems = [
  { name: 'Blog', url: '/blog' },
  { name: categoryName, url: `/blog/categoria/${category}` }
];
---

<BaseLayout
  title={`${categoryName} - Artículos sobre Mesas de Dulces | Mededul`}
  description={`Descubre todos nuestros artículos sobre ${categoryName.toLowerCase()}. Consejos, tendencias e inspiración para tu mesa de dulces.`}
>
  <div class="header-spacer"></div>

  <Breadcrumbs items={breadcrumbItems} />

  <!-- Category Hero -->
  <section class="category-hero">
    <div class="container">
      <span class="category-icon-large">{categoryIcon}</span>
      <h1>{categoryName}</h1>
      <p class="category-description">
        {meta?.description || `Artículos sobre ${categoryName.toLowerCase()} para tu mesa de dulces`}
      </p>
      <span class="post-count">{posts.length} artículo{posts.length !== 1 ? 's' : ''}</span>
    </div>
  </section>

  <!-- Posts Grid -->
  <section class="category-content">
    <div class="container">
      {posts.length > 0 ? (
        <div class="posts-grid">
          {posts.map(post => {
            const postMeta = categoryMeta[post.data.category as keyof typeof categoryMeta];

            return (
              <article class="post-card">
                <a href={`/blog/${post.slug}`}>
                  <img
                    src={getCdnUrl(post.data.heroImage)}
                    alt={post.data.heroImageAlt}
                    width="400"
                    height="250"
                    loading="lazy"
                  />
                </a>
                <div class="post-meta">
                  <span class="category">
                    <span class="category-icon">{postMeta?.icon}</span>
                    {postMeta?.name || post.data.category}
                  </span>
                  {post.data.readTime && (
                    <span class="read-time">{post.data.readTime}</span>
                  )}
                </div>
                <h3><a href={`/blog/${post.slug}`}>{post.data.title}</a></h3>
                <p>{post.data.description}</p>
                <a href={`/blog/${post.slug}`} class="btn btn-primary">Leer Artículo</a>
              </article>
            );
          })}
        </div>
      ) : (
        <div class="no-articles">
          <p>No hay artículos en esta categoría todavía.</p>
          <a href="/blog" class="btn btn-primary">Ver todos los artículos</a>
        </div>
      )}
    </div>
  </section>

  <!-- Back to Blog -->
  <section class="back-section">
    <div class="container">
      <a href="/blog" class="back-link">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        Ver todas las categorías
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  .category-hero {
    background: linear-gradient(135deg, var(--rosa-principal) 0%, #c4177a 50%, #a01365 100%);
    padding: 60px 0 70px;
    text-align: center;
    color: #ffffff;
  }

  .category-icon-large {
    font-size: 3rem;
    display: block;
    margin-bottom: 15px;
  }

  .category-hero h1 {
    font-size: clamp(2rem, 4vw, 2.8rem);
    font-weight: 800;
    margin-bottom: 15px;
  }

  .category-description {
    font-size: 1.1rem;
    opacity: 0.95;
    max-width: 600px;
    margin: 0 auto 20px;
  }

  .post-count {
    display: inline-block;
    background: rgba(255,255,255,0.2);
    padding: 8px 20px;
    border-radius: 50px;
    font-size: 0.9rem;
    font-weight: 600;
  }

  .category-content {
    padding: 60px 0;
    background: var(--gris-claro);
    min-height: 50vh;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 25px;
    max-width: 1400px;
    margin: 0 auto;
  }

  .post-card {
    background: #ffffff;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.06);
    display: flex;
    flex-direction: column;
    border: 1px solid rgba(233, 30, 140, 0.05);
  }

  .post-card > a:first-child {
    display: block;
    aspect-ratio: 16/10;
    overflow: hidden;
  }

  .post-card > a:first-child img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .post-card:hover > a:first-child img {
    transform: scale(1.05);
  }

  .post-card .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 18px 22px 0;
    font-size: 0.8rem;
  }

  .post-card .read-time {
    color: var(--texto-light);
    font-size: 0.82rem;
  }

  .post-card .category {
    display: inline-flex;
    align-items: center;
    gap: 5px;
    background: linear-gradient(135deg, rgba(233, 30, 140, 0.12) 0%, rgba(255, 107, 179, 0.08) 100%);
    color: var(--rosa-principal);
    padding: 6px 14px;
    border-radius: 50px;
    font-weight: 700;
    font-size: 0.72rem;
    text-transform: uppercase;
  }

  .post-card h3 {
    font-size: 1.18rem;
    font-weight: 700;
    line-height: 1.45;
    margin: 14px 0 10px;
    padding: 0 22px;
    color: var(--texto-oscuro);
  }

  .post-card h3 a {
    color: inherit;
    text-decoration: none;
  }

  .post-card h3 a:hover {
    color: var(--rosa-principal);
  }

  .post-card > p {
    font-size: 0.93rem;
    color: var(--texto-light);
    line-height: 1.7;
    padding: 0 22px;
    margin-bottom: 18px;
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-card .btn.btn-primary {
    display: inline-flex;
    align-items: center;
    background: var(--gradiente-rosa);
    color: #fff;
    padding: 13px 26px;
    margin: 0 22px 22px;
    border-radius: 50px;
    font-weight: 600;
    font-size: 0.88rem;
    text-decoration: none;
    width: fit-content;
    box-shadow: 0 4px 15px rgba(233, 30, 140, 0.25);
    transition: all 0.3s ease;
  }

  .post-card .btn.btn-primary:hover {
    background: linear-gradient(135deg, var(--rosa-hover) 0%, #a01365 100%);
    transform: translateY(-2px);
  }

  .no-articles {
    text-align: center;
    padding: 80px 20px;
  }

  .no-articles p {
    color: var(--texto-light);
    margin-bottom: 20px;
  }

  .back-section {
    padding: 40px 0;
    background: var(--gris-claro);
    border-top: 1px solid rgba(0,0,0,0.05);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    color: var(--rosa-principal);
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .back-link:hover {
    color: var(--rosa-hover);
    transform: translateX(-5px);
  }

  @media (max-width: 1024px) {
    .posts-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .category-hero {
      padding: 45px 0 55px;
    }

    .category-content {
      padding: 40px 0;
    }

    .posts-grid {
      grid-template-columns: 1fr;
      gap: 25px;
      padding: 0 16px;
    }
  }
</style>
