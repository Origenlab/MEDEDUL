---
// Tag Archive Page
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/seo/Breadcrumbs.astro';
import Hero from '@/components/global/Hero.astro';
import { getCollection } from 'astro:content';
import { categoryMeta } from '@/content/config';
import { getCdnUrl } from '@/lib/cdn';
import { getBlogCardCta } from '@/lib/blogCardCta';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => !data.draft);

  // Get all unique tags (normalized to lowercase with hyphens)
  const tagMap = new Map<string, { originalTag: string; posts: typeof posts }>();

  posts.forEach(post => {
    post.data.tags?.forEach(tag => {
      const normalizedTag = tag.toLowerCase().replace(/\s+/g, '-');
      if (!tagMap.has(normalizedTag)) {
        tagMap.set(normalizedTag, { originalTag: tag, posts: [] });
      }
      tagMap.get(normalizedTag)!.posts.push(post);
    });
  });

  return Array.from(tagMap.entries()).map(([tag, data]) => ({
    params: { tag },
    props: {
      posts: data.posts.sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime()),
      tagName: data.originalTag,
      tagSlug: tag
    }
  }));
}

const { posts, tagName, tagSlug } = Astro.props;

// Breadcrumb items
const breadcrumbItems = [
  { name: 'Blog', url: '/blog' },
  { name: `#${tagName}`, url: `/blog/tag/${tagSlug}` }
];
---

<BaseLayout
  title={`${tagName} - Artículos | Mededul`}
  description={`Artículos etiquetados con "${tagName}". Encuentra información sobre ${tagName.toLowerCase()} para tu mesa de dulces.`}
  includeBlogStyles={true}
>
  <Breadcrumbs items={breadcrumbItems} />

  <Hero
    title={tagName}
    subtitle={`Artículos relacionados con "${tagName}"`}
  />

  <!-- Posts Grid -->
  <section class="tag-content">
    <div class="container">
      {posts.length > 0 ? (
        <div class="posts-grid">
          {posts.map(post => {
            const meta = categoryMeta[post.data.category as keyof typeof categoryMeta];

            return (
              <article class="post-card">
                <a href={`/blog/${post.slug}`}>
                  <img
                    src={getCdnUrl(post.data.heroImage)}
                    alt={post.data.heroImageAlt}
                    width="400"
                    height="250"
                    loading="lazy"
                  />
                </a>
                <div class="post-meta">
                  <a href={`/blog/categoria/${post.data.category}`} class="category">
                    <span class="category-icon">{meta?.icon}</span>
                    {meta?.name || post.data.category}
                  </a>
                </div>
                <h3><a href={`/blog/${post.slug}`}>{post.data.title}</a></h3>
                <p>{post.data.description}</p>
                <a href={`/blog/${post.slug}`} class="btn btn-primary">{getBlogCardCta(post.data.category, post.data.title)}</a>
              </article>
            );
          })}
        </div>
      ) : (
        <div class="no-articles">
          <p>No hay artículos con esta etiqueta.</p>
          <a href="/blog" class="btn btn-primary">Ver todos los artículos</a>
        </div>
      )}
    </div>
  </section>

  <!-- Back to Blog -->
  <section class="back-section">
    <div class="container">
      <a href="/blog" class="back-link">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        Ver todos los artículos
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  .tag-content {
    padding: 60px 0;
    background: var(--gris-claro);
    min-height: 50vh;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 25px;
    max-width: 1400px;
    margin: 0 auto;
  }

  .post-card {
    background: #ffffff;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0,0,0,0.06);
    display: flex;
    flex-direction: column;
    border: 1px solid rgba(233, 30, 140, 0.05);
  }

  .post-card > a:first-child {
    display: block;
    aspect-ratio: 16/10;
    overflow: hidden;
  }

  .post-card > a:first-child img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .post-card .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 18px 22px 0;
    font-size: 0.8rem;
  }

  .post-card .category {
    display: inline-flex;
    align-items: center;
    gap: 5px;
    background: linear-gradient(135deg, rgba(233, 30, 140, 0.12) 0%, rgba(255, 107, 179, 0.08) 100%);
    color: var(--rosa-principal);
    padding: 6px 14px;
    border-radius: 50px;
    font-weight: 700;
    font-size: 0.72rem;
    text-transform: uppercase;
    text-decoration: none;
  }

  .post-card h3 {
    font-size: 1.18rem;
    font-weight: 700;
    line-height: 1.45;
    margin: 14px 0 10px;
    padding: 0 22px;
    color: var(--texto-oscuro);
  }

  .post-card h3 a {
    color: inherit;
    text-decoration: none;
  }

  .post-card > p {
    font-size: 0.93rem;
    color: var(--texto-light);
    line-height: 1.7;
    padding: 0 22px;
    margin-bottom: 18px;
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-card .btn.btn-primary {
    display: inline-flex;
    align-items: center;
    background: var(--gradiente-rosa);
    color: #fff;
    padding: 13px 26px;
    margin: 0 22px 22px;
    border-radius: 50px;
    font-weight: 600;
    font-size: 0.88rem;
    text-decoration: none;
    width: fit-content;
    box-shadow: 0 4px 15px rgba(233, 30, 140, 0.25);
  }

  .no-articles {
    text-align: center;
    padding: 80px 20px;
  }

  .no-articles p {
    color: var(--texto-light);
    margin-bottom: 20px;
  }

  .back-section {
    padding: 40px 0;
    background: var(--gris-claro);
    border-top: 1px solid rgba(0,0,0,0.05);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    color: var(--rosa-principal);
    font-weight: 600;
    text-decoration: none;
  }

  @media (max-width: 1024px) {
    .posts-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .tag-content {
      padding: 40px 0;
    }

    .posts-grid {
      grid-template-columns: 1fr;
      gap: 25px;
      padding: 0 16px;
    }
  }
</style>
