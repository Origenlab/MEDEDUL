---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/seo/Breadcrumbs.astro';
import BlogArchive from '@/components/blog/BlogArchive.astro';
import Hero from '@/components/global/Hero.astro';
import CTAServices from '@/components/global/CTAServices.astro';
import { getCollection } from 'astro:content';

const PAGE_SIZE = 9;
const allPosts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime());
const totalPages = Math.ceil(allPosts.length / PAGE_SIZE);

export async function getStaticPaths() {
  const PAGE_SIZE = 9;
  const posts = (await getCollection('blog', ({ data }) => !data.draft))
    .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime());
  const totalPages = Math.ceil(posts.length / PAGE_SIZE);

  return Array.from({ length: Math.max(0, totalPages - 1) }, (_, idx) => ({
    params: { page: String(idx + 2) },
    props: { currentPage: idx + 2, totalPages }
  }));
}

const { currentPage } = Astro.props;
const pageIndex = (currentPage - 1) * PAGE_SIZE;
const posts = allPosts.slice(pageIndex, pageIndex + PAGE_SIZE);
const categories = [...new Set(allPosts.map(post => post.data.category))];
const featuredPosts = allPosts.slice(0, 4);

const breadcrumbItems = [
  { name: 'Blog', url: '/blog' },
  { name: `Pagina ${currentPage}`, url: `/blog/pagina/${currentPage}` }
];
---

<BaseLayout
  title={`Blog - Pagina ${currentPage} | Mededul`}
  description={`Pagina ${currentPage} del blog de Mededul con articulos y contenido sobre mesas de dulces, candy bar y eventos.`}
  includeBlogStyles={true}
>
  <Breadcrumbs items={breadcrumbItems} />

  <Hero
    title="Blog de Mesas de Dulces"
    subtitle={`Pagina ${currentPage} de ${totalPages}. Contenido relacionado, ideas y enlaces importantes para tu evento.`}
    showCTA={false}
  />

  <BlogArchive
    posts={posts}
    featuredPosts={featuredPosts}
    categories={categories}
    currentPage={currentPage}
    totalPages={totalPages}
  />

  <CTAServices
    href="/contacto"
    badge="Asesoria Profesional"
    title="Ya Revisaste Opciones, Ahora"
    titleHighlight="Cotiza"
    text="Te ayudamos a convertir la inspiracion del blog en una propuesta concreta para tu evento."
    buttonText="Solicitar Cotizacion"
  />
</BaseLayout>
