---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/seo/Breadcrumbs.astro';
import BlogArchive from '@/components/blog/BlogArchive.astro';
import { getCollection } from 'astro:content';

const PAGE_SIZE = 9;
const allPosts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => a.data.title.localeCompare(b.data.title, 'es'));
const totalPages = Math.ceil(allPosts.length / PAGE_SIZE);

export async function getStaticPaths() {
  const PAGE_SIZE = 9;
  const posts = (await getCollection('blog', ({ data }) => !data.draft))
    .sort((a, b) => a.data.title.localeCompare(b.data.title, 'es'));
  const totalPages = Math.ceil(posts.length / PAGE_SIZE);

  return Array.from({ length: Math.max(0, totalPages - 1) }, (_, idx) => ({
    params: { page: String(idx + 2) },
    props: { currentPage: idx + 2, totalPages }
  }));
}

const { currentPage } = Astro.props;
const pageIndex = (currentPage - 1) * PAGE_SIZE;
const posts = allPosts.slice(pageIndex, pageIndex + PAGE_SIZE);
const categories = [...new Set(allPosts.map(post => post.data.category))];
const featuredPosts = allPosts.slice(0, 4);

const breadcrumbItems = [
  { name: 'Blog', url: '/blog' },
  { name: `Pagina ${currentPage}`, url: `/blog/pagina/${currentPage}` }
];
---

<BaseLayout
  title={`Blog - Pagina ${currentPage} | Mededul`}
  description={`Pagina ${currentPage} del blog de Mededul con articulos y contenido sobre mesas de dulces, candy bar y eventos.`}
>
  <div class="header-spacer"></div>
  <Breadcrumbs items={breadcrumbItems} />

  <section class="blog-hero">
    <div class="container">
      <h1>Blog de Mesas de Dulces</h1>
      <p>Pagina {currentPage} de {totalPages}. Contenido relacionado, ideas y enlaces importantes para tu evento.</p>
    </div>
  </section>

  <BlogArchive
    posts={posts}
    featuredPosts={featuredPosts}
    categories={categories}
    currentPage={currentPage}
    totalPages={totalPages}
  />
</BaseLayout>

<style>
  .blog-hero {
    background: linear-gradient(135deg, #E91E8C 0%, #c4177a 50%, #a01365 100%);
    padding: 56px 0 62px;
    text-align: center;
    color: #fff;
  }

  .blog-hero h1 {
    font-size: clamp(2rem, 4vw, 3rem);
    margin: 0 0 14px;
    font-weight: 800;
    letter-spacing: -0.3px;
  }

  .blog-hero p {
    max-width: 760px;
    margin: 0 auto;
    font-size: 1.05rem;
    line-height: 1.75;
    opacity: 0.95;
  }
</style>
