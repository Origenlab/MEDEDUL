---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/seo/Breadcrumbs.astro';
import BlogArchive from '@/components/blog/BlogArchive.astro';
import { getCollection } from 'astro:content';

const PAGE_SIZE = 9;
const allPosts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => a.data.title.localeCompare(b.data.title, 'es'));
const totalPages = Math.ceil(allPosts.length / PAGE_SIZE);

export async function getStaticPaths() {
  const PAGE_SIZE = 9;
  const posts = (await getCollection('blog', ({ data }) => !data.draft))
    .sort((a, b) => a.data.title.localeCompare(b.data.title, 'es'));
  const totalPages = Math.ceil(posts.length / PAGE_SIZE);

  return Array.from({ length: Math.max(0, totalPages - 1) }, (_, idx) => ({
    params: { page: String(idx + 2) },
    props: { currentPage: idx + 2, totalPages }
  }));
}

const { currentPage } = Astro.props;
const pageIndex = (currentPage - 1) * PAGE_SIZE;
const posts = allPosts.slice(pageIndex, pageIndex + PAGE_SIZE);
const categories = [...new Set(allPosts.map(post => post.data.category))];
const featuredPosts = allPosts.slice(0, 4);

const breadcrumbItems = [
  { name: 'Blog', url: '/blog' },
  { name: `Pagina ${currentPage}`, url: `/blog/pagina/${currentPage}` }
];
---

<BaseLayout
  title={`Blog - Pagina ${currentPage} | Mededul`}
  description={`Pagina ${currentPage} del blog de Mededul con articulos y contenido sobre mesas de dulces, candy bar y eventos.`}
>
  <div class="header-spacer"></div>
  <Breadcrumbs items={breadcrumbItems} />

  <section class="blog-hero">
    <div class="container">
      <h1>Blog de Mesas de Dulces</h1>
      <p>Pagina {currentPage} de {totalPages}. Contenido relacionado, ideas y enlaces importantes para tu evento.</p>
    </div>
  </section>

  <BlogArchive
    posts={posts}
    featuredPosts={featuredPosts}
    categories={categories}
    currentPage={currentPage}
    totalPages={totalPages}
  />
</BaseLayout>

<style>
  .blog-hero {
    position: relative;
    overflow: hidden;
    background: linear-gradient(135deg, #eaf7ff 0%, #f2fff8 52%, #fff8ee 100%);
    padding: 52px 0 56px;
    border-bottom: 1px solid rgba(116, 185, 255, 0.2);
  }

  .blog-hero::before,
  .blog-hero::after {
    content: "";
    position: absolute;
    border-radius: 999px;
    pointer-events: none;
  }

  .blog-hero::before {
    width: 260px;
    height: 260px;
    right: -70px;
    top: -70px;
    background: rgba(116, 185, 255, 0.25);
  }

  .blog-hero::after {
    width: 180px;
    height: 180px;
    left: -45px;
    bottom: -45px;
    background: rgba(85, 239, 196, 0.25);
  }

  .blog-hero .container {
    position: relative;
    z-index: 1;
    max-width: 1400px;
    text-align: center;
  }

  .blog-hero h1 {
    font-size: clamp(2rem, 4vw, 3rem);
    margin: 0 0 14px;
    font-weight: 800;
    letter-spacing: -0.3px;
    color: var(--negro-suave);
  }

  .blog-hero p {
    max-width: 760px;
    margin: 0 auto;
    font-size: 1.05rem;
    line-height: 1.75;
    color: var(--gris-texto);
  }
</style>
