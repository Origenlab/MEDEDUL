import JsonLd from '@/components/seo/JsonLd.astro';
import Hero from '@/components/global/Hero.astro';
import { getCdnUrl } from '@/lib/cdn';
import SectionHeader from '@/components/global/SectionHeader.astro';
import ServiceCard from '@/components/global/ServiceCard.astro';
import CTAServices from '@/components/global/CTAServices.astro';
import ReviewCard from '@/components/global/ReviewCard.astro';
import FAQ from '@/components/global/FAQ.astro';

// FAQ Data
const faqItems = [
  {
    question: "¿Con cuánta anticipación debo reservar mi mesa de dulces?",
    answer: "Recomendamos reservar con al menos 2-3 semanas de anticipación para eventos regulares. Para temporadas altas (diciembre, mayo, noviembre) sugerimos 4-6 semanas. Esto nos permite diseñar tu mesa con calma y asegurar todos los productos especiales."
  },
  {
    question: "¿Qué incluye el servicio de mesa de dulces?",
    answer: "Nuestro servicio incluye: diseño personalizado según tu temática, selección de dulces y productos, montaje profesional en tu evento, mobiliario y decoración de la mesa, supervisión durante el evento y desmontaje al finalizar. Tú solo disfrutas con tus invitados."
  },
  {
    question: "¿Pueden adaptar la mesa a mi tema o colores específicos?",
    answer: "¡Absolutamente! Eso es lo que mejor hacemos. Ya sea Barbie, superhéroes, elegante en dorado, temática mexicana o cualquier idea que tengas, la hacemos realidad. Trabajamos contigo para que cada detalle refleje tu visión."
  },
  {
    question: "¿Cuánto cuesta una mesa de dulces?",
    answer: "El precio varía según el número de invitados, tipo de dulces seleccionados, complejidad del diseño y extras como estaciones interactivas. Manejamos paquetes desde $3,500 MXN para eventos pequeños. Contáctanos para una cotización personalizada sin compromiso."
  },
  {
    question: "¿Qué zonas cubren en CDMX?",
    answer: "Cubrimos toda la Ciudad de México y área metropolitana (Naucalpan, Tlalnepantla, Huixquilucan, Coyoacán, Polanco, Santa Fe, Interlomas, etc.). Para ubicaciones fuera de CDMX, contáctanos para verificar disponibilidad y costos de traslado."
  },
  {
    question: "¿Ofrecen opciones para personas con restricciones alimenticias?",
    answer: "¡Sí! Podemos incluir opciones sin azúcar, sin gluten, veganas o para cualquier restricción alimenticia. Solo cuéntanos las necesidades de tus invitados y las integramos al diseño de tu mesa sin problema."
  }
];
---

<BaseLayout
  title="Mesas de Dulces CDMX | Renta de Candy Bar para Fiestas | Mededul"
  description="Mesas de dulces en CDMX para bodas, XV años y fiestas. Candy bar personalizado, fuente de chocolate y postres. Cotiza gratis."
  includeOrganizationSchema={true}
  includeLocalBusinessSchema={true}
  includeServiceSchema={true}
>
  <!-- FAQ Schema -->
  <JsonLd type="FAQPage" data={{
    faqs: [
      {
        question: "¿Cuánto cuesta una mesa de dulces en CDMX?",
        answer: "El precio de una mesa de dulces varía según el número de invitados, tipo de dulces y complejidad del diseño. En Mededul manejamos paquetes desde $3,500 MXN para eventos pequeños hasta $15,000 MXN para grandes celebraciones."
      },
      {
        question: "¿Con cuánta anticipación debo reservar mi mesa de dulces?",
        answer: "Recomendamos reservar con 2-3 semanas de anticipación para eventos regulares. Para temporadas altas como diciembre, mayo y noviembre, sugerimos 4-6 semanas de anticipación."
      },
      {
        question: "¿Qué incluye el servicio de renta de mesa de dulces?",
        answer: "Nuestro servicio incluye: diseño personalizado, selección de dulces premium, montaje profesional, mobiliario y decoración, supervisión durante el evento y desmontaje al finalizar."
      },
      {
        question: "¿Qué zonas cubren en CDMX?",
        answer: "Cubrimos toda la Ciudad de México y área metropolitana incluyendo Polanco, Santa Fe, Coyoacán, Naucalpan, Tlalnepantla, Huixquilucan e Interlomas."
      }
    ]
  }} />

  <!-- Page Hero Section -->
  <Hero
    id="inicio"
    title="Mesas de Dulces para Fiestas en CDMX"
    highlight="Mesas de Dulces"
    subtitle="Candy Bar profesional para bodas, XV años, baby showers y eventos corporativos"
    secondaryContent={`<p><strong>Mesas de dulces</strong> disenadas con enfoque estrategico te permiten transformar cualquier celebracion en una experiencia visual y sensorial de alto impacto. En Mededul desarrollamos propuestas personalizadas para CDMX que integran estilo, volumen de producto y armonia decorativa para que cada montaje comunique calidad desde el primer vistazo.</p><p><strong>Candy bar</strong> profesional con planeacion y montaje integral te ayuda a optimizar tiempo, controlar detalles y garantizar una ejecucion impecable durante todo el evento. Nuestro servicio combina seleccion premium, presentacion fotografiable y operacion puntual para que tus invitados vivan un momento memorable mientras tu disfrutas sin preocupaciones.</p>`}
    showCTA={true}
    ctaHref="/servicios"
    ctaBadge="Servicios Profesionales"
    ctaTitle="Descubre Nuestra Variedad de Mesas"
    ctaTitleHighlight="Variedad"
    ctaText="Desde elegantes mesas de postres hasta refrescantes barras de frutas. Encuentra el montaje perfecto para hacer de tu evento algo extraordinario."
    ctaButtonText="Ver Todos los Servicios"
  />

  <!-- Tipos de Mesas Section -->
  <section class="tipos-mesas section-padding" id="tipos-mesas">
    <div class="container">
      <SectionHeader
        title="Tipos de Mesas de Dulces para Rentar"
        titleHighlight="Mesas de Dulces"
        subtitle="Variedad deliciosa para todos los gustos y ocasiones"
        content={`<p>El secreto de una celebración inolvidable está en crear un punto de atracción que sorprenda a todos. Más allá del menú principal, la verdadera magia ocurre en ese rincón especial donde tus invitados pueden elegir entre una fresca <strong>mesa de frutas</strong> o una divertida <strong>mesa de donas y cupcakes</strong>.</p><p>Cada montaje tiene su propia personalidad y encanto. Desde la clásica <strong>mesa de dulces personalizados</strong> hasta la sofisticada <strong>tabla de quesos y embutidos</strong>, tenemos la opción perfecta para hacer de tu evento algo extraordinario.</p>`}
      />

      <div class="service-grid">
        <ServiceCard
          href="/tipos-de-mesas-de-dulces/mesa-de-dulces"
          image={getCdnUrl("/img/tipos-de-mesas/dulces-personalizadas/mesas-de-dulces-infantiles.avif")}
          alt="Renta de mesas de dulces infantiles personalizadas en CDMX - Candy bar para fiestas de niños"
          title="Mesa de Dulces"
          excerpt="Candy bar personalizado con dulces premium para bodas, XV años y fiestas infantiles. Diseño temático y montaje profesional incluido."
          cta="Conocer opciones"
          badge="Popular"
        />
        <ServiceCard
          href="/tipos-de-mesas-de-dulces/mesa-de-frutas"
          image={getCdnUrl("/img/tipos-de-mesas/frutas/mesas-de-frutas-para-eventos.avif")}
          alt="Mesas de frutas frescas para eventos y fiestas en CDMX - Servicio de catering frutal"
          title="Mesa de Frutas"
          excerpt="Frutas frescas de temporada presentadas con arte. Opción saludable y elegante que complementa cualquier celebración."
          cta="Ver presentaciones"
        />
        <ServiceCard
          href="/tipos-de-mesas-de-dulces/mesa-de-postres"
          image={getCdnUrl("/img/tipos-de-mesas/postres/mesas-de-postres-cdmx.avif")}
          alt="Mesas de postres gourmet para bodas y XV años en Ciudad de México"
          title="Mesa de Postres"
          excerpt="Postres gourmet artesanales: macarons, cupcakes, tartaletas y más. Repostería fina para eventos de alto nivel."
          cta="Explorar postres"
        />
        <ServiceCard
          href="/tipos-de-mesas-de-dulces/mesa-de-quesos-y-embutidos"
          image={getCdnUrl("/img/tipos-de-mesas/quesos-embutidos/renta-de-mesa-de-quesos.avif")}
          alt="Renta de mesa de quesos y embutidos gourmet para eventos corporativos y bodas CDMX"
          title="Quesos y Embutidos"
          excerpt="Tabla gourmet con quesos importados y embutidos premium. Ideal para cócteles, bodas y eventos corporativos."
          cta="Ver selección"
        />
        <ServiceCard
          href="/tipos-de-mesas-de-dulces/mesa-de-snacks"
          image={getCdnUrl("/img/tipos-de-mesas/snacks/barra-de-snacks-para-eventos.avif")}
          alt="Barra de snacks y botanas para fiestas infantiles y eventos empresariales"
          title="Mesa de Snacks"
          excerpt="Barra de snacks variados para mantener a tus invitados felices. Perfecta para fiestas largas y eventos casuales."
          cta="Ver opciones"
        />
        <ServiceCard
          href="/tipos-de-mesas-de-dulces/mesa-de-botanas"
          image={getCdnUrl("/img/tipos-de-mesas/botanas/mesas-de-botanas-en-cdmx.avif")}
          alt="Mesas de botanas saladas para fiestas y reuniones en Ciudad de México"
          title="Mesa de Botanas"
          excerpt="Botanas saladas gourmet para equilibrar lo dulce. Frutos secos, chips artesanales y opciones premium."
          cta="Descubrir más"
        />
        <ServiceCard
          href="/tipos-de-mesas-de-dulces/mesa-de-dulces-tradicionales"
          image={getCdnUrl("/img/tipos-de-mesas/dulces-tradicionales/mesa-de-dulces-tipicos-cdmx.avif")}
          alt="Mesa de dulces típicos mexicanos - Candy bar tradicional con mazapanes y obleas"
          title="Dulces Tradicionales"
          excerpt="Dulces mexicanos auténticos: mazapanes, obleas, cocadas y glorias. Nostalgia y sabor en cada bocado."
          cta="Ver tradición"
        />
        <ServiceCard
          href="/tipos-de-mesas-de-dulces/mesa-de-donas-y-cupcakes"
          image={getCdnUrl("/img/tipos-de-mesas/donas-cupcakes/mesa-de-donas-cdm.avif")}
          alt="Mesa de donas y cupcakes decorados para baby shower y cumpleaños CDMX"
          title="Donas y Cupcakes"
          excerpt="Donas gourmet y cupcakes decorados a mano. Tendencia actual en baby showers, cumpleaños y eventos modernos."
          cta="Ver diseños"
          badge="Tendencia"
        />
      </div>
    </div>
  </section>

  <!-- Eventos Section -->
  <section class="eventos section-padding" id="eventos">
    <div class="container">
      <SectionHeader
        title="Candy Bar para cada Tipo de Evento"
        titleHighlight="Tipo de Evento"
        subtitle="Cada evento es único, y tu mesa de dulces también debe serlo"
        content={`<p>No estás planeando solo una fiesta, estás creando un recuerdo que durará para siempre. Una <strong>mesa de dulces temática</strong> es mucho más que postres: es el corazón de tu celebración, ese rincón mágico que refleja tu estilo.</p><p>Desde tiernas <strong>mesas para baby shower</strong> hasta elegantes <strong>candy bars para bodas</strong>, nos especializamos en crear el ambiente perfecto que dejará a todos tus invitados fascinados.</p>`}
      />

      <div class="service-grid">
        <ServiceCard
          href="/candy-bar-eventos"
          image={getCdnUrl("/img/eventos/baby-shower/mesa-de-dulces-para-baby-shower.avif")}
          alt="Mesa de dulces para baby shower en CDMX - Candy bar temático para bebé"
          title="Mesas Temáticas"
          excerpt="Diseños únicos adaptados a tu temática favorita. Desde personajes hasta conceptos abstractos, creamos la mesa perfecta."
          cta="Explorar temas"
        />
        <ServiceCard
