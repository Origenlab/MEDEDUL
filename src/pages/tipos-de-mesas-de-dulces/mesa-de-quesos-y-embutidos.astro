    '@type': 'AggregateOffer',
    lowPrice: '5200',
    highPrice: '13900',
    priceCurrency: 'MXN',
    offerCount: '3',
    offers: packages.map(pkg => ({
      '@type': 'Offer',
      name: `Tabla de Quesos ${pkg.name}`,
      price: pkg.price.replace(/[$,]/g, ''),
      priceCurrency: 'MXN',
      description: pkg.guests,
      availability: 'https://schema.org/InStock'
    }))
