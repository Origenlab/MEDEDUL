const serviceSchema = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: 'Mesa de Donas y Cupcakes en CDMX',
  description: 'Servicio de mesa de donas y cupcakes para eventos en Ciudad de Mexico con presentacion personalizada.',
