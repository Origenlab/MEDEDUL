    guests: '30-50 personas',
    description: 'Ideal para eventos pequenos',
    features: [
      '1 tipo de mesa principal',
      'Montaje profesional',
      'Presentacion elegante',
      'Mobiliario incluido',
      'Desmontaje al finalizar'
    ],
    popular: false
  },
  {
