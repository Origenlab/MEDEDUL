const processSteps = [
  {
    number: 1,
    title: 'Diagnostico del Evento',
    description: 'Definimos tipo de evento, perfil de invitados y objetivos para recomendar la combinacion de mesas ideal.'
  },
  {
    number: 2,
    title: 'Propuesta y Curaduria',
    description: 'Seleccionamos tipos de mesas, volumen de producto y lineamiento visual para una propuesta coherente y funcional.'
  },
  {
    number: 3,
    title: 'Planeacion Operativa',
    description: 'Alineamos logistica, horarios, montaje y requerimientos del venue para evitar imprevistos el dia del evento.'
  },
  {
    number: 4,
    title: 'Montaje y Ejecucion',
    description: 'Instalamos, cuidamos presentacion y aseguramos una experiencia de consumo impecable durante la celebracion.'
  }
];

const itemListSchema = {
  '@context': 'https://schema.org',
  '@type': 'ItemList',
  name: 'Tipos de Mesas de Dulces para Rentar',
  description: 'Catalogo de tipos de mesas de dulces para eventos en CDMX',
  numberOfItems: 8,
  itemListElement: [
    { '@type': 'ListItem', position: 1, item: { '@type': 'Service', name: 'Mesa de Dulces Personalizada' } },
    { '@type': 'ListItem', position: 2, item: { '@type': 'Service', name: 'Mesa de Frutas' } },
    { '@type': 'ListItem', position: 3, item: { '@type': 'Service', name: 'Mesa de Postres Gourmet' } },
    { '@type': 'ListItem', position: 4, item: { '@type': 'Service', name: 'Mesa de Quesos y Embutidos' } },
    { '@type': 'ListItem', position: 5, item: { '@type': 'Service', name: 'Mesa de Snacks' } },
