const serviceSchema = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: 'Mesa de Snacks para Eventos en CDMX',
  description: 'Servicio de mesa de snacks para eventos sociales y corporativos en Ciudad de Mexico.',
