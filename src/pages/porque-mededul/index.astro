---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/seo/Breadcrumbs.astro';
import Hero from '@/components/global/Hero.astro';
import JsonLd from '@/components/seo/JsonLd.astro';
import SectionHeader from '@/components/global/SectionHeader.astro';
import ServiceCard from '@/components/global/ServiceCard.astro';
import CTAServices from '@/components/global/CTAServices.astro';
import FAQ from '@/components/global/FAQ.astro';
import ContactSection from '@/components/global/ContactSection.astro';
import { getCdnUrl } from '@/lib/cdn';

const breadcrumbItems = [
  { name: 'Servicios', url: '/servicios' },
  { name: 'Por que Mededul', url: '/porque-mededul' }
];

const faqItems = [
  {
    question: 'Que hace diferente a Mededul frente a otros proveedores?',
    answer: 'Combinamos diseno personalizado, calidad premium de producto, montaje profesional y coordinacion operativa completa para entregar resultados consistentes en cada evento.'
  },
  {
    question: 'Cuentan con experiencia comprobada en eventos?',
    answer: 'Si. Hemos participado en cientos de eventos sociales y corporativos en CDMX, lo que nos permite anticipar riesgos y ejecutar con estandares claros de calidad y puntualidad.'
  },
  {
    question: 'Puedo personalizar totalmente mi mesa de dulces?',
    answer: 'Si. Adaptamos paleta, estilo visual, volumen de producto y composicion segun tipo de evento, perfil de invitados y presupuesto.'
  },
  {
    question: 'Incluyen montaje y desmontaje?',
    answer: 'Si. El servicio contempla planeacion, montaje profesional, coordinacion en sitio y desmontaje al finalizar.'
  },
  {
    question: 'Atienden eventos corporativos y sociales?',
    answer: 'Si. Operamos bodas, XV anos, baby shower, bautizos, graduaciones, activaciones y eventos empresariales en CDMX y area metropolitana.'
  },
  {
    question: 'Como solicito una cotizacion profesional?',
    answer: 'Puedes contactarnos por formulario o WhatsApp con fecha, tipo de evento y numero de invitados para recibir una propuesta clara y personalizada.'
  }
];

const packages = [
  {
    name: 'Esencial',
    icon: 'ðŸ¬',
    priceAmount: '$4,500',
    priceNote: 'MXN',
    guests: '30-50 personas',
    description: 'Ideal para eventos pequenos',
    features: [
      'Diseno base personalizado',
      'Montaje profesional',
      'Seleccion de producto curada',
      'Mobiliario incluido',
      'Desmontaje al finalizar'
    ],
    popular: false
  },
  {
    name: 'Signature',
    icon: 'â­',
    priceAmount: '$7,900',
    priceNote: 'MXN',
    guests: '50-100 personas',
    description: 'La opcion mas solicitada',
    features: [
      'Diseno integral por concepto',
      'Surtido premium ampliado',
      'Montaje y coordinacion en sitio',
      'Ajustes visuales personalizados',
      'Asesoria previa de produccion',
      'Mejor equilibrio costo-beneficio'
    ],
    popular: true
  },
  {
    name: 'Premium',
    icon: 'ðŸ’Ž',
    priceAmount: '$12,500',
    priceNote: 'MXN',
    guests: '100+ personas',
    description: 'Experiencia integral de alto impacto',
    features: [
      'Direccion estetica completa',
      'Curaduria premium de producto',
      'Operacion en sitio extendida',
      'Configuracion para eventos grandes',
      'Acompanamiento operativo total',
      'Mayor volumen y variedad'
    ],
    popular: false
  }
];

const processSteps = [
  {
    number: 1,
    title: 'Diagnostico del Evento',
    description: 'Analizamos objetivo, tipo de celebracion, invitados y sede para definir una propuesta realista y efectiva.'
  },
  {
    number: 2,
    title: 'Propuesta y Curaduria',
    description: 'Disenamos una propuesta visual y comercial con alcance claro, niveles de servicio y seleccion de producto.'
  },
  {
    number: 3,
    title: 'Planeacion Operativa',
    description: 'Alineamos tiempos, montaje, logistica y coordinacion con venue para ejecutar sin improvisaciones.'
  },
  {
    number: 4,
    title: 'Montaje y Ejecucion',
    description: 'Implementamos el servicio completo cuidando presentacion, experiencia de invitados y cierre operativo.'
  }
];

const itemListSchema = {
  '@context': 'https://schema.org',
  '@type': 'ItemList',
  name: 'Razones para Elegir Mededul en CDMX',
  description: 'Factores diferenciales de Mededul: diseno personalizado, calidad premium, servicio completo y cero estres',
  numberOfItems: 4,
  itemListElement: [
    { '@type': 'ListItem', position: 1, item: { '@type': 'Service', name: 'Diseno Personalizado' } },
    { '@type': 'ListItem', position: 2, item: { '@type': 'Service', name: 'Calidad Premium' } },
    { '@type': 'ListItem', position: 3, item: { '@type': 'Service', name: 'Servicio Completo' } },
    { '@type': 'ListItem', position: 4, item: { '@type': 'Service', name: 'Cero Estres' } }
  ]
};

const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: faqItems.map((faq) => ({
    '@type': 'Question',
    name: faq.question,
    acceptedAnswer: {
      '@type': 'Answer',
      text: faq.answer
    }
  }))
};
---

<BaseLayout
  title="Por que Elegir Mededul | Mesas de Dulces Profesionales en CDMX"
  description="Conoce por que Mededul es una opcion confiable para mesas de dulces y candy bar en CDMX: diseno personalizado, calidad premium y operacion profesional."
  canonical="/porque-mededul"
  ogImage="/img/home/hero-mesas-dulces-profesionales.avif"
  includeOrganizationSchema={true}
  includeCategoryStyles={true}
>
  <JsonLd type="Service" />
  <script type="application/ld+json" is:inline set:html={JSON.stringify(itemListSchema)} slot="head" />
  <script type="application/ld+json" is:inline set:html={JSON.stringify(faqSchema)} slot="head" />

  <Breadcrumbs items={breadcrumbItems} />

  <Hero
    id="porque-mededul"
    title="Por que Elegir Mededul para tu Evento en CDMX"
    highlight="Elegir Mededul"
    subtitle="Metodologia profesional para disenar, montar y operar experiencias de mesas de dulces sin improvisaciones"
    secondaryContent={`<p><strong>Experiencia</strong> comprobada en eventos sociales y corporativos nos permite ejecutar cada montaje con estandares consistentes de calidad, puntualidad y presentacion. En Mededul convertimos tus objetivos en una propuesta clara para que el resultado final sea visualmente potente y operativamente confiable.</p><p><strong>Confianza</strong> operativa significa procesos definidos en diseno, curaduria, montaje y desmontaje para reducir riesgos y asegurar una ejecucion impecable. Nuestro equipo te acompana de principio a fin para que vivas tu evento con control, tranquilidad y nivel premium.</p>`}
    showCTA={true}
    ctaHref="/contacto"
    ctaBadge="Asesoria Especializada"
    ctaTitle="Recibe una Propuesta Profesional"
    ctaTitleHighlight="Profesional"
    ctaText="Comparte fecha, tipo de evento y numero de invitados para recomendarte la mejor estrategia de servicio."
    ctaButtonText="Solicitar Asesoria"
  />

  <section class="section-paquetes" id="paquetes">
    <div class="paquetes-bg">
      <div class="paquetes-glow paquetes-glow--1"></div>
      <div class="paquetes-glow paquetes-glow--2"></div>
    </div>

    <div class="container paquetes-container">
      <div class="paquetes-header">
        <span class="paquetes-badge">Niveles de Servicio</span>
        <h2 class="paquetes-title">
          Escoge el <span>Formato Correcto</span>
        </h2>
        <p class="paquetes-subtitle">
          Ajustamos cada propuesta a tu evento, volumen de invitados y nivel de personalizacion requerido.
        </p>
      </div>

      <div class="packages-grid">
        {packages.map((pkg) => (
          <div class:list={['package-card', { 'package-card--popular': pkg.popular }]}> 
            {pkg.popular && (
              <div class="package-ribbon">
                <span>Mas Solicitado</span>
              </div>
            )}

            <div class="package-top">
              <div class="package-icon-wrapper">
                <span class="package-icon">{pkg.icon}</span>
              </div>
              <h3 class="package-name">{pkg.name}</h3>
              <p class="package-tagline">{pkg.description}</p>
            </div>

            <div class="package-pricing">
              <div class="package-price-wrapper">
                <span class="package-price-label">Desde</span>
                <span class="package-price-amount">{pkg.priceAmount}</span>
                <span class="package-price-currency">{pkg.priceNote}</span>
              </div>
              <div class="package-guests">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                  <circle cx="9" cy="7" r="4"/>
                  <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                  <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                </svg>
                <span>{pkg.guests}</span>
              </div>
            </div>

            <div class="package-separator">
              <span class="package-separator-text">Incluye</span>
            </div>

            <ul class="package-features">
              {pkg.features.map(feature => (
                <li>
                  <span class="feature-check">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                      <polyline points="20 6 9 17 4 12"/>
                    </svg>
                  </span>
                  <span class="feature-text">{feature}</span>
                </li>
              ))}
            </ul>

            <a href="/contacto" class="package-cta">
              <span>Solicitar Cotizacion</span>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        ))}
      </div>

      <p class="paquetes-note">
        <strong>Necesitas una propuesta distinta?</strong> Disenamos una configuracion personalizada con base en tus objetivos.
      </p>
    </div>
  </section>

  <section class="section-servicios section-padding" id="pilares">
    <div class="container">
      <SectionHeader
        title="Nuestros Pilares de Servicio"
        titleHighlight="Pilares"
        subtitle="Factores que garantizan resultados consistentes"
        content={`<p>Estos cuatro pilares resumen como trabajamos para convertir una idea en una experiencia bien ejecutada.</p><p>Cada uno integra criterios de diseno, operacion y calidad para reducir riesgos y elevar el nivel final del evento.</p>`}
      />

      <div class="service-grid service-grid--4">
        <ServiceCard
          href="/porque-mededul/diseno-personalizado"
          image={getCdnUrl('/img/porque-elegirnos/diseno-personalizado-mesas-dulces.avif')}
          alt="Diseno personalizado de mesas de dulces"
          title="Diseno Personalizado"
          excerpt="Conceptos visuales adaptados al tipo de evento, paleta y estilo del cliente."
          cta="Ver Diseno"
          badge="Pilar"
        />
        <ServiceCard
          href="/porque-mededul/calidad-premium"
          image={getCdnUrl('/img/porque-elegirnos/calidad-premium-dulces.avif')}
          alt="Calidad premium en producto"
          title="Calidad Premium"
          excerpt="Curaduria de insumos y presentacion para sostener nivel premium en cada montaje."
          cta="Ver Calidad"
        />
        <ServiceCard
          href="/porque-mededul/servicio-completo"
          image={getCdnUrl('/img/porque-elegirnos/servicio-completo-mesas.avif')}
          alt="Servicio completo para eventos"
          title="Servicio Completo"
          excerpt="Planeacion, montaje y desmontaje con coordinacion profesional en cada fase."
          cta="Ver Servicio"
        />
        <ServiceCard
          href="/porque-mededul/cero-estres"
          image={getCdnUrl('/img/porque-elegirnos/cero-estres-eventos.avif')}
          alt="Servicio cero estres"
          title="Cero Estres"
          excerpt="Procesos claros para que disfrutes el evento mientras nosotros resolvemos la operacion."
          cta="Ver Metodologia"
        />
      </div>
    </div>
  </section>

  <section class="section-estaciones section-padding" id="soluciones">
    <div class="container">
      <SectionHeader
        title="Soluciones que Operamos"
        titleHighlight="Soluciones"
        subtitle="Servicios integrados para eventos sociales y corporativos"
        content={`<p>Ademas de nuestra metodologia, operamos un portafolio completo de mesas y estaciones para ejecutar propuestas integrales.</p><p>Esto nos permite alinear diseno, experiencia y logistica en una sola solucion profesional.</p>`}
      />

      <div class="service-grid">
        <ServiceCard
          href="/tipos-de-mesas-de-dulces"
          image={getCdnUrl('/img/tipos-de-mesas/dulces-personalizadas/mesa-dulces-personalizada-elegante.avif')}
          alt="Tipos de mesas de dulces en CDMX"
          title="Tipos de Mesas"
          excerpt="Catalogo de mesas de dulces, postres, frutas, snacks y opciones gourmet para cada tipo de evento."
          cta="Ver Tipos de Mesas"
        />
        <ServiceCard
          href="/candy-bar-eventos"
          image={getCdnUrl('/img/eventos/bodas/mesa-dulces-boda-elegante-macarons-cristaleria.avif')}
          alt="Candy bar por tipo de evento"
          title="Candy Bar por Evento"
          excerpt="Propuestas especificas para boda, XV anos, baby shower, bautizo, corporativo y graduacion."
          cta="Ver Candy Bar"
        />
        <ServiceCard
          href="/estaciones-interactivas"
          image={getCdnUrl('/img/estaciones-interactivas/fuente-chocolate/fuente-de-chocolate-para-eventos.avif')}
          alt="Estaciones interactivas para eventos"
          title="Estaciones Interactivas"
          excerpt="Fuente de chocolate, chamoy, candy wall y stand para pastel para elevar la experiencia."
          cta="Ver Estaciones"
        />
        <ServiceCard
          href="/servicios"
          image={getCdnUrl('/img/home/hero-mesas-dulces-profesionales.avif')}
          alt="Servicios integrales Mededul"
          title="Servicios Integrales"
          excerpt="Planeacion y ejecucion completa para producir eventos con resultados consistentes y premium."
          cta="Ver Servicios"
          badge="Integral"
        />
      </div>
    </div>
  </section>

  <CTAServices
    href="/contacto"
    badge="Asesoria sin Costo"
    title="Quieres una Propuesta sin Riesgo?"
    titleHighlight="sin Riesgo"
    text="Te ayudamos a definir una estrategia de montaje clara para tu evento con alcance, tiempos y presupuesto bien estructurados."
    buttonText="Solicitar Asesoria"
  />

  <section class="section-proceso section-padding" id="proceso">
    <div class="container">
      <div class="proceso-header">
        <span class="proceso-badge">Nuestro Proceso</span>
        <h2 class="proceso-title">Asi Ejecutamos Tu <span>Proyecto</span></h2>
        <p class="proceso-subtitle">Una metodologia ordenada para entregar calidad de principio a fin.</p>
      </div>

      <div class="process-grid">
        {processSteps.map((step) => (
          <div class="process-card">
            <div class="process-step-badge">Paso {step.number}</div>
            <div class="process-content">
              <h4 class="process-title">{step.title}</h4>
              <p class="process-description">{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section-faq section-padding" id="faq">
    <div class="container">
      <SectionHeader
        title="Preguntas Frecuentes sobre Mededul"
        titleHighlight="Frecuentes"
        subtitle="Resolvemos las dudas clave antes de contratar"
        content={`<p>Estas respuestas te permiten evaluar con claridad nuestro enfoque de trabajo y tomar una decision informada.</p>`}
      />

      <FAQ items={faqItems} id="faq-porque-mededul" />
    </div>
  </section>

  <ContactSection />
</BaseLayout>
