---
// Calidad Premium - Por que Mededul Subpage
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/seo/Breadcrumbs.astro';
import { getCdnUrl } from '@/lib/cdn';

const breadcrumbItems = [
  { name: 'Por que Elegirnos', url: '/porque-mededul' },
  { name: 'Calidad Premium', url: '/porque-mededul/calidad-premium' }
];

const stats = [
  { number: '50+', label: 'Variedades' },
  { number: '100%', label: 'Frescos' },
  { number: 'AAA', label: 'Calidad' },
  { number: '0', label: 'Quejas' }
];

const caracteristicas = [
  { number: 1, title: 'Seleccion Rigurosa', description: 'Cada proveedor pasa evaluacion de calidad. Tu eliges el sabor que prefieras.' },
  { number: 2, title: 'Productos Frescos', description: 'Multiples variedades con productos frescos garantizados y controlados.' },
  { number: 3, title: 'Marcas Premium', description: 'Chocolates finos, gomitas artesanales, dulces gourmet y frutas de temporada.' },
  { number: 4, title: 'Control de Calidad', description: 'Verificamos cada producto antes del montaje para garantizar la excelencia.' }
];

const incluye = [
  { number: '01', title: 'Productos Frescos', description: 'Equipo de seleccion que garantiza productos frescos y de primera calidad para cada evento.' },
  { number: '02', title: 'Seleccion Rigurosa', description: 'Productos premium de alta calidad. Elige entre las mejores marcas y variedades disponibles.' },
  { number: '03', title: 'Marcas Premium de Temporada', description: 'Chocolates finos, gomitas artesanales, dulces gourmet, manzana verde, pina y kiwi.' },
  { number: '04', title: 'Acompanantes Variados', description: 'Malvaviscos, churros mini, pretzels, galletas de mantequilla y bombones. Variedad para todos.' },
  { number: '05', title: 'Operador Profesional', description: 'Personal capacitado que atiende, rellena acompanantes y mantiene todo impecable.' },
  { number: '06', title: 'Montaje y Decoracion', description: 'Mesa con mantel, base decorativa, iluminacion LED opcional, platos y servilletas.' }
];

const proceso = [
  { number: 1, title: 'Contactanos', description: 'Escribenos por WhatsApp con la fecha, lugar y numero de invitados.' },
  { number: 2, title: 'Seleccionamos', description: 'Elegimos juntos los dulces premium que mejor se adapten a tu evento.' },
  { number: 3, title: 'Verificamos', description: 'Control de calidad previo para garantizar productos frescos y perfectos.' },
  { number: 4, title: 'Disfrutas', description: 'Tu y tus invitados disfrutan dulces de la mas alta calidad.' }
];

const faqs = [
  {
    question: '¿Que tipo de dulces premium incluyen?',
    answer: 'Trabajamos con chocolates finos de marcas reconocidas, gomitas artesanales, dulces gourmet importados y nacionales, frutas de temporada frescas y postres artesanales. Cada producto pasa por nuestro control de calidad.'
  },
  {
    question: '¿Los dulces son frescos?',
    answer: 'Absolutamente. Compramos los productos pocos dias antes de tu evento para garantizar frescura maxima. Las frutas se preparan el mismo dia del evento para mantener su sabor y presentacion optima.'
  },
  {
    question: '¿Puedo elegir marcas especificas de dulces?',
    answer: 'Si, puedes solicitar marcas especificas o tipos de dulces particulares. Trabajamos contigo para crear la seleccion perfecta segun tus preferencias y las de tus invitados.'
  },
  {
    question: '¿Manejan opciones para alergias o restricciones alimentarias?',
    answer: 'Por supuesto. Podemos adaptar la seleccion para evitar alergenos comunes como nueces, gluten o lacteos. Solo indicanos las restricciones al momento de cotizar.'
  },
  {
    question: '¿Que garantia tienen sobre la calidad?',
    answer: 'Garantizamos productos frescos y de primera calidad. Cada articulo pasa por verificacion antes del montaje. Si algo no cumple nuestros estandares, lo reemplazamos inmediatamente.'
  },
  {
    question: '¿Trabajan con proveedores locales?',
    answer: 'Si, priorizamos proveedores locales certificados que garantizan productos frescos y de calidad. Tambien trabajamos con marcas premium nacionales e internacionales.'
  }
];

const galeriaImages = [
  { src: '/img/home/hero-mesas-dulces-profesionales.avif', alt: 'Dulces premium para eventos' },
  { src: '/img/home/hero-mesas-dulces-profesionales.avif', alt: 'Chocolates finos para mesas de dulces' },
  { src: '/img/home/hero-mesas-dulces-profesionales.avif', alt: 'Gomitas artesanales premium' },
  { src: '/img/home/hero-mesas-dulces-profesionales.avif', alt: 'Frutas frescas de temporada' },
  { src: '/img/home/hero-mesas-dulces-profesionales.avif', alt: 'Seleccion gourmet de dulces' }
];

const eventos = [
  {
    title: 'Mesa de Dulces para Bodas',
    description: 'Montajes elegantes y romanticos que complementan tu gran dia. Disenos sofisticados con la paleta de colores de tu boda.',
    image: '/img/eventos/bodas/mesa-de-dulces-para-bodas.avif',
    badge: 'Mas Solicitado',
    badgeColor: 'linear-gradient(135deg, #D4AF37 0%, #F4E4BC 100%)',
    badgeTextColor: '#1a1a1a',
    features: ['Diseno elegante personalizado', 'Coordinacion con tu decoracion', 'Dulces premium seleccionados'],
    link: '/candy-bar-eventos/mesa-dulces-boda',
    linkText: 'Mesa para Bodas'
  },
  {
    title: 'Mesa de Dulces para XV Anos',
    description: 'Mesas espectaculares con la tematica y colores de la quinceañera. Hacemos realidad el sueno de tu princesa.',
    image: '/img/eventos/xv-anos/mesa-de-dulces-para-xv-anos.avif',
    badge: 'Espectacular',
    badgeColor: 'linear-gradient(135deg, #9B59B6 0%, #E91E8C 100%)',
    badgeTextColor: '#fff',
    features: ['Tematica a tu eleccion', 'Montaje impresionante', 'Variedad de dulces modernos'],
    link: '/candy-bar-eventos/mesa-dulces-xv-anos',
    linkText: 'Mesa para XV Anos'
  },
  {
    title: 'Mesa de Dulces Baby Shower',
    description: 'Disenos delicados en tonos pastel para dar la bienvenida al bebe. Creamos ambientes tiernos y memorables.',
    image: '/img/eventos/baby-shower/mesa-dulces-baby-shower-nino-ositos-azul.avif',
    badge: 'Delicado',
    badgeColor: 'linear-gradient(135deg, #87CEEB 0%, #98D8C8 100%)',
    badgeTextColor: '#1a1a1a',
    features: ['Tonos pastel personalizados', 'Reveal de genero incluido', 'Detalles tiernos unicos'],
    link: '/candy-bar-eventos/mesa-dulces-baby-shower',
    linkText: 'Mesa Baby Shower'
  },
  {
    title: 'Mesa de Dulces Cumpleanos',
    description: 'Fiestas infantiles y celebraciones de adultos con tematicas 100% personalizadas. Cada edad merece algo especial.',
    image: '/img/eventos/cumpleanos/mesa-de-dulces-para-cumpleanos.avif',
    badge: 'Divertido',
    badgeColor: 'linear-gradient(135deg, #FF6B6B 0%, #FFE66D 100%)',
    badgeTextColor: '#1a1a1a',
    features: ['Tematica favorita del festejado', 'Dulces para todas las edades', 'Decoracion alegre y colorida'],
    link: '/candy-bar-eventos/mesa-dulces-cumpleanos-infantil',
    linkText: 'Mesa Cumpleanos'
  }
];
---

<BaseLayout
  title="Mesas de Dulces con Calidad Premium CDMX | Dulces Gourmet"
  description="Mesas de dulces con calidad premium en CDMX. Candy bar con dulces gourmet, chocolates finos y postres artesanales para tu evento."
  canonical="https://mesas-de-dulces.com/porque-mededul/calidad-premium"
  ogImage="/img/home/hero-mesas-dulces-profesionales.avif"
  includeServiceSchema={true}
>
  <Fragment slot="head">
    <script type="application/ld+json" is:inline set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "FAQPage",
      "mainEntity": faqs.map(faq => ({
        "@type": "Question",
        "name": faq.question,
        "acceptedAnswer": {
          "@type": "Answer",
          "text": faq.answer
        }
      }))
    })} />
  </Fragment>

  <div class="header-spacer"></div>

  <Breadcrumbs items={breadcrumbItems} />

  <!-- Hero Section -->
  <section class="servicio-hero">
    <div class="container">
      <div class="servicio-hero-grid">
        <div class="servicio-hero-content">
          <h1>Calidad <span>Premium</span> en Cada Dulce</h1>
          <p class="descripcion">Hipnotiza a tus invitados con <strong>dulces y postres de la mas alta calidad</strong> que se convierten en el centro de atencion de tu evento. La calidad excepcional en cada producto invita a todos a disfrutar.</p>
          <p class="descripcion">Desde chocolates finos hasta gomitas artesanales, cada elemento de tu mesa de dulces cumple con nuestros estrictos estandares de calidad.</p>

          <div class="hero-buttons">
            <a href="https://wa.me/525525226442?text=Hola! Me interesa conocer mas sobre la calidad premium de sus dulces" class="btn-whatsapp-hero" target="_blank" rel="noopener">
              <svg viewBox="0 0 32 32" fill="currentColor" width="28" height="28">
                <path d="M16.004 0C7.166 0 .004 7.16.004 15.996c0 2.816.736 5.576 2.136 8.004L.004 32l8.188-2.144a15.94 15.94 0 007.812 2.016C24.84 31.872 32 24.712 32 15.876 32 7.16 24.84 0 16.004 0zm0 29.312a13.36 13.36 0 01-6.812-1.868l-.488-.292-5.064 1.328 1.352-4.936-.32-.508a13.28 13.28 0 01-2.04-7.04c0-7.36 5.992-13.352 13.36-13.352 7.372 0 13.364 5.992 13.364 13.36 0 7.372-5.988 13.308-13.352 13.308zm7.328-9.996c-.4-.2-2.368-1.168-2.736-1.3-.368-.136-.636-.2-.904.2s-1.04 1.3-1.272 1.572c-.236.268-.468.304-.868.104-.4-.204-1.688-.624-3.216-1.984-1.188-1.06-1.992-2.368-2.224-2.768-.236-.4-.028-.616.176-.816.18-.18.4-.468.6-.704.2-.232.268-.4.4-.664.136-.268.068-.5-.032-.7-.1-.2-.904-2.176-1.24-2.98-.324-.78-.656-.676-.904-.688-.232-.008-.5-.012-.768-.012s-.7.1-1.068.5c-.368.4-1.404 1.372-1.404 3.348s1.44 3.88 1.64 4.148c.2.268 2.832 4.32 6.864 6.06.96.416 1.708.664 2.292.848.964.308 1.84.264 2.532.16.772-.116 2.368-.968 2.704-1.904.332-.936.332-1.74.232-1.904-.1-.168-.368-.268-.768-.468z"/>
              </svg>
              WhatsApp
            </a>
          </div>
        </div>
        <div class="servicio-hero-image">
          <img
            src={getCdnUrl('/img/home/hero-mesas-dulces-profesionales.avif')}
            alt="Dulces de calidad premium para mesas de dulces en CDMX"
            width="600"
            height="400"
            loading="eager"
          />
          <div class="servicio-hero-badge">
            <span>AAA</span>
            <small>Calidad</small>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Caracteristicas Section -->
  <section class="caracteristicas-section">
    <div class="container">
      <div class="caracteristicas-layout">
        <div class="caracteristicas-left">
          <span class="header-badge">Excelencia en Cada Detalle</span>
          <h2>¿Por que elegir <span>Calidad Premium</span>?</h2>
          <p class="header-description">Con mas de <strong>500 eventos</strong> realizados, sabemos que la calidad marca la diferencia. Nuestros clientes notan el sabor superior y la presentacion impecable de cada dulce.</p>
          <p class="header-description">Trabajamos con <strong>proveedores locales certificados</strong> y marcas reconocidas para garantizar productos frescos y deliciosos.</p>
          <div class="header-stats">
            {stats.map(stat => (
              <div class="stat-item">
                <span class="stat-number">{stat.number}</span>
                <span class="stat-label">{stat.label}</span>
              </div>
            ))}
          </div>
        </div>

        <div class="caracteristicas-right">
          {caracteristicas.map(item => (
            <div class="caracteristica-card">
              <div class="card-image">
                <span class="card-number">{item.number}</span>
                <img
                  src={getCdnUrl('/img/home/hero-mesas-dulces-profesionales.avif')}
                  alt={item.title}
                  width="528"
                  height="634"
                  loading="lazy"
                />
              </div>
              <div class="card-content">
                <h3>{item.title}</h3>
                <p>{item.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Galeria Section -->
  <section class="galeria-section" id="galeria">
    <div class="container">
      <div class="section-header">
        <h2>Nuestra <span class="titulo-decorativo">Calidad Premium</span> en Accion</h2>
        <p class="subtitulo">Momentos deliciosos que hemos creado en eventos reales</p>
      </div>

      <div class="galeria-bento">
        {galeriaImages.map(img => (
          <div class="galeria-item">
            <img
              src={getCdnUrl(img.src)}
              alt={img.alt}
              width="528"
              height="634"
              loading="lazy"
            />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Incluye Section -->
  <section class="incluye-section">
    <div class="container">
      <div class="incluye-header">
        <span class="badge">Todo Incluido</span>
        <h2>¿Que incluye nuestra <span>Calidad Premium</span>?</h2>
        <p>Nos encargamos de cada detalle para que tu y tus invitados solo disfruten</p>
      </div>

      <div class="incluye-grid">
        {incluye.map(item => (
          <div class="incluye-card">
            <span class="card-number">{item.number}</span>
            <h4>{item.title}</h4>
            <p>{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Eventos Section -->
  <section class="eventos-premium">
    <div class="container">
      <div class="eventos-header">
        <span class="badge">Versatilidad Total</span>
        <h2>Tu Mesa de Dulces para <span>Cualquier Evento</span></h2>
        <p>Disenamos mesas de dulces personalizadas que se adaptan perfectamente a cada tipo de celebracion. Cada evento es unico y merece una experiencia a la medida.</p>
      </div>
      <div class="eventos-grid">
        {eventos.map(evento => (
          <div class="evento-card">
            <div class="evento-image">
              <img
                src={getCdnUrl(evento.image)}
                alt={evento.title}
                width="560"
                height="686"
                loading="lazy"
              />
              <div class="evento-badge" style={`background: ${evento.badgeColor}; color: ${evento.badgeTextColor};`}>
                {evento.badge}
              </div>
            </div>
            <div class="evento-content">
              <h3>{evento.title}</h3>
              <p>{evento.description}</p>
              <ul class="evento-features">
                {evento.features.map(feature => (
                  <li>
                    <svg width="14" height="14" fill="#E91E8C" viewBox="0 0 20 20"><path d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"/></svg>
                    {feature}
                  </li>
                ))}
              </ul>
              <a href={evento.link} class="evento-btn">
                {evento.linkText}
                <svg width="14" height="14" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/></svg>
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Proceso Section -->
  <section class="proceso-section">
    <div class="container">
      <div class="section-header">
        <h2>Proceso <span class="titulo-decorativo">Simple</span></h2>
        <p class="subtitulo">De la cotizacion a tu evento en 4 pasos</p>
      </div>

      <div class="proceso-timeline">
        {proceso.map(step => (
          <div class="proceso-step">
            <div class="number">{step.number}</div>
            <h4>{step.title}</h4>
            <p>{step.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="faq-section">
    <div class="container">
      <div class="section-header">
        <h2>Preguntas <span class="titulo-decorativo">Frecuentes</span></h2>
        <p class="subtitulo">Resolvemos tus dudas sobre nuestra calidad premium</p>
      </div>

      <div class="faq-container">
        {faqs.map((faq) => (
          <div class="faq-item">
            <button class="faq-question" aria-expanded="false">
              <span>{faq.question}</span>
              <svg class="faq-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="6 9 12 15 18 9"></polyline>
              </svg>
            </button>
            <div class="faq-answer">
              <p>{faq.answer}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Final -->
  <section class="cta-final">
    <div class="container">
      <h2>¿Listo para dulces de calidad premium?</h2>
      <p>Cotiza tu mesa de dulces con los mejores productos del mercado</p>
      <a href="https://wa.me/525525226442?text=Hola! Quiero cotizar una mesa de dulces con calidad premium" class="btn-white" target="_blank" rel="noopener">
        Cotizar por WhatsApp
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  .header-spacer {
    height: 120px;
  }

  /* Hero Section */
  .servicio-hero {
    padding: 60px 0 80px;
    background: linear-gradient(135deg, #fff5f8 0%, #ffffff 50%, #fff0f5 100%);
    position: relative;
    overflow: hidden;
  }

  .servicio-hero::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(233, 30, 140, 0.08) 0%, transparent 70%);
    border-radius: 50%;
  }

  .servicio-hero-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .servicio-hero-content h1 {
    font-size: 3rem;
    color: #1a1a1a;
    line-height: 1.2;
    margin-bottom: 20px;
  }

  .servicio-hero-content h1 span {
    color: #E91E8C;
  }

  .servicio-hero-content .descripcion {
    font-size: 1.15rem;
    color: #555;
    line-height: 1.8;
    margin-bottom: 20px;
  }

  .servicio-hero-content .descripcion strong {
    color: #E91E8C;
  }

  .servicio-hero-image {
    position: relative;
  }

  .servicio-hero-image img {
    width: 100%;
    border-radius: 20px;
    box-shadow: 0 20px 60px rgba(233, 30, 140, 0.2);
  }

  .servicio-hero-badge {
    position: absolute;
    bottom: -20px;
    left: -20px;
    background: #E91E8C;
    color: #fff;
    padding: 20px 30px;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(233, 30, 140, 0.4);
  }

  .servicio-hero-badge span {
    display: block;
    font-size: 2rem;
    font-weight: 700;
  }

  .servicio-hero-badge small {
    font-size: 0.85rem;
    opacity: 0.9;
  }

  .hero-buttons {
    margin-top: 30px;
  }

  .btn-whatsapp-hero {
    display: inline-flex;
    align-items: center;
    gap: 15px;
    background: #25D366;
    color: #fff;
    padding: 20px 45px;
    border-radius: 50px;
    font-size: 1.5rem;
    font-weight: 700;
    text-decoration: none;
    box-shadow: 0 8px 25px rgba(37, 211, 102, 0.4);
    letter-spacing: 0.5px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .btn-whatsapp-hero:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 35px rgba(37, 211, 102, 0.5);
  }

  .btn-whatsapp-hero svg {
    flex-shrink: 0;
  }

  /* Caracteristicas Section */
  .caracteristicas-section {
    padding: 100px 0;
    background: linear-gradient(180deg, #fff 0%, #fdf2f8 100%);
  }

  .caracteristicas-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .caracteristicas-left {
    padding-right: 20px;
  }

  .header-badge {
    display: inline-block;
    background: linear-gradient(135deg, #E91E8C 0%, #FF6BB3 100%);
    color: #fff;
    padding: 8px 20px;
    border-radius: 50px;
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 20px;
  }

  .caracteristicas-left h2 {
    font-size: 2.4rem;
    color: #1a1a1a;
    line-height: 1.3;
    margin-bottom: 20px;
    font-weight: 700;
  }

  .caracteristicas-left h2 span {
    color: #E91E8C;
  }

  .header-description {
    font-size: 1.05rem;
    color: #555;
    line-height: 1.8;
    margin-bottom: 15px;
  }

  .header-description:last-of-type {
    margin-bottom: 30px;
  }

  .header-description strong {
    color: #E91E8C;
  }

  .header-stats {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 15px;
    background: #fff;
    padding: 25px 20px;
    border-radius: 15px;
    box-shadow: 0 10px 40px rgba(233, 30, 140, 0.1);
    border: 1px solid rgba(233, 30, 140, 0.1);
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    display: block;
    font-size: 1.8rem;
    font-weight: 800;
    color: #E91E8C;
    line-height: 1.2;
  }

  .stat-label {
    font-size: 0.7rem;
    color: #666;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .caracteristicas-right {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }

  .caracteristica-card {
    background: #fff;
    border-radius: 15px;
