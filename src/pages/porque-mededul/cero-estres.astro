    margin: 0 auto 60px;
  }

  .incluye-header .badge {
    display: inline-block;
    background: linear-gradient(135deg, #B31263 0%, #C4177A 100%);
    color: #fff;
    padding: 8px 20px;
    border-radius: 50px;
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 20px;
  }

  .incluye-header h2 {
    font-size: 2.4rem;
    color: #1a1a1a;
    margin-bottom: 15px;
  }

  .incluye-header h2 span {
    color: #B31263;
  }

  .incluye-header p {
    font-size: 1.1rem;
    color: #666;
  }

  .incluye-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
