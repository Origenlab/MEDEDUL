  }

  .incluye-card {
    background: #fff;
    border: 1px solid rgba(233, 30, 140, 0.1);
    border-radius: 20px;
    padding: 35px 30px;
    position: relative;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.04);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .incluye-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(233, 30, 140, 0.12);
  }

  .incluye-card .card-number {
    display: inline-block;
    width: 36px;
    height: 36px;
    background: linear-gradient(135deg, #B31263 0%, #C4177A 100%);
    color: #fff;
    border-radius: 10px;
    font-size: 0.95rem;
    font-weight: 700;
    line-height: 36px;
    text-align: center;
    margin-bottom: 20px;
  }

  .incluye-card h4 {
