const serviceSchema = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: 'Servicio Completo de Mesas de Dulces en CDMX',
  description: 'Servicio completo de mesas de dulces en Ciudad de Mexico con planeacion, montaje, operacion y desmontaje profesional.',
  provider: {
    '@type': 'LocalBusiness',
    name: 'Mededul',
    telephone: '+525525226442',
    aggregateRating: {
      '@type': 'AggregateRating',
      ratingValue: '4.9',
      reviewCount: '127',
      bestRating: '5'
    }
  },
  areaServed: { '@type': 'City', name: 'Ciudad de Mexico' },
