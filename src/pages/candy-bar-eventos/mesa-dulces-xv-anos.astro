const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Mesa de Dulces para XV Anos",
  "description": "Ideas y servicio de mesa de dulces para fiesta de 15 anos y quinceanera en Ciudad de Mexico. Decoracion en rosa, azul, dorado. Incluye dulces premium, tematicas personalizadas e instalacion profesional.",
  "provider": {
    "@type": "LocalBusiness",
    "name": "Mededul",
    "image": "https://mesas-de-dulces.com/img/branding/logo-mededul-mesas-de-dulces.avif",
    "telephone": "+525525226442",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Ciudad de Mexico",
      "addressCountry": "MX"
    }
  },
  "areaServed": {
    "@type": "City",
    "name": "Ciudad de Mexico"
  },
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Paquetes Mesa de Dulces XV Anos",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "XV Anos Basico",
          "description": "Para 50-100 invitados"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "XV Anos Premium",
          "description": "Para 100-200 invitados"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "XV Anos Deluxe",
          "description": "Para 200-300 invitados"
        }
      }
    ]
  }
