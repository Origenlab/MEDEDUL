---
// Mesa de Dulces para XV Anos
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/seo/Breadcrumbs.astro';
import { getCdnUrl } from '@/lib/cdn';

const breadcrumbItems = [
  { name: 'Candy Bar por Evento', url: '/candy-bar-eventos' },
  { name: 'XV Anos', url: '/candy-bar-eventos/mesa-dulces-xv-anos' }
];

const caracteristicas = [
  { num: 1, title: 'Colores Personalizados', desc: 'Rosa, azul, dorado o cualquier paleta de tu eleccion', image: '/img/eventos/xv-anos/mesa-dulces-xv-anos-rosa-dorado-papel-picado.avif' },
  { num: 2, title: 'Decoracion Brillante', desc: 'Toques de glitter, luces y elementos espectaculares', image: '/img/eventos/xv-anos/candy-bar-quinceanos-moderno-rosa-plateado.avif' },
  { num: 3, title: 'Dulces Premium', desc: 'Macarons, trufas y dulces finos para tu fiesta', image: '/img/eventos/xv-anos/mesa-dulces-xv-anos-lujosa-cristaleria-rosa.avif' },
  { num: 4, title: 'Tematicas Unicas', desc: 'Princesa, Paris, jardin encantado y mas', image: '/img/eventos/xv-anos/mesa-dulces-xv-anos-tematica.avif' }
];

const galeriaImages = [
  { src: '/img/galeria/candy-bar-quinceanera-rosa-elegante-globos.avif', alt: 'Mesa de dulces para XV anos en CDMX' },
  { src: '/img/eventos/xv-anos/mesa-dulces-xv-anos-tematica.avif', alt: 'Mesa de dulces tematica para quinceanera' },
  { src: '/img/eventos/xv-anos/mesa-postres-quinceanera-elegante.avif', alt: 'Mesa de postres elegante XV anos' }
];

const incluye = [
  { num: 1, title: 'Dulces Premium', desc: 'Seleccion de 25-40 variedades de dulces incluyendo macarons, trufas, chocolates y mas.' },
  { num: 2, title: 'Personalizacion Total', desc: 'Decoracion en los colores de tu fiesta: rosa, azul, dorado, plateado o cualquier tono.' },
  { num: 3, title: 'Postres Tematicos', desc: 'Cupcakes, cake pops con glitter comestible y galletas decoradas con el numero 15.' },
  { num: 4, title: 'Mobiliario Elegante', desc: 'Mesas, risers, cristaleria y accesorios que hacen lucir tu mesa espectacular.' },
  { num: 5, title: 'Montaje Profesional', desc: 'Instalacion 2-3 horas antes del evento y desmontaje al finalizar.' },
  { num: 6, title: 'Empaque de Sobrantes', desc: 'Los dulces que sobren se empacan para que los disfrutes despues.' }
];

const tematicas = [
  { title: 'Princesa', desc: 'Coronas, carrozas y castillos', image: '/img/eventos/xv-anos/mesa-dulces-quinceanera-romantica-flores.avif' },
  { title: 'Paris', desc: 'Torre Eiffel y romanticismo', image: '/img/galeria/candy-bar-quinceanera-violeta-macarons.avif' },
  { title: 'Jardin Encantado', desc: 'Flores y naturaleza magica', image: '/img/galeria/mesa-dulces-quinceanera-romantica-flores.avif' },
  { title: 'Hollywood', desc: 'Glamour y estrellas', image: '/img/eventos/xv-anos/candy-bar-quinceanos-moderno-rosa-plateado.avif' }
];

