---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/seo/Breadcrumbs.astro';
import Hero from '@/components/global/Hero.astro';

const breadcrumbItems = [
  { name: 'Candy Bar Eventos', url: '/candy-bar-eventos' },
  { name: 'Corporativos', url: '/candy-bar-eventos/mesa-dulces-corporativos' }
];

const highlights = [
  { title: 'Imagen profesional', description: 'Montajes elegantes para reforzar la imagen de marca en lanzamientos, conferencias y networking.' },
  { title: 'Personalizacion corporativa', description: 'Integramos paleta de color, branding, etiquetas y mensajes para tu empresa o campana.' },
  { title: 'Logistica puntual', description: 'Instalacion y retiro en horarios estrictos, con equipo coordinado para salones, oficinas y recintos.' },
  { title: 'Formatos flexibles', description: 'Opciones para coffee break premium, cocktail, aniversarios internos y activaciones de marca.' }
];

const includes = [
  'Diseno y planeacion del candy bar corporativo',
  'Selecciones de dulces finos y postres individuales',
  'Mobiliario, cristaleria y elementos de presentacion',
  'Personalizacion con branding (segun alcance)',
  'Montaje y desmontaje profesional',
  'Asesoria para cantidad segun numero de asistentes'
];

const faqs = [
  { question: 'Atienden eventos en oficinas y hoteles?', answer: 'Si. Cubrimos oficinas corporativas, hoteles, centros de convenciones y venues privados en CDMX y area metropolitana.' },
  { question: 'Se puede personalizar con logo de mi empresa?', answer: 'Si, podemos incluir branding en etiquetas, display y elementos graficos segun el tipo de paquete.' },
  { question: 'Con cuanta anticipacion conviene reservar?', answer: 'Idealmente entre 2 y 4 semanas. Para eventos grandes o con branding especial recomendamos mayor anticipacion.' },
  { question: 'Tambien manejan opciones sin azucar?', answer: 'Si, podemos integrar opciones reducidas en azucar y alternativas balanceadas segun requerimientos.' }
];

const serviceSchema = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: 'Mesa de Dulces Corporativos en CDMX',
  description: 'Candy bar corporativo para eventos empresariales con montaje profesional y personalizacion de marca.',
  provider: { '@type': 'LocalBusiness', name: 'Mededul' },
  areaServed: { '@type': 'City', name: 'Ciudad de Mexico' }
};

const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: faqs.map((faq) => ({ '@type': 'Question', name: faq.question, acceptedAnswer: { '@type': 'Answer', text: faq.answer } }))
};
---

<BaseLayout
  title="Mesa de Dulces Corporativos en CDMX | Mededul"
  description="Candy bar corporativo para eventos empresariales, lanzamientos y activaciones. Servicio profesional en CDMX."
  canonical="/candy-bar-eventos/mesa-dulces-corporativos"
  ogImage="/img/galeria/mesa-dulces-corporativo-elegante-negro.avif"
>
  <script type="application/ld+json" is:inline set:html={JSON.stringify(serviceSchema)} slot="head" />
  <script type="application/ld+json" is:inline set:html={JSON.stringify(faqSchema)} slot="head" />

  <Breadcrumbs items={breadcrumbItems} />

  <Hero
    title="Mesa de Dulces <span>Corporativos</span>"
    description="Creamos candy bars corporativos con presentacion premium para reuniones ejecutivas, congresos y celebraciones empresariales."
    subtitle="Cada montaje se diseÃ±a para que tu evento luzca profesional, organizado y memorable para clientes, colaboradores e invitados."
  />

  <section class="service-highlights section-padding">
    <div class="container">
      <div class="section-head">
        <h2>Por que elegir nuestro candy bar corporativo</h2>
        <p class="subtitulo">Servicio profesional, puntual y alineado a la imagen de tu marca</p>
      </div>
      <div class="highlight-grid">
        {highlights.map((item) => (
          <article class="highlight-card">
            <h3>{item.title}</h3>
            <p>{item.description}</p>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="service-includes section-padding">
    <div class="container">
      <h2>Que incluye el servicio</h2>
      <ul>
        {includes.map((item) => <li>{item}</li>)}
      </ul>
    </div>
  </section>

  <section class="service-faq section-padding">
    <div class="container">
      <h2>Preguntas frecuentes</h2>
      <div class="faq-list">
        {faqs.map((faq) => (
          <details>
            <summary>{faq.question}</summary>
            <p>{faq.answer}</p>
          </details>
        ))}
      </div>
    </div>
  </section>

  <section class="service-cta">
    <div class="container">
      <h2>Eleva tu evento corporativo</h2>
      <p>Solicita una propuesta a la medida para tu empresa y agenda tu fecha con anticipacion.</p>
      <a href="https://wa.me/525525226442?text=Hola! Quiero cotizar una Mesa de Dulces Corporativos para mi evento empresarial" class="btn-white" target="_blank" rel="noopener">Solicitar cotizacion</a>
    </div>
  </section>
</BaseLayout>

<style>
  .section-head {
    text-align: center;
    margin-bottom: 28px;
  }

  .highlight-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 18px;
  }

  .highlight-card {
    background: #fff;
    border-radius: 16px;
    padding: 20px;
    border: 1px solid rgba(255, 107, 157, 0.18);
  }

  .highlight-card h3 {
    font-size: 1.1rem;
    margin-bottom: 8px;
  }

  .highlight-card p {
    color: var(--gris-texto);
    margin: 0;
  }

  .service-includes {
    background: #fff;
  }

  .service-includes h2,
  .service-faq h2 {
    text-align: center;
    font-size: clamp(1.6rem, 3.2vw, 2.2rem);
    margin-bottom: 20px;
  }

  .service-includes ul {
    list-style: none;
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 12px;
    max-width: 900px;
    margin: 0 auto;
    padding: 0;
  }

  .service-includes li {
    background: #fdf7fa;
    border: 1px solid rgba(255, 107, 157, 0.2);
    border-radius: 12px;
    padding: 14px;
  }

  .faq-list {
    max-width: 860px;
    margin: 0 auto;
    display: grid;
    gap: 12px;
  }

  .faq-list details {
    background: #fff;
    border: 1px solid #ececec;
    border-radius: 12px;
    padding: 12px 14px;
  }

  .faq-list summary {
    cursor: pointer;
    font-weight: 600;
  }

  .faq-list p {
    color: var(--gris-texto);
    margin: 10px 0 2px;
  }

  .service-cta {
    padding: 74px 0;
    text-align: center;
    background: linear-gradient(135deg, #D1007A 0%, #A0005F 100%);
    color: #fff;
  }

  .service-cta h2 {
    font-size: clamp(1.8rem, 3.5vw, 2.6rem);
    margin-bottom: 12px;
  }

  .service-cta p {
    margin: 0 auto 24px;
    max-width: 680px;
    opacity: 0.95;
  }

  .btn-white {
    display: inline-block;
    text-decoration: none;
    background: #fff;
    color: #D1007A;
    font-weight: 700;
    border-radius: 999px;
    padding: 14px 28px;
  }

  @media (max-width: 900px) {
    .highlight-grid,
    .service-includes ul {
      grid-template-columns: 1fr;
    }
  }
</style>
