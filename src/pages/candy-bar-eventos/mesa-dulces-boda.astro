  { src: '/img/eventos/bodas/dulces-finos-boda.avif', alt: 'Dulces finos para boda' },
  { src: '/img/eventos/bodas/mesa-dulces-boda-elegante-macarons-cristaleria.avif', alt: 'Mesa de dulces boda con macarons' },
  { src: '/img/galeria/mesa-postres-gourmet-premium-elegante.avif', alt: 'Postres gourmet para boda' },
  { src: '/img/eventos/bodas/mesa-de-dulces-para-bodas.avif', alt: 'Mesa de boda completa' }
];

const incluye = [
  { num: 1, title: 'Dulces Finos', desc: 'Seleccion de 30-50 variedades de dulces premium incluyendo macarons, trufas, chocolates artesanales y mas.' },
  { num: 2, title: 'Postres Gourmet', desc: 'Cupcakes, cake pops, petit fours y mini postres elaborados por nuestros reposteros.' },
  { num: 3, title: 'Decoracion Premium', desc: 'Flores naturales o artificiales, velas, cristaleria de lujo y elementos decorativos.' },
  { num: 4, title: 'Mobiliario de Lujo', desc: 'Mesas vintage, espejos, risers y accesorios que complementan tu estilo de boda.' },
  { num: 5, title: 'Montaje Profesional', desc: 'Llegamos 3 horas antes para instalar todo perfectamente y nos retiramos al finalizar.' },
  { num: 6, title: 'Personalizacion Total', desc: 'Coordinamos colores, tematica y estilo con tu paleta de boda y wedding planner.' }
];

const estilos = [
  { title: 'Romantico Clasico', desc: 'Rosas, blancos y dorados', image: '/img/galeria/mesa-dulces-boda-jardin-romantica-rosa-luces.avif' },
  { title: 'Rustico Campestre', desc: 'Madera, flores silvestres', image: '/img/galeria/mesa-dulces-boda-rustica-madera-flores.avif' },
  { title: 'Moderno Minimalista', desc: 'Lineas limpias, elegancia', image: '/img/galeria/mesa-dulces-boda-moderna-minimalista-blanco.avif' },
  { title: 'Bohemio Chic', desc: 'Colores tierra, macrame', image: '/img/galeria/candy-bar-boda-campestre-vintage-rustico.avif' }
