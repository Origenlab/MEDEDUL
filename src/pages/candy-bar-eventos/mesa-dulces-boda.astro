---
// Mesa de Dulces para Boda
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/seo/Breadcrumbs.astro';
import Hero from '@/components/global/Hero.astro';
import { getCdnUrl } from '@/lib/cdn';

const breadcrumbItems = [
  { name: 'Candy Bar por Evento', url: '/candy-bar-eventos' },
  { name: 'Bodas', url: '/candy-bar-eventos/mesa-dulces-boda' }
];

const caracteristicas = [
  { num: 1, title: 'Dulces Premium', desc: 'Macarons franceses, trufas artesanales y chocolates finos', image: '/img/eventos/bodas/mesa-dulces-boda-elegante-macarons-cristaleria.avif' },
  { num: 2, title: 'Decoracion Romantica', desc: 'Flores, velas y cristaleria que complementan tu estilo', image: '/img/eventos/bodas/candy-bar-boda-romantico.avif' },
  { num: 3, title: 'Pastel Coordinado', desc: 'Opcion de pastel de boda integrado a tu mesa dulce', image: '/img/eventos/bodas/mesa-postres-boda-profesional.avif' },
  { num: 4, title: 'Servicio Completo', desc: 'Montaje profesional y coordinacion con tu wedding planner', image: '/img/eventos/bodas/servicio-mesa-dulces-boda-cdmx.avif' }
