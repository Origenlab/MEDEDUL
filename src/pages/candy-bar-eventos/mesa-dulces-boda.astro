  "provider": {
    "@type": "LocalBusiness",
    "name": "Mededul",
    "image": getCdnUrl('/img/branding/logo-mededul-mesas-de-dulces.avif'),
    "telephone": "+525525226442",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Ciudad de Mexico",
      "addressCountry": "MX"
    }
  },
  "areaServed": {
    "@type": "City",
    "name": "Ciudad de Mexico"
  },
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Paquetes Mesa de Dulces Boda",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Boda Clasica",
          "description": "Para 80-150 invitados"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Boda Premium",
          "description": "Para 150-250 invitados"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Boda Deluxe",
          "description": "Para 250-400 invitados"
        }
      }
    ]
  }
