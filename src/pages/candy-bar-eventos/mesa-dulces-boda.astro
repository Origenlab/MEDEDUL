    font-size: 0.95rem;
    color: #666;
    line-height: 1.7;
    margin: 0;
  }

  /* Estilos */
  .estilos-section {
    padding: 100px 0;
    background: linear-gradient(180deg, #fdf8fa 0%, #fef5f8 50%, #fff 100%);
  }

  .estilos-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 60px;
  }

  .estilos-header h2 {
    font-size: clamp(1.8rem, 3vw, 2.4rem);
    color: #1a1a1a;
    margin-bottom: 15px;
