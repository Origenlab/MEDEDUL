    padding: 100px 0;
    background: #fff;
  }

  .incluye-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 60px;
  }

  .incluye-header .badge,
  .estilos-header .badge {
    display: inline-block;
    background: linear-gradient(135deg, var(--rosa-principal) 0%, #FF6BB3 100%);
    color: #fff;
    padding: 8px 20px;
