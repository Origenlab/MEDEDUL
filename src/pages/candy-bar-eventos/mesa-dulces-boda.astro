    color: var(--rosa-principal);
  }

  .incluye-header p {
    font-size: 1.1rem;
    color: #666;
  }

  .incluye-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 25px;
  }

  .incluye-card {
    background: #fff;
    border: 1px solid rgba(233, 30, 140, 0.1);
    border-radius: 20px;
    padding: 35px 30px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.04);
  }

  .incluye-card .card-number {
    display: inline-block;
    width: 36px;
    height: 36px;
    background: linear-gradient(135deg, var(--rosa-principal) 0%, #FF6BB3 100%);
