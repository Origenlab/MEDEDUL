---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/seo/Breadcrumbs.astro';
import Hero from '@/components/global/Hero.astro';

const breadcrumbItems = [
  { name: 'Candy Bar Eventos', url: '/candy-bar-eventos' },
  { name: 'Graduacion', url: '/candy-bar-eventos/mesa-dulces-graduacion' }
];

const highlights = [
  { title: 'Estetica elegante', description: 'Candy bars para graduaciones de secundaria, preparatoria, universidad y posgrado.' },
  { title: 'Concepto personalizado', description: 'Adaptamos colores, mensajes y estilo al tipo de ceremonia o fiesta.' },
  { title: 'Servicio para grupos', description: 'Capacidad para eventos masivos en salones, escuelas y recintos.' },
  { title: 'Operacion puntual', description: 'Equipo de montaje organizado para cumplir horarios de protocolo.' }
];

const includes = [
  'Diseno de candy bar para graduacion',
  'Dulces premium y postres individuales',
  'Montaje visual con detalles academicos',
  'Mobiliario, bases y elementos decorativos',
  'Montaje y retiro en el venue',
  'Ajustes de cantidad por numero de graduados e invitados'
];

const faqs = [
  { question: 'Atienden graduaciones escolares grandes?', answer: 'Si. Tenemos capacidad para eventos de distintos tamanos, desde grupos pequenos hasta generaciones completas.' },
  { question: 'Pueden integrar los colores de la escuela?', answer: 'Si. DiseÃ±amos el montaje alineado a colores institucionales y estilo del evento.' },
  { question: 'Trabajan en salones y auditorios?', answer: 'Si, nos adaptamos al tipo de sede y coordinamos acceso, montaje y retiro.' },
  { question: 'Cuanto tiempo antes llegan a instalar?', answer: 'Generalmente llegamos entre 1 y 2 horas antes, segun el tamano del montaje.' }
];

const serviceSchema = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: 'Mesa de Dulces para Graduacion en CDMX',
  description: 'Candy bar para graduaciones con estilo elegante, montaje profesional y dulces premium.',
  provider: { '@type': 'LocalBusiness', name: 'Mededul' },
  areaServed: { '@type': 'City', name: 'Ciudad de Mexico' }
};

const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: faqs.map((faq) => ({ '@type': 'Question', name: faq.question, acceptedAnswer: { '@type': 'Answer', text: faq.answer } }))
};
---

<BaseLayout
  title="Mesa de Dulces para Graduacion en CDMX | Mededul"
  description="Candy bar para graduaciones con montaje profesional y presentacion elegante en CDMX."
  canonical="/candy-bar-eventos/mesa-dulces-graduacion"
  ogImage="/img/eventos/graduaciones/candy-bar-graduacion-elegante.avif"
>
  <script type="application/ld+json" is:inline set:html={JSON.stringify(serviceSchema)} slot="head" />
  <script type="application/ld+json" is:inline set:html={JSON.stringify(faqSchema)} slot="head" />

  <Breadcrumbs items={breadcrumbItems} />

  <Hero
    title="Mesa de Dulces para <span>Graduacion</span>"
    description="Celebra este logro con una mesa de dulces elegante que acompane el momento mas importante del cierre academico."
    subtitle="Creamos propuestas modernas y bien organizadas para que la celebracion se vea impecable de principio a fin."
  />

  <section class="service-highlights section-padding">
    <div class="container">
      <div class="section-head">
        <h2>Un cierre academico con gran estilo</h2>
        <p class="subtitulo">Candy bars listos para ceremonias y fiestas de graduacion</p>
      </div>
      <div class="highlight-grid">
        {highlights.map((item) => (
          <article class="highlight-card">
            <h3>{item.title}</h3>
            <p>{item.description}</p>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="service-includes section-padding">
    <div class="container">
      <h2>Que incluye el servicio</h2>
      <ul>
        {includes.map((item) => <li>{item}</li>)}
      </ul>
    </div>
  </section>

  <section class="service-faq section-padding">
    <div class="container">
      <h2>Preguntas frecuentes</h2>
      <div class="faq-list">
        {faqs.map((faq) => (
          <details>
            <summary>{faq.question}</summary>
            <p>{faq.answer}</p>
          </details>
        ))}
      </div>
    </div>
  </section>

  <section class="service-cta">
    <div class="container">
      <h2>Reserva tu fecha de graduacion</h2>
      <p>Te ayudamos a montar un candy bar memorable para celebrar este logro.</p>
      <a href="https://wa.me/525525226442?text=Hola! Quiero cotizar una Mesa de Dulces para Graduacion" class="btn-white" target="_blank" rel="noopener">Solicitar cotizacion</a>
    </div>
  </section>
</BaseLayout>

<style>
  .section-head {
    text-align: center;
    margin-bottom: 28px;
  }

  .highlight-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 18px;
  }

  .highlight-card {
    background: #fff;
    border-radius: 16px;
    padding: 20px;
    border: 1px solid rgba(255, 107, 157, 0.18);
  }

  .highlight-card h3 {
    font-size: 1.1rem;
    margin-bottom: 8px;
  }

  .highlight-card p {
    color: var(--gris-texto);
    margin: 0;
  }

  .service-includes {
    background: #fff;
  }

  .service-includes h2,
  .service-faq h2 {
    text-align: center;
    font-size: clamp(1.6rem, 3.2vw, 2.2rem);
    margin-bottom: 20px;
  }

  .service-includes ul {
    list-style: none;
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 12px;
    max-width: 900px;
    margin: 0 auto;
    padding: 0;
  }

  .service-includes li {
    background: #fdf7fa;
    border: 1px solid rgba(255, 107, 157, 0.2);
    border-radius: 12px;
    padding: 14px;
  }

  .faq-list {
    max-width: 860px;
    margin: 0 auto;
    display: grid;
    gap: 12px;
  }

  .faq-list details {
    background: #fff;
    border: 1px solid #ececec;
    border-radius: 12px;
    padding: 12px 14px;
  }

  .faq-list summary {
    cursor: pointer;
    font-weight: 600;
  }

  .faq-list p {
    color: var(--gris-texto);
    margin: 10px 0 2px;
  }

  .service-cta {
    padding: 74px 0;
    text-align: center;
    background: linear-gradient(135deg, #B31263 0%, #C4177A 100%);
    color: #fff;
  }

  .service-cta h2 {
    font-size: clamp(1.8rem, 3.5vw, 2.6rem);
    margin-bottom: 12px;
  }

  .service-cta p {
    margin: 0 auto 24px;
    max-width: 680px;
    opacity: 0.95;
  }

  .btn-white {
    display: inline-block;
    text-decoration: none;
    background: #fff;
    color: #B31263;
    font-weight: 700;
    border-radius: 999px;
    padding: 14px 28px;
  }

  @media (max-width: 900px) {
    .highlight-grid,
    .service-includes ul {
      grid-template-columns: 1fr;
    }
  }
</style>
