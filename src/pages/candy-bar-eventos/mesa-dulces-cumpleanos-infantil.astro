---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/seo/Breadcrumbs.astro';
import Hero from '@/components/global/Hero.astro';

const breadcrumbItems = [
  { name: 'Candy Bar Eventos', url: '/candy-bar-eventos' },
  { name: 'Cumpleanos Infantil', url: '/candy-bar-eventos/mesa-dulces-cumpleanos-infantil' }
];

const highlights = [
  { title: 'Tematicas infantiles', description: 'Montajes personalizados por personaje, color o estilo de fiesta infantil.' },
  { title: 'Dulces para ninos', description: 'Seleccion equilibrada de golosinas y postres pensados para peques y adultos.' },
  { title: 'Presentacion colorida', description: 'Decoracion visualmente atractiva para fotos, videos y recuerdos familiares.' },
  { title: 'Servicio sin estres', description: 'Nos encargamos del montaje y retiro para que disfrutes el festejo.' }
];

const includes = [
  'Planeacion de tematica y paleta de color',
  'Dulces, gomitas, chocolates y postres variados',
  'Mobiliario y decoracion infantil',
  'Etiquetas y elementos personalizados',
  'Montaje y desmontaje en domicilio o salon',
  'Asesoria segun edad y numero de invitados'
];

const faqs = [
  { question: 'Pueden hacerlo de cualquier personaje?', answer: 'Si. Trabajamos temas clasicos y personalizados con base en tus referencias e ideas.' },
  { question: 'Manejan paquetes para fiestas pequenas?', answer: 'Si, tenemos opciones desde eventos intimos hasta celebraciones grandes.' },
  { question: 'Cuanto dura instalado el candy bar?', answer: 'Normalmente permanece durante toda la fiesta y programamos retiro al final del evento.' },
  { question: 'Con cuanta anticipacion debo reservar?', answer: 'Recomendamos reservar con 2 a 3 semanas para asegurar fecha y personalizacion completa.' }
];

const serviceSchema = {
  '@context': 'https://schema.org',
  '@type': 'Service',
  name: 'Mesa de Dulces para Cumpleanos Infantil en CDMX',
  description: 'Candy bar infantil tematico con dulces personalizados y montaje profesional para fiestas de cumpleanos.',
  provider: { '@type': 'LocalBusiness', name: 'Mededul' },
  areaServed: { '@type': 'City', name: 'Ciudad de Mexico' }
};

const faqSchema = {
  '@context': 'https://schema.org',
  '@type': 'FAQPage',
  mainEntity: faqs.map((faq) => ({ '@type': 'Question', name: faq.question, acceptedAnswer: { '@type': 'Answer', text: faq.answer } }))
};
---

<BaseLayout
  title="Mesa de Dulces para Cumpleanos Infantil | Mededul CDMX"
  description="Candy bar infantil personalizado para cumpleanos en CDMX. Tematicas, montaje y dulces incluidos."
  canonical="/candy-bar-eventos/mesa-dulces-cumpleanos-infantil"
  ogImage="/img/eventos/cumpleanos/infantiles/mesa-dulces-cumpleanos-ninos.avif"
>
  <script type="application/ld+json" is:inline set:html={JSON.stringify(serviceSchema)} slot="head" />
  <script type="application/ld+json" is:inline set:html={JSON.stringify(faqSchema)} slot="head" />

  <Breadcrumbs items={breadcrumbItems} />

  <Hero
    title="Mesa de Dulces para <span>Cumpleanos Infantil</span>"
    description="Disenamos candy bars infantiles con tematicas creativas, dulces vistosos y una presentacion que encanta a todos."
    subtitle="Nos adaptamos al concepto de tu fiesta para crear una experiencia divertida, segura y llena de sabor."
  />

  <section class="service-highlights section-padding">
    <div class="container">
      <div class="section-head">
        <h2>Fiestas que se vuelven inolvidables</h2>
        <p class="subtitulo">Candy bars creados para sorprender a ninos e invitados</p>
      </div>
      <div class="highlight-grid">
        {highlights.map((item) => (
          <article class="highlight-card">
            <h3>{item.title}</h3>
            <p>{item.description}</p>
          </article>
        ))}
      </div>
    </div>
  </section>

  <section class="service-includes section-padding">
    <div class="container">
      <h2>Que incluye el servicio</h2>
      <ul>
        {includes.map((item) => <li>{item}</li>)}
      </ul>
    </div>
  </section>

  <section class="service-faq section-padding">
    <div class="container">
      <h2>Preguntas frecuentes</h2>
      <div class="faq-list">
        {faqs.map((faq) => (
          <details>
            <summary>{faq.question}</summary>
            <p>{faq.answer}</p>
          </details>
        ))}
      </div>
    </div>
  </section>

  <section class="service-cta">
    <div class="container">
      <h2>Haz especial su proximo cumpleanos</h2>
      <p>Cotiza tu mesa de dulces infantil y define la tematica ideal para tu fiesta.</p>
      <a href="https://wa.me/525525226442?text=Hola! Me interesa cotizar una Mesa de Dulces para Cumpleanos Infantil" class="btn-white" target="_blank" rel="noopener">Solicitar cotizacion</a>
    </div>
  </section>
</BaseLayout>

<style>
  .section-head {
    text-align: center;
    margin-bottom: 28px;
  }

  .highlight-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 18px;
  }

  .highlight-card {
    background: #fff;
    border-radius: 16px;
    padding: 20px;
    border: 1px solid rgba(255, 107, 157, 0.18);
  }

  .highlight-card h3 {
    font-size: 1.1rem;
    margin-bottom: 8px;
  }

  .highlight-card p {
    color: var(--gris-texto);
    margin: 0;
  }

  .service-includes {
    background: #fff;
  }

  .service-includes h2,
  .service-faq h2 {
    text-align: center;
    font-size: clamp(1.6rem, 3.2vw, 2.2rem);
    margin-bottom: 20px;
  }

  .service-includes ul {
    list-style: none;
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 12px;
    max-width: 900px;
    margin: 0 auto;
    padding: 0;
  }

  .service-includes li {
    background: #fdf7fa;
    border: 1px solid rgba(255, 107, 157, 0.2);
    border-radius: 12px;
    padding: 14px;
  }

  .faq-list {
    max-width: 860px;
    margin: 0 auto;
    display: grid;
    gap: 12px;
  }

  .faq-list details {
    background: #fff;
    border: 1px solid #ececec;
    border-radius: 12px;
    padding: 12px 14px;
  }

  .faq-list summary {
    cursor: pointer;
    font-weight: 600;
  }

  .faq-list p {
    color: var(--gris-texto);
    margin: 10px 0 2px;
  }

  .service-cta {
    padding: 74px 0;
    text-align: center;
    background: linear-gradient(135deg, #e91e8c 0%, #ff6bb3 100%);
    color: #fff;
  }

  .service-cta h2 {
    font-size: clamp(1.8rem, 3.5vw, 2.6rem);
    margin-bottom: 12px;
  }

  .service-cta p {
    margin: 0 auto 24px;
    max-width: 680px;
    opacity: 0.95;
  }

  .btn-white {
    display: inline-block;
    text-decoration: none;
    background: #fff;
    color: #e91e8c;
    font-weight: 700;
    border-radius: 999px;
    padding: 14px 28px;
  }

  @media (max-width: 900px) {
    .highlight-grid,
    .service-includes ul {
      grid-template-columns: 1fr;
    }
  }
</style>
