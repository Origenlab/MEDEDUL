---
/**
 * AlertBox Component
 * Purpose: Callouts, notes, warnings, tips within blog content
 * Variants: info | success | warning | danger
 *
 * @example
 * <AlertBox variant="info" title="Dato importante">
 *   Reserva con 2-3 semanas de anticipaci√≥n para mejores resultados.
 * </AlertBox>
 */

interface Props {
  variant?: 'info' | 'success' | 'warning' | 'danger';
  title?: string;
}

const { variant = 'info', title } = Astro.props;

const icons = {
  info: 'üí°',
  success: '‚úÖ',
  warning: '‚ö†Ô∏è',
  danger: 'üö´'
};

const icon = icons[variant];
---

<aside class={`alert-box alert-${variant}`} role="note">
  <div class="alert-icon">{icon}</div>
  <div class="alert-content">
    {title && <strong class="alert-title">{title}</strong>}
    <div class="alert-body">
      <slot />
    </div>
  </div>
</aside>

<style>
  .alert-box {
    display: flex;
    gap: 16px;
    padding: 20px 24px;
    border-radius: 12px;
    margin: 24px 0;
    border-left: 4px solid;
  }

  .alert-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
    line-height: 1;
  }

  .alert-content {
    flex: 1;
    min-width: 0;
  }

  .alert-title {
    display: block;
    font-size: 1rem;
    font-weight: 700;
    margin-bottom: 8px;
    line-height: 1.3;
  }

  .alert-body {
    font-size: 0.95rem;
    line-height: 1.7;
  }

  .alert-body :global(p) {
    margin: 0;
  }

  .alert-body :global(p + p) {
    margin-top: 12px;
  }

  /* Variant: Info */
  .alert-info {
    background: linear-gradient(135deg, rgba(116, 185, 255, 0.1) 0%, rgba(116, 185, 255, 0.05) 100%);
    border-color: #7A2BC2;
  }

  .alert-info .alert-title {
    color: #0984e3;
  }

  /* Variant: Success */
  .alert-success {
    background: linear-gradient(135deg, rgba(85, 239, 196, 0.1) 0%, rgba(85, 239, 196, 0.05) 100%);
    border-color: #8E5AD3;
  }

  .alert-success .alert-title {
    color: #00b894;
  }

  /* Variant: Warning */
  .alert-warning {
    background: linear-gradient(135deg, rgba(255, 230, 109, 0.15) 0%, rgba(255, 230, 109, 0.05) 100%);
    border-color: #FFE66D;
  }

  .alert-warning .alert-title {
    color: #e17055;
  }

  /* Variant: Danger */
  .alert-danger {
    background: linear-gradient(135deg, rgba(255, 107, 157, 0.1) 0%, rgba(255, 107, 157, 0.05) 100%);
    border-color: #D1007A;
  }

  .alert-danger .alert-title {
    color: #d63031;
  }

  @media (max-width: 480px) {
    .alert-box {
      padding: 16px;
      gap: 12px;
    }

    .alert-icon {
      font-size: 1.25rem;
    }

    .alert-title {
      font-size: 0.95rem;
    }

    .alert-body {
      font-size: 0.9rem;
    }
  }
</style>
