---
/**
 * InfoCard Component
 * Purpose: Informational cards for concepts, definitions, highlights
 *
 * @example
 * <InfoCard title="Â¿QuÃ© son los macarons?">
 *   Los macarons son delicados dulces franceses hechos con merengue,
 *   almendra molida y rellenos cremosos.
 * </InfoCard>
 *
 * @example with icon
 * <InfoCard title="Tip profesional" icon="ðŸ’¡" variant="tip">
 *   Reserva con 3 semanas de anticipaciÃ³n para mejores resultados.
 * </InfoCard>
 */

interface Props {
  title: string;
  icon?: string;
  variant?: 'default' | 'tip' | 'definition' | 'highlight';
}

const { title, icon, variant = 'default' } = Astro.props;

const defaultIcons = {
  default: 'ðŸ“Œ',
  tip: 'ðŸ’¡',
  definition: 'ðŸ“–',
  highlight: 'âœ¨'
};

const displayIcon = icon || defaultIcons[variant];
---

<article class={`info-card info-${variant}`}>
  <header class="info-header">
    {displayIcon && <span class="info-icon">{displayIcon}</span>}
    <h4 class="info-title">{title}</h4>
  </header>
  <div class="info-body">
    <slot />
  </div>
</article>

<style>
  .info-card {
    margin: 28px 0;
    padding: 24px;
    border-radius: 16px;
    background: var(--blanco, #ffffff);
    border: 1px solid rgba(0, 0, 0, 0.06);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.04);
  }

  .info-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 16px;
  }

  .info-icon {
    font-size: 1.5rem;
    line-height: 1;
  }

  .info-title {
    font-size: 1.05rem;
    font-weight: 700;
    color: var(--negro-suave, #2D3436);
    margin: 0;
    line-height: 1.3;
  }

  .info-body {
    font-size: 0.95rem;
    color: var(--gris-texto, #636E72);
    line-height: 1.7;
  }

  .info-body :global(p) {
    margin: 0;
  }

  .info-body :global(p + p) {
    margin-top: 12px;
  }

  /* Default variant */
  .info-default {
    background: var(--gris-claro, #F8F9FA);
    border-color: transparent;
  }

  /* Tip variant */
  .info-tip {
    background: linear-gradient(135deg, rgba(255, 230, 109, 0.1) 0%, rgba(255, 230, 109, 0.05) 100%);
    border-color: rgba(255, 230, 109, 0.3);
  }

  .info-tip .info-title {
    color: #e17055;
  }

  /* Definition variant */
  .info-definition {
    background: linear-gradient(135deg, rgba(116, 185, 255, 0.08) 0%, rgba(116, 185, 255, 0.03) 100%);
    border-color: rgba(116, 185, 255, 0.25);
    border-left: 4px solid #74B9FF;
  }

  .info-definition .info-title {
    color: #0984e3;
  }

  /* Highlight variant */
  .info-highlight {
    background: linear-gradient(135deg, rgba(233, 30, 140, 0.06) 0%, rgba(255, 107, 179, 0.03) 100%);
    border-color: rgba(233, 30, 140, 0.2);
    border-left: 4px solid var(--rosa-principal, #B31263);
  }

  .info-highlight .info-title {
    color: var(--rosa-principal, #B31263);
  }

  .info-highlight .info-body {
    color: var(--negro-suave, #2D3436);
  }

  @media (max-width: 480px) {
    .info-card {
      padding: 20px;
    }

    .info-icon {
      font-size: 1.25rem;
    }

    .info-title {
      font-size: 1rem;
    }
  }
</style>
