---
/**
 * CTABox Compatibility Wrapper
 * Keeps existing MDX imports while delegating to the standardized article CTA.
 */
import ArticleCTA from '@/components/content/ArticleCTA.astro';

interface Props {
  title: string;
  description?: string;
  buttonText: string;
  buttonUrl: string;
  variant?: 'default' | 'whatsapp' | 'subtle' | 'brand-whatsapp';
  icon?: string;
}

const { title, description, buttonText, buttonUrl, variant = 'default', icon } = Astro.props;
---

<ArticleCTA
  title={title}
  description={description}
  buttonText={buttonText}
  buttonUrl={buttonUrl}
  variant={variant}
  icon={icon}
/>
