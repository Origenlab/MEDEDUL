---
/**
 * ArticleCTA Component
 * Purpose: Unified CTA block for blog articles
 */

interface Props {
  title: string;
  description?: string;
  buttonText: string;
  buttonUrl: string;
  variant?: 'default' | 'whatsapp' | 'subtle' | 'brand-whatsapp';
  icon?: string;
}

const { title, description, buttonText, buttonUrl, variant = 'default', icon } = Astro.props;
const isExternal = buttonUrl.startsWith('http') || buttonUrl.startsWith('https://wa.me');
const isWhatsapp = variant === 'whatsapp' || variant === 'brand-whatsapp';
---

<aside class={`article-cta article-cta--${variant}`}>
  <div class="article-cta__content">
    {icon && <span class="article-cta__icon">{icon}</span>}
    <h4 class="article-cta__title">{title}</h4>
    {description && <p class="article-cta__description">{description}</p>}
  </div>

  <a
    href={buttonUrl}
    class="article-cta__button"
    target={isExternal ? '_blank' : undefined}
    rel={isExternal ? 'noopener noreferrer' : undefined}
  >
    {isWhatsapp && (
      <svg aria-hidden="true" viewBox="0 0 24 24" width="19" height="19" fill="currentColor">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347z"/>
      </svg>
    )}
    <span>{buttonText}</span>
  </a>
</aside>

<style>
  .article-cta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 24px;
    margin: 40px 0;
    padding: 32px;
    border-radius: 20px;
    position: relative;
    overflow: hidden;
  }

  .article-cta::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at top right, rgba(255, 255, 255, 0.12), transparent 58%);
    pointer-events: none;
  }

  .article-cta__content {
    position: relative;
    z-index: 1;
  }

  .article-cta__icon {
    display: block;
    font-size: 1.9rem;
    margin-bottom: 12px;
  }

  .article-cta__title {
    margin: 0 0 10px;
    font-size: 1.28rem;
    line-height: 1.32;
    font-weight: 700;
    color: inherit;
  }

  .article-cta__description {
    margin: 0;
    font-size: 0.98rem;
    line-height: 1.65;
    color: inherit;
    opacity: 0.92;
  }

  .article-cta__button {
    position: relative;
    z-index: 1;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 14px 28px;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    white-space: nowrap;
    flex-shrink: 0;
    font-size: 0.95rem;
    font-weight: 700;
    text-decoration: none !important;
    transition: transform 0.25s ease, box-shadow 0.25s ease;
  }

  .article-cta__button:visited {
    text-decoration: none !important;
  }

  .article-cta__button:hover {
    transform: translateY(-2px);
  }

  .article-cta--default,
  .article-cta--whatsapp,
  .article-cta--brand-whatsapp {
    background: linear-gradient(135deg, #121027 0%, #26163a 54%, #3d1852 100%);
    color: #ffffff;
    border: 1px solid rgba(209, 0, 122, 0.35);
    box-shadow: 0 14px 36px rgba(122, 43, 194, 0.25);
  }

  .article-cta--default .article-cta__button,
  .article-cta--whatsapp .article-cta__button,
  .article-cta--brand-whatsapp .article-cta__button {
    background: linear-gradient(135deg, #d1007a 0%, #7a2bc2 100%);
    color: #ffffff !important;
    box-shadow: 0 8px 24px rgba(209, 0, 122, 0.38);
  }

  .article-cta--default .article-cta__button:visited,
  .article-cta--whatsapp .article-cta__button:visited,
  .article-cta--brand-whatsapp .article-cta__button:visited {
    color: #ffffff !important;
  }

  .article-cta--default .article-cta__button:hover,
  .article-cta--whatsapp .article-cta__button:hover,
  .article-cta--brand-whatsapp .article-cta__button:hover {
    box-shadow: 0 12px 30px rgba(209, 0, 122, 0.44);
  }

  .article-cta--subtle {
    background: linear-gradient(135deg, rgba(209, 0, 122, 0.09) 0%, rgba(122, 43, 194, 0.1) 100%);
    color: var(--negro-suave, #2d3436);
    border: 1px solid rgba(122, 43, 194, 0.2);
    box-shadow: 0 8px 24px rgba(122, 43, 194, 0.08);
  }

  .article-cta--subtle::before {
    display: none;
  }

  .article-cta--subtle .article-cta__description {
    color: var(--gris-texto, #636e72);
    opacity: 1;
  }

  .article-cta--subtle .article-cta__button {
    background: linear-gradient(135deg, #d1007a 0%, #7a2bc2 100%);
    color: #ffffff !important;
    border-color: rgba(255, 255, 255, 0.42);
    box-shadow: 0 8px 20px rgba(122, 43, 194, 0.25);
  }

  .article-cta--subtle .article-cta__button:visited {
    color: #ffffff !important;
  }

  @media (max-width: 720px) {
    .article-cta {
      flex-direction: column;
      text-align: center;
      padding: 28px 22px;
      gap: 20px;
    }

    .article-cta__button {
      width: 100%;
      justify-content: center;
    }
  }
</style>
