---
/**
 * ProsCons Component
 * Purpose: Clear pros vs cons comparison
 *
 * @example
 * <ProsCons
 *   pros={[
 *     "Experiencia única para invitados",
 *     "Decoración elegante incluida",
 *     "Servicio profesional completo"
 *   ]}
 *   cons={[
 *     "Requiere espacio adicional",
 *     "Necesita planificación anticipada"
 *   ]}
 * />
 *
 * @example with custom titles
 * <ProsCons
 *   prosTitle="Ventajas"
 *   consTitle="Consideraciones"
 *   pros={["..."]}
 *   cons={["..."]}
 * />
 */

interface Props {
  pros: string[];
  cons: string[];
  prosTitle?: string;
  consTitle?: string;
  variant?: 'default' | 'compact';
}

const {
  pros,
  cons,
  prosTitle = 'Ventajas',
  consTitle = 'Desventajas',
  variant = 'default'
} = Astro.props;
---

<div class={`pros-cons pros-cons-${variant}`}>
  <div class="pros-section">
    <h5 class="section-title pros-title">
      <span class="section-icon">✅</span>
      {prosTitle}
    </h5>
    <ul class="pros-list">
      {pros.map((item) => (
        <li class="pros-item">
          <span class="item-icon">+</span>
          <span class="item-text">{item}</span>
        </li>
      ))}
    </ul>
  </div>
  <div class="cons-section">
    <h5 class="section-title cons-title">
      <span class="section-icon">⚠️</span>
      {consTitle}
    </h5>
    <ul class="cons-list">
      {cons.map((item) => (
        <li class="cons-item">
          <span class="item-icon">−</span>
          <span class="item-text">{item}</span>
        </li>
      ))}
    </ul>
  </div>
</div>

<style>
  .pros-cons {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin: 32px 0;
  }

  .pros-section,
  .cons-section {
    padding: 24px;
    border-radius: 16px;
  }

  .pros-section {
    background: linear-gradient(135deg, rgba(85, 239, 196, 0.1) 0%, rgba(85, 239, 196, 0.05) 100%);
    border: 1px solid rgba(85, 239, 196, 0.3);
  }

  .cons-section {
    background: linear-gradient(135deg, rgba(255, 140, 66, 0.08) 0%, rgba(255, 140, 66, 0.03) 100%);
    border: 1px solid rgba(255, 140, 66, 0.25);
  }

  .section-title {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 1rem;
    font-weight: 700;
    margin: 0 0 16px;
  }

  .section-icon {
    font-size: 1.1rem;
  }

  .pros-title {
    color: #00b894;
  }

  .cons-title {
    color: #e17055;
  }

  .pros-list,
  .cons-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .pros-item,
  .cons-item {
    display: flex;
    align-items: flex-start;
    gap: 10px;
    padding: 8px 0;
    font-size: 0.95rem;
    line-height: 1.5;
    color: var(--negro-suave, #2D3436);
  }

  .pros-item:not(:last-child),
  .cons-item:not(:last-child) {
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }

  .item-icon {
    flex-shrink: 0;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    font-weight: 700;
    font-size: 0.9rem;
  }

  .pros-item .item-icon {
    background: rgba(85, 239, 196, 0.3);
    color: #00b894;
  }

  .cons-item .item-icon {
    background: rgba(255, 140, 66, 0.25);
    color: #e17055;
  }

  .item-text {
    flex: 1;
  }

  /* Compact variant */
  .pros-cons-compact {
    gap: 16px;
  }

  .pros-cons-compact .pros-section,
  .pros-cons-compact .cons-section {
    padding: 20px;
  }

  .pros-cons-compact .section-title {
    font-size: 0.9rem;
    margin-bottom: 12px;
  }

  .pros-cons-compact .pros-item,
  .pros-cons-compact .cons-item {
    padding: 6px 0;
    font-size: 0.9rem;
  }

  .pros-cons-compact .item-icon {
    width: 18px;
    height: 18px;
    font-size: 0.8rem;
  }

  @media (max-width: 640px) {
    .pros-cons {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .pros-section,
    .cons-section {
      padding: 20px;
    }
  }
</style>
