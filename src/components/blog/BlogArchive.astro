---
import BlogPostCard from '@/components/blog/BlogPostCard.astro';
import BlogSidebar from '@/components/blog/BlogSidebar.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  posts: CollectionEntry<'blog'>[];
  featuredPosts: CollectionEntry<'blog'>[];
  categories: string[];
  currentPage: number;
  totalPages: number;
}

const { posts, featuredPosts, categories, currentPage, totalPages } = Astro.props;

const pageUrl = (page: number) => page <= 1 ? '/blog' : `/blog/pagina/${page}`;
---

<section class="blog-content">
  <div class="container">
    <div class="blog-layout">
      <div class="blog-main">
        {posts.length > 0 ? (
          <div class="posts-grid">
            {posts.map((post, index) => (
              <BlogPostCard post={post} index={index} />
            ))}
          </div>
        ) : (
          <div class="no-articles">
            <p>Pronto publicaremos articulos nuevos sobre mesas de dulces.</p>
          </div>
        )}

        {totalPages > 1 && (
          <nav class="pagination" aria-label="Paginacion del blog">
            <a class:list={['page-link', { disabled: currentPage === 1 }]} href={currentPage === 1 ? '#' : pageUrl(currentPage - 1)}>Anterior</a>
            {Array.from({ length: totalPages }, (_, i) => i + 1).map(page => (
              <a class:list={['page-link', 'page-number', { active: page === currentPage }]} href={pageUrl(page)}>{page}</a>
            ))}
            <a class:list={['page-link', { disabled: currentPage === totalPages }]} href={currentPage === totalPages ? '#' : pageUrl(currentPage + 1)}>Siguiente</a>
          </nav>
        )}
      </div>

      <BlogSidebar featuredPosts={featuredPosts} categories={categories} />
    </div>
  </div>
</section>

<style>
  .blog-content {
    padding: 50px 0 70px;
    background:
      radial-gradient(circle at 100% 0%, rgba(116, 185, 255, 0.12), transparent 38%),
      radial-gradient(circle at 0% 100%, rgba(85, 239, 196, 0.11), transparent 36%),
      var(--gris-claro);
  }

  .blog-layout {
    display: grid;
    grid-template-columns: minmax(0, 1fr) 320px;
    gap: 30px;
    align-items: start;
    max-width: 1400px;
    margin: 0 auto;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 22px;
  }

  .pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 8px;
    margin-top: 28px;
    flex-wrap: wrap;
  }

  .page-link {
    min-width: 38px;
    height: 38px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0 12px;
    border-radius: 10px;
    text-decoration: none;
    color: var(--texto-oscuro);
    background: #fff;
    border: 1px solid rgba(0, 0, 0, 0.08);
    font-size: 0.88rem;
    font-weight: 600;
  }

  .page-link.active {
    background: var(--rosa-principal);
    color: #fff;
    border-color: var(--rosa-principal);
  }

  .page-link.disabled {
    opacity: 0.45;
    pointer-events: none;
  }

  @media (max-width: 1280px) {
    .posts-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (max-width: 1024px) {
    .blog-layout {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
