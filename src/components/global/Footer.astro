          <path d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2z"/>
          <polyline points="9 22 9 12 15 12 15 22"/>
        </svg>
        <h3>Nuestras Sucursales</h3>
      </div>
      <div class="footer__sucursales-grid">
        {sucursales.map(suc => (
          <div class="footer__sucursal">
            <div class="footer__sucursal-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z"/>
                <circle cx="12" cy="10" r="3"/>
              </svg>
            </div>
            <div class="footer__sucursal-info">
              <h4 class="footer__sucursal-nombre">{suc.nombre}</h4>
              <p class="footer__sucursal-direccion">{suc.direccion}</p>
              <p class="footer__sucursal-colonia">{suc.colonia}</p>
              <p class="footer__sucursal-ciudad">{suc.ciudad}</p>
              <div class="footer__sucursal-detalles">
                <span class="footer__sucursal-tel">
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 16.92v3a2 2 0 01-2.18 2 19.79 19.79 0 01-8.63-3.07 19.5 19.5 0 01-6-6 19.79 19.79 0 01-3.07-8.67A2 2 0 014.11 2h3a2 2 0 012 1.72 12.84 12.84 0 00.7 2.81 2 2 0 01-.45 2.11L8.09 9.91a16 16 0 006 6l1.27-1.27a2 2 0 012.11-.45 12.84 12.84 0 002.81.7A2 2 0 0122 16.92z"/>
                  </svg>
                  {suc.telefono}
                </span>
                <span class="footer__sucursal-horario">
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"/>
                    <polyline points="12 6 12 12 16 14"/>
                  </svg>
                  {suc.horario}
                </span>
              </div>
              <a href={suc.mapsUrl} target="_blank" rel="noopener noreferrer" class="footer__sucursal-link">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M18 13v6a2 2 0 01-2 2H5a2 2 0 01-2-2V8a2 2 0 012-2h6"/>
                  <polyline points="15 3 21 3 21 9"/>
                  <line x1="10" y1="14" x2="21" y2="3"/>
                </svg>
                Ver en Google Maps
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Zones Section -->
  <div class="footer__zones">
    <div class="footer__container">
      <div class="footer__zones-header">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z"/>
          <circle cx="12" cy="10" r="3"/>
        </svg>
        <span>Servicio en toda la CDMX y Área Metropolitana</span>
      </div>
      <div class="footer__zones-grid">
        {zonas.map(zona => (
          <div class="footer__zone">
            <h5 class="footer__zone-title">Zona {zona.nombre}</h5>
            <ul class="footer__zone-list">
              {zona.areas.map(area => (
                <li>{area}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="footer__bottom">
    <div class="footer__container">
      <div class="footer__bottom-content">
        <p class="footer__copyright">
          &copy; {currentYear} <strong>Mededul</strong> - Mesas de Dulces CDMX. Todos los derechos reservados.
        </p>
        <div class="footer__bottom-links">
          <a href="/aviso-privacidad">Privacidad</a>
          <span class="footer__link-divider"></span>
          <a href="/terminos-condiciones">Términos</a>
          <span class="footer__link-divider"></span>
          <a href="/sitemap.xml">Sitemap</a>
          <span class="footer__link-divider"></span>
          <a href="/#faq">FAQ</a>
        </div>
        <p class="footer__made">
          Hecho con <span class="footer__heart">♥</span> en CDMX
        </p>
      </div>
    </div>
  </div>
</footer>

<style>
  /* =====================================================
     FOOTER COMPONENT - Professional Modern Design
     ===================================================== */

  .footer {
    background: linear-gradient(180deg, #2d2d3a 0%, #1e1e28 100%);
    color: #ffffff;
  }

  .footer__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  /* =========================
     MAIN SECTION
     ========================= */
  .footer__main {
    padding: 70px 0 50px;
  }

  .footer__main .footer__container {
    display: grid;
    grid-template-columns: 1.2fr 2fr;
    gap: 60px;
  }

  /* Brand Column */
  .footer__brand {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .footer__logo {
    display: flex;
    flex-direction: column;
    text-decoration: none;
  }

  .footer__logo-text {
    font-family: 'Pacifico', cursive;
    font-size: 2.2rem;
    color: var(--rosa-principal, #D1007A);
    line-height: 1;
  }

  .footer__logo-sub {
    font-family: 'Poppins', sans-serif;
    font-size: 0.85rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.7);
    letter-spacing: 2px;
    text-transform: uppercase;
    margin-top: 4px;
  }

  .footer__tagline {
    font-size: 0.95rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.7);
    margin: 0;
    max-width: 300px;
  }

  /* Social Links */
  .footer__social {
    display: flex;
    gap: 12px;
    margin-top: 8px;
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 42px;
    height: 42px;
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.08);
    color: rgba(255, 255, 255, 0.8);
    transition: all 0.3s ease;
  }

  .footer__social-link:hover {
    background: var(--rosa-principal, #D1007A);
    color: #ffffff;
    transform: translateY(-3px);
  }

  .footer__social-link--whatsapp:hover {
    background: #25D366;
  }

  /* Contact Quick */
  .footer__contact-quick {
    display: flex;
    flex-direction: column;
    gap: 10px;
    margin-top: 12px;
    padding-top: 20px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer__phone,
  .footer__email {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s ease;
  }

  .footer__phone:hover,
  .footer__email:hover {
    color: var(--rosa-principal, #D1007A);
  }

  .footer__phone svg,
  .footer__email svg {
    color: var(--rosa-principal, #D1007A);
    flex-shrink: 0;
  }

  /* =========================
     NAVIGATION
     ========================= */
  .footer__nav {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 32px;
  }

  .footer__nav-col {
    display: flex;
    flex-direction: column;
  }

  .footer__nav-title {
    font-family: 'Poppins', sans-serif;
    font-size: 0.9rem;
    font-weight: 600;
    color: #ffffff;
    margin: 0 0 20px 0;
    padding-bottom: 12px;
    border-bottom: 2px solid var(--rosa-principal, #D1007A);
    display: inline-block;
    width: fit-content;
  }

  .footer__nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .footer__nav-list li a {
    color: rgba(255, 255, 255, 0.65);
    text-decoration: none;
    font-size: 0.88rem;
    transition: all 0.2s ease;
    display: inline-block;
    position: relative;
  }

  .footer__nav-list li a::before {
    content: '';
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 0;
    height: 1px;
    background: var(--rosa-principal, #D1007A);
    transition: width 0.3s ease;
  }

  .footer__nav-list li a:hover {
    color: #ffffff;
    padding-left: 8px;
  }

  .footer__nav-list li a:hover::before {
    width: 100%;
  }

  /* =========================
     SUCURSALES SECTION
     ========================= */
  .footer__sucursales {
    background: rgba(0, 0, 0, 0.15);
    padding: 40px 0;
    border-top: 1px solid rgba(255, 255, 255, 0.06);
  }

  .footer__sucursales-header {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    margin-bottom: 32px;
  }

  .footer__sucursales-header svg {
    color: var(--rosa-principal, #D1007A);
  }

  .footer__sucursales-header h3 {
    font-family: 'Poppins', sans-serif;
    font-size: 1.2rem;
    font-weight: 600;
    color: #ffffff;
    margin: 0;
  }

  .footer__sucursales-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
    max-width: 900px;
    margin: 0 auto;
  }

  .footer__sucursal {
    display: flex;
    gap: 16px;
    padding: 24px;
    background: rgba(255, 255, 255, 0.04);
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.08);
    transition: all 0.3s ease;
  }

  .footer__sucursal:hover {
    background: rgba(255, 255, 255, 0.07);
    border-color: rgba(209, 0, 122, 0.3);
    transform: translateY(-2px);
  }

  .footer__sucursal-icon {
