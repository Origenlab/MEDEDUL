        </div>

        <!-- Contact Quick -->
        <div class="footer__contact-quick">
          <a href="tel:+525525226442" class="footer__phone">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
