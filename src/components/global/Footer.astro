---

<footer class="footer">
  <!-- Main Footer -->
  <div class="footer__main">
    <div class="footer__container">
      <!-- Brand Column -->
      <div class="footer__brand">
        <a href="/" class="footer__logo">
          <span class="footer__logo-text">Mededul</span>
          <span class="footer__logo-sub">Mesas de Dulces</span>
        </a>
        <p class="footer__tagline">
