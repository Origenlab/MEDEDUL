      <!-- Navigation Columns -->
      <div class="footer__nav">
        <div class="footer__nav-col">
          <h4 class="footer__nav-title">Servicios</h4>
          <ul class="footer__nav-list">
            {serviciosLinks.map(link => (
              <li><a href={link.href}>{link.label}</a></li>
            ))}
          </ul>
        </div>

        <div class="footer__nav-col">
          <h4 class="footer__nav-title">Eventos</h4>
          <ul class="footer__nav-list">
            {eventosLinks.map(link => (
              <li><a href={link.href}>{link.label}</a></li>
            ))}
          </ul>
        </div>

        <div class="footer__nav-col">
          <h4 class="footer__nav-title">Estaciones</h4>
          <ul class="footer__nav-list">
            {estacionesLinks.map(link => (
              <li><a href={link.href}>{link.label}</a></li>
            ))}
          </ul>
        </div>

        <div class="footer__nav-col">
          <h4 class="footer__nav-title">Empresa</h4>
          <ul class="footer__nav-list">
            {empresaLinks.map(link => (
              <li><a href={link.href}>{link.label}</a></li>
            ))}
          </ul>
        </div>

        <div class="footer__nav-col">
          <h4 class="footer__nav-title">Legal</h4>
          <ul class="footer__nav-list">
            {legalLinks.map(link => (
              <li><a href={link.href}>{link.label}</a></li>
            ))}
          </ul>
        </div>
      </div>
    </div>
