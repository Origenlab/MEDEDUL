---
/**
 * EventsGrid Component - Grid de Eventos/Servicios
 * =================================================
 * Componente reutilizable para mostrar grid de ServiceCards.
 * Usa el mismo diseño profesional del index.
 *
 * Usage:
 * <EventsGrid
 *   badge="Versatilidad Total"
 *   title="Tu Mesa de Dulces para"
 *   titleHighlight="Cualquier Evento"
 *   subtitle="Descripcion de la seccion"
 *   events={[
 *     { title: "Bodas", excerpt: "...", img: "RUTA_DE_IMAGEN", href: "/ruta-ejemplo", badge: "Popular", cta: "Ver mas" }
 *   ]}
 * />
 */

interface Event {
  title: string;
  excerpt: string;
  img: string;
  href: string;
  badge?: string;
  cta?: string;
  alt?: string;
}

interface Props {
  badge?: string;
  title: string;
  titleHighlight?: string;
  subtitle?: string;
  events: Event[];
  id?: string;
}

const {
  badge,
  title,
  titleHighlight,
  subtitle,
  events,
  id
} = Astro.props;

import { getCdnUrl } from '@/lib/cdn';
import ServiceCard from '@/components/global/ServiceCard.astro';

// Procesar titulo con highlight
const renderTitle = () => {
  if (titleHighlight) {
    return `${title} <span>${titleHighlight}</span>`;
  }
  return title;
};
---

<section class="events-section" id={id}>
  <div class="container">
    <!-- Header -->
    <div class="events-header">
      {badge && <span class="events-badge">{badge}</span>}
      <h2 class="events-title" set:html={renderTitle()} />
      {subtitle && <p class="events-subtitle">{subtitle}</p>}
    </div>

    <!-- Grid usando ServiceCard -->
    <div class="service-grid">
      {events.map(event => (
        <ServiceCard
          href={event.href}
          image={getCdnUrl(event.img)}
          alt={event.alt || event.title}
          title={event.title}
          excerpt={event.excerpt}
          cta={event.cta || 'Ver más'}
          badge={event.badge}
        />
      ))}
    </div>
  </div>
</section>

<style>
  /* =====================================================
     EVENTS GRID COMPONENT - Usa service-grid del sitio
     ===================================================== */

  .events-section {
    padding: 100px 0;
    background: linear-gradient(180deg, #fff 0%, #fdf8fa 100%);
  }

  /* Header */
  .events-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 60px;
  }

  .events-badge {
    display: inline-block;
    padding: 8px 20px;
    background: linear-gradient(135deg, var(--rosa-principal, #D1007A) 0%, #A0005F 100%);
    border-radius: 50px;
    font-size: 0.85rem;
    font-weight: 600;
    color: #fff;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 20px;
  }

  .events-title {
    font-family: 'Poppins', sans-serif;
    font-size: clamp(1.8rem, 4vw, 2.2rem);
    font-weight: 700;
    color: var(--texto-oscuro, #1a1a1a);
    line-height: 1.3;
    margin: 0 0 15px 0;
  }

  .events-title :global(span) {
    color: var(--rosa-principal, #D1007A);
  }

  .events-subtitle {
    font-size: 1.1rem;
    color: var(--texto-light, #666);
    line-height: 1.7;
    margin: 0;
  }

  /* Grid - hereda estilos globales de service-grid */
  .service-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
  }

  /* ========================
     RESPONSIVE
     ======================== */
  @media (max-width: 1200px) {
    .service-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 1024px) {
    .service-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .events-header {
      margin-bottom: 50px;
    }
  }

  @media (max-width: 768px) {
    .events-section {
      padding: 70px 0;
    }

    .events-header {
      margin-bottom: 40px;
    }

    .events-subtitle {
      font-size: 1rem;
    }

    .service-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }
  }

  @media (max-width: 480px) {
    .events-section {
      padding: 60px 0;
    }
  }
</style>
