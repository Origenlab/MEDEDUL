<style>
  /* =====================================================
     TOP BAR - Professional design
     ===================================================== */
  .top-bar {
    background: #1a1a1a;
    padding: 10px 0;
    min-height: 38px;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1001;
  }

  .top-bar .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 30px;
  }

  .top-bar__content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 20px;
    min-height: 18px;
  }

  /* Brand Section */
  .top-bar__brand {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .top-bar__icon {
    font-size: 16px;
    line-height: 1;
  }

  .top-bar__name {
    color: #ffffff;
    font-weight: 700;
    font-size: 14px;
    letter-spacing: 0.3px;
  }

  /* Contact Section */
  .top-bar__contact {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .top-bar__link,
  .top-bar__location {
    display: flex;
    align-items: center;
    gap: 6px;
    color: rgba(255, 255, 255, 0.9);
    font-size: 13px;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .top-bar__link:hover {
    color: #f7a7cd;
  }

  .top-bar__link svg,
  .top-bar__location svg {
    flex-shrink: 0;
    opacity: 0.8;
  }

  .top-bar__location {
    color: rgba(255, 255, 255, 0.82);
    font-weight: 500;
  }

  /* Social Icons */
  .top-bar__social {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-left: 8px;
    padding-left: 16px;
    border-left: 1px solid rgba(255, 255, 255, 0.15);
  }

  .top-bar__social a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    color: #ffffff;
    transition: all 0.2s ease;
  }

  .top-bar__social a:hover {
    background: #D1007A;
    transform: translateY(-2px);
  }

  .top-bar__social a svg {
    width: 12px;
    height: 12px;
  }

  /* =====================================================
     RESPONSIVE - Tablet
     ===================================================== */
  @media (max-width: 1024px) {
    .top-bar__link--email span {
      display: none;
    }
  }

  /* =====================================================
     RESPONSIVE - Mobile
     ===================================================== */
  @media (max-width: 768px) {
    .top-bar {
      padding: 8px 0;
      min-height: 34px;
    }

    .top-bar .container {
      padding: 0 16px;
    }

    .top-bar__content {
      gap: 12px;
    }

    .top-bar__brand {
      gap: 6px;
    }

    .top-bar__name {
      font-size: 12px;
    }

    .top-bar__contact {
      gap: 10px;
    }

    .top-bar__link span,
    .top-bar__location span {
      display: none;
    }

    .top-bar__link svg,
    .top-bar__location svg {
      width: 16px;
      height: 16px;
    }

    .top-bar__social {
      gap: 6px;
      margin-left: 4px;
      padding-left: 10px;
    }

    .top-bar__social a {
      width: 32px;
      height: 32px;
      min-width: 32px;
      min-height: 32px;
    }

    .top-bar__social a svg {
      width: 14px;
      height: 14px;
    }
  }

  /* =====================================================
     RESPONSIVE - Small Mobile
     ===================================================== */
  @media (max-width: 480px) {
    .top-bar {
      padding: 6px 0;
      min-height: 30px;
    }

    .top-bar .container {
      padding: 0 12px;
    }

    .top-bar__icon {
      font-size: 14px;
    }

    .top-bar__name {
      font-size: 11px;
    }

    .top-bar__link--email {
      display: none;
    }

    .top-bar__social a {
      width: 30px;
      height: 30px;
      min-width: 30px;
      min-height: 30px;
    }
  }

  /* =====================================================
     RESPONSIVE - Very Small
     ===================================================== */
  @media (max-width: 380px) {
    .top-bar__location {
      display: none;
    }

    .top-bar__social {
      border-left: none;
      padding-left: 6px;
      margin-left: 0;
    }
  }
</style>
