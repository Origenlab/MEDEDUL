---
/**
 * PricingPackages Component - Seccion de Paquetes/Precios
 * ========================================================
 * Componente reutilizable para mostrar paquetes de precios
 * con dise√±o de tarjetas profesional.
 *
 * Usage:
 * <PricingPackages
 *   badge="Nuestros Paquetes"
 *   title="Elige el"
 *   titleHighlight="Paquete Ideal"
 *   subtitle="Opciones flexibles para tu evento"
 *   packages={[
 *     {
 *       name: "Esencial",
 *       icon: "üç¨",
 *       price: "$4,500",
 *       currency: "MXN",
 *       guests: "30-50 personas",
 *       tagline: "Ideal para eventos intimos",
 *       features: ["Feature 1", "Feature 2"],
 *       popular: false,
 *       ctaText: "Cotizar Paquete",
 *       ctaUrl: "https://wa.me/..."
 *     }
 *   ]}
 *   note="Texto opcional al final"
 * />
 */

interface Package {
  name: string;
  icon: string;
  price: string;
  currency?: string;
  guests: string;
  tagline: string;
  features: string[];
  popular?: boolean;
  ctaText?: string;
  ctaUrl: string;
}

interface Props {
  badge?: string;
  title: string;
  titleHighlight?: string;
  subtitle?: string;
  packages: Package[];
  note?: string;
  id?: string;
}

const {
  badge = "Nuestros Paquetes",
  title,
  titleHighlight,
  subtitle,
  packages,
  note,
  id
} = Astro.props;

// Procesar titulo con highlight
const renderTitle = () => {
  if (titleHighlight) {
    return `${title} <span>${titleHighlight}</span>`;
  }
  return title;
};
---

<section class="pricing-section" id={id}>
  <div class="container">
    <!-- Header -->
    <div class="pricing-header">
      <span class="pricing-badge">{badge}</span>
      <h2 class="pricing-title" set:html={renderTitle()} />
      {subtitle && <p class="pricing-subtitle">{subtitle}</p>}
    </div>

    <!-- Packages Grid -->
    <div class="pricing-grid">
      {packages.map((pkg) => (
        <article class:list={['pricing-card', { 'pricing-card--popular': pkg.popular }]}>
          {pkg.popular && (
            <div class="pricing-ribbon">
              <span>Mas Popular</span>
            </div>
          )}

          <div class="pricing-card__top">
            <div class="pricing-card__icon">
              <span>{pkg.icon}</span>
            </div>
            <h3 class="pricing-card__name">{pkg.name}</h3>
            <p class="pricing-card__tagline">{pkg.tagline}</p>
          </div>

          <div class="pricing-card__price">
            <div class="price-wrapper">
              <span class="price-label">Desde</span>
              <span class="price-amount">{pkg.price}</span>
              <span class="price-currency">{pkg.currency || 'MXN'}</span>
            </div>
            <div class="price-guests">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                <circle cx="9" cy="7" r="4"/>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
              </svg>
              <span>{pkg.guests}</span>
            </div>
          </div>

          <div class="pricing-card__separator">
            <span>Incluye</span>
          </div>

          <ul class="pricing-card__features">
            {pkg.features.map((feature) => (
              <li>
                <span class="feature-icon">
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3">
                    <polyline points="20 6 9 17 4 12"/>
                  </svg>
                </span>
                <span class="feature-text">{feature}</span>
              </li>
            ))}
          </ul>

          <a href={pkg.ctaUrl} class="pricing-card__cta" target="_blank" rel="noopener">
            <span>{pkg.ctaText || 'Cotizar Paquete'}</span>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
        </article>
      ))}
    </div>

    {note && (
      <p class="pricing-note" set:html={note} />
    )}
  </div>
</section>

<style>
  /* =====================================================
     PRICING PACKAGES COMPONENT
     ===================================================== */

  .pricing-section {
    padding: 100px 0;
    background: linear-gradient(180deg, #fff 0%, #fdf8fa 100%);
  }

  /* Header */
  .pricing-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 60px;
  }

  .pricing-badge {
    display: inline-block;
    padding: 10px 24px;
    background: rgba(209, 0, 122, 0.1);
    border: 1px solid rgba(209, 0, 122, 0.2);
    border-radius: 50px;
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--rosa-principal, #D1007A);
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 24px;
  }

  .pricing-title {
    font-family: 'Poppins', sans-serif;
    font-size: clamp(2rem, 4vw, 2.8rem);
    font-weight: 700;
    color: var(--texto-oscuro, #1a1a1a);
    line-height: 1.2;
    margin: 0 0 20px 0;
  }

  .pricing-title :global(span) {
    color: var(--rosa-principal, #D1007A);
  }

  .pricing-subtitle {
    font-size: 1.1rem;
    color: var(--texto-light, #666);
    line-height: 1.7;
    margin: 0;
  }

  /* Grid */
  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
    max-width: 1200px;
    margin: 0 auto;
    align-items: stretch;
  }

  /* Card Base */
  .pricing-card {
    background: #ffffff;
    border-radius: 24px;
    padding: 0;
    position: relative;
    border: 2px solid #f0f0f0;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.06);
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  /* Card Popular */
  .pricing-card--popular {
    background: linear-gradient(135deg, var(--rosa-principal, #D1007A) 0%, #A0005F 100%);
    border: 3px solid var(--rosa-principal, #D1007A);
    box-shadow:
      0 0 0 4px rgba(209, 0, 122, 0.1),
      0 20px 60px rgba(209, 0, 122, 0.25);
    transform: scale(1.03);
    z-index: 2;
  }

  /* Ribbon */
  .pricing-ribbon {
    position: absolute;
    top: 24px;
    right: -35px;
    background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
    color: #000;
    padding: 8px 50px;
    font-size: 0.7rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 1px;
    transform: rotate(45deg);
    box-shadow: 0 4px 15px rgba(255, 165, 0, 0.4);
    z-index: 10;
  }

  /* Card Top */
  .pricing-card__top {
    padding: 40px 32px 28px;
    text-align: center;
    background: linear-gradient(180deg, #fafafa 0%, #ffffff 100%);
    border-bottom: 1px solid #f0f0f0;
  }

  .pricing-card--popular .pricing-card__top {
    background: transparent;
    border-bottom: 1px solid rgba(255, 255, 255, 0.15);
  }

  .pricing-card__icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 20px;
    background: #ffffff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
    border: 3px solid #f5f5f5;
  }

  .pricing-card--popular .pricing-card__icon {
    border-color: rgba(255, 255, 255, 0.3);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
  }

  .pricing-card__icon span {
    font-size: 2.5rem;
    line-height: 1;
  }

  .pricing-card__name {
    font-family: 'Poppins', sans-serif;
    font-size: 1.6rem;
    font-weight: 800;
    color: var(--texto-oscuro, #1a1a1a);
    margin: 0 0 8px 0;
    letter-spacing: -0.5px;
  }

  .pricing-card--popular .pricing-card__name {
    color: #ffffff;
  }

  .pricing-card__tagline {
    font-size: 0.9rem;
    color: #888;
    margin: 0;
    line-height: 1.4;
  }

  .pricing-card--popular .pricing-card__tagline {
    color: rgba(255, 255, 255, 0.85);
  }

  /* Price Section */
  .pricing-card__price {
    padding: 28px 32px;
    text-align: center;
    background: #ffffff;
  }

  .pricing-card--popular .pricing-card__price {
    background: transparent;
  }

  .price-wrapper {
    display: flex;
    align-items: baseline;
    justify-content: center;
    gap: 6px;
    margin-bottom: 12px;
  }

  .price-label {
    font-size: 0.85rem;
    font-weight: 500;
    color: #999;
  }

  .pricing-card--popular .price-label {
    color: rgba(255, 255, 255, 0.7);
  }

  .price-amount {
    font-family: 'Poppins', sans-serif;
    font-size: 2.8rem;
    font-weight: 800;
    line-height: 1;
    color: var(--rosa-principal, #D1007A);
  }

  .pricing-card--popular .price-amount {
    color: #ffffff;
  }

  .price-currency {
    font-size: 0.9rem;
    font-weight: 600;
    color: #999;
  }

  .pricing-card--popular .price-currency {
    color: rgba(255, 255, 255, 0.7);
  }

  .price-guests {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 20px;
    background: #f8f8f8;
    border-radius: 50px;
    font-size: 0.85rem;
    font-weight: 600;
    color: #666;
  }

  .pricing-card--popular .price-guests {
    background: rgba(255, 255, 255, 0.15);
    color: #ffffff;
  }

  .price-guests svg {
    color: var(--rosa-principal, #D1007A);
  }

  .pricing-card--popular .price-guests svg {
    color: #ffffff;
  }

  /* Separator */
  .pricing-card__separator {
    position: relative;
    padding: 0 32px;
    margin: 0;
    text-align: center;
  }

  .pricing-card__separator::before {
    content: '';
    position: absolute;
    left: 32px;
    right: 32px;
    top: 50%;
    height: 1px;
    background: #eee;
  }

  .pricing-card--popular .pricing-card__separator::before {
    background: rgba(255, 255, 255, 0.15);
  }

  .pricing-card__separator span {
    position: relative;
    display: inline-block;
    padding: 8px 16px;
    background: #ffffff;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: #ccc;
  }

  .pricing-card--popular .pricing-card__separator span {
    background: #b5006c;
    color: rgba(255, 255, 255, 0.7);
  }

  /* Features */
  .pricing-card__features {
    list-style: none;
    padding: 24px 32px 28px;
    margin: 0;
    flex: 1;
    background: #ffffff;
  }

  .pricing-card--popular .pricing-card__features {
    background: transparent;
  }

  .pricing-card__features li {
    display: flex;
    align-items: flex-start;
    gap: 14px;
    margin-bottom: 16px;
    font-size: 0.92rem;
    line-height: 1.5;
  }

  .pricing-card__features li:last-child {
    margin-bottom: 0;
  }

  .feature-icon {
    flex-shrink: 0;
    width: 24px;
    height: 24px;
    background: linear-gradient(135deg, var(--rosa-principal, #D1007A) 0%, #A0005F 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .pricing-card--popular .feature-icon {
    background: rgba(255, 255, 255, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .feature-icon svg {
    color: #ffffff;
  }

  .feature-text {
    color: #555;
    padding-top: 2px;
  }

  .pricing-card--popular .feature-text {
    color: rgba(255, 255, 255, 0.95);
  }

  /* CTA Button */
  .pricing-card__cta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    margin: 0 24px 24px;
    padding: 18px 28px;
    border-radius: 14px;
    font-family: 'Poppins', sans-serif;
    font-size: 1rem;
    font-weight: 700;
    text-decoration: none;
    text-align: center;
    background: linear-gradient(135deg, var(--rosa-principal, #D1007A) 0%, #A0005F 100%);
    color: #ffffff;
    box-shadow: 0 6px 25px rgba(209, 0, 122, 0.35);
  }

  .pricing-card--popular .pricing-card__cta {
    background: #ffffff;
    color: var(--rosa-principal, #D1007A);
    box-shadow: 0 6px 25px rgba(0, 0, 0, 0.15);
  }

  .pricing-card__cta svg {
    flex-shrink: 0;
  }

  /* Note */
  .pricing-note {
    text-align: center;
    font-size: 0.95rem;
    color: var(--texto-light, #666);
    margin-top: 60px;
    padding: 20px 30px;
    background: #fff;
    border: 1px solid rgba(209, 0, 122, 0.1);
    border-radius: 16px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .pricing-note :global(strong) {
    color: var(--rosa-principal, #D1007A);
  }

  /* ========================
     RESPONSIVE
     ======================== */
  @media (max-width: 1024px) {
    .pricing-grid {
      grid-template-columns: 1fr;
      max-width: 480px;
      gap: 32px;
    }

    .pricing-card--popular {
      transform: none;
    }
  }

  @media (max-width: 768px) {
    .pricing-section {
      padding: 70px 0;
    }

    .pricing-grid {
      max-width: 100%;
    }

    .pricing-card__top {
      padding: 32px 24px 24px;
    }

    .pricing-card__icon {
      width: 70px;
      height: 70px;
    }

    .pricing-card__icon span {
      font-size: 2rem;
    }

    .pricing-card__name {
      font-size: 1.4rem;
    }

    .pricing-card__price {
      padding: 24px;
    }

    .price-amount {
      font-size: 2.4rem;
    }

    .pricing-card__features {
      padding: 20px 24px 24px;
    }

    .pricing-card__cta {
      margin: 0 20px 20px;
      padding: 16px 24px;
    }

    .pricing-ribbon {
      top: 20px;
      right: -38px;
      font-size: 0.65rem;
      padding: 6px 45px;
    }
  }

  @media (max-width: 480px) {
    .pricing-card__top {
      padding: 28px 20px 20px;
    }

    .pricing-card__icon {
      width: 64px;
      height: 64px;
    }

    .pricing-card__icon span {
      font-size: 1.8rem;
    }

    .pricing-card__name {
      font-size: 1.3rem;
    }

    .pricing-card__tagline {
      font-size: 0.85rem;
    }

    .pricing-card__price {
      padding: 20px;
    }

    .price-amount {
      font-size: 2.2rem;
    }

    .price-guests {
      padding: 8px 16px;
      font-size: 0.8rem;
    }

    .pricing-card__separator {
      padding: 0 20px;
    }

    .pricing-card__separator::before {
      left: 20px;
      right: 20px;
    }

    .pricing-card__features {
      padding: 18px 20px 22px;
    }

    .pricing-card__features li {
      gap: 12px;
      font-size: 0.88rem;
      margin-bottom: 14px;
    }

    .feature-icon {
      width: 22px;
      height: 22px;
    }

    .feature-icon svg {
      width: 12px;
      height: 12px;
    }

    .pricing-card__cta {
      margin: 0 16px 16px;
      padding: 14px 20px;
      font-size: 0.95rem;
      border-radius: 12px;
    }

    .pricing-note {
      padding: 16px 20px;
      font-size: 0.9rem;
      margin-top: 40px;
    }
  }
</style>
